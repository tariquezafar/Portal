@{
    ViewBag.Title = "Add/Edit UOM";
    Layout = "~/Views/Shared/_SuperadminLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Company/SuperAdminDashboard">Control Panel</a> >> Add/Edit UOM</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditUOM" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtUOMName" class="col-sm-4 control-label">UOM Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtUOMName" name="txtUOMName" tabindex="1" placeholder="Enter UOM Name" type="text" maxlength="100" />
                        <input id="hdnUOMId" type="hidden" value="@ViewData["uomId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtUOMDesc" class="col-sm-4 control-label">UOM Desc&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtUOMDesc" name="txtUOMDesc" type="text" tabindex="2" placeholder="Enter UOM Desc" maxlength="10" class="form-control" />
                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="chkStatus" class="col-sm-4 control-label">Active Status</label>
                    <div class="col-sm-8">
                        <input type="checkbox" name="chkStatus" id="chkStatus" tabindex="3" class="" checked="checked" />
                        <label style="font-size: 24px; " for="chkStatus"></label>
                    </div>
                    </div>
                </div>
             
                 
                     
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Save" alt="Save" id="btnSave" onclick="SaveData(1)" tabindex="4" type="button" border="0"> 
                                <input class="btn btn-success" value="Update" style="display:none;" alt="Update" id="btnUpdate" tabindex="4" onclick="SaveData(2)" type="button" border="0"> 
                                <a class="btn btn-success" id="btnList" href="@Url.Content("~/UOM/AddEditUOM")" tabindex="5">Reset</a>
                                @*<input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" tabindex="5" /> &nbsp;&nbsp;*@
                                @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                                <a class="btn btn-success" id="btnList" href="@Url.Content("~/UOM/ListUOM")" tabindex="6">Search UOM</a>
                            </center>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/UOM/AddUOM.js"></script>
