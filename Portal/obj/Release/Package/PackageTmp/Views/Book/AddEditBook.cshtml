@{
    ViewBag.Title = "Add Book";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
 <link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
  fieldset.scheduler-border {
    border: 1px groove #ddd !important;
    padding: 0 1.4em 1.4em 1.4em !important;
    margin: 0 0 1.5em 0 !important;
    -webkit-box-shadow: 0px 0px 0px 0px #000;
    box-shadow: 0px 0px 0px 0px #000;
}
  legend {
    display: block;
    width: 37%;
    padding: 0;
    margin-bottom: 20px;
    font-size: 21px;
    line-height: inherit;
    color: #333;
    border: 0;
    border-bottom: 0px solid #e5e5e5;
}
</style>
 
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AccountDashboard">Account</a> >> Add/Edit Book </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditLeadSource" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
                <div class="col-md-12 ftop">
                    <div class="form-group col-md-4"> 
                        <label for="ddlBookType" class="col-sm-4 control-label">Book Type&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <select id="ddlBookType" name="ddlBookType" style="width: 100%;height:35px;" tabindex="1"  onChange="changeBookType()">
                                <option value="0">Select Book Type</option>
                                <option value="B">Bank</option>
                                <option value="C">Cash</option>
                                <option value="JV">JV</option>
                                <option value="S">Sale</option>
                                <option value="P">Purchase</option>
                                <option value="CN">Credit Note</option>
                                <option value="DN">Debit Note</option>
                            </select>
                        </div>  
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtGLHead" class="col-sm-4 control-label">GL Head&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <input id="txtGLHead" name="txtGLHead" tabindex="2" placeholder="Enter GL Head" type="text" class="form-control" />
                            <input id="hdnGLCode" type="hidden" value="" />
                        </div>  
                    </div>
            
                    <div class="form-group col-md-4">
                        <label for="txtBookName" class="col-sm-4 control-label">Book Name&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtBookName" name="txtBookName" tabindex="3" placeholder="Enter Book Name" type="text" maxlength="100" />
                            <input id="hdnBookId" type="hidden" value="@ViewData["bookId"]" />
                            <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        </div>   
                    </div>
                   
                </div> 
                        <div class="col-md-12">
                            <div class="form-group col-md-4">
                                <label for="txtBookCode" class="col-sm-4 control-label">Book Code&nbsp;<span class="Mandatory">(*)</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" id="txtBookCode" name="txtBookCode" tabindex="4" placeholder="Enter Book Code" type="text" maxlength="2" />
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="txtBankBranch" class="col-sm-4 control-label">Bank Branch</label>
                                <div class="col-sm-8">
                                    <input class="form-control" id="txtBankBranch" name="txtBankBranch" tabindex="5" placeholder="Bank Branch" type="text" />
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="txtBankAccountNo" class="col-sm-4 control-label">Bank Account No.</label>
                                <div class="col-sm-8">
                                    <input id="txtBankAccountNo" name="txtBankAccountNo" tabindex="6" placeholder="Enter Bank Account No" class="form-control" style="width: 100%;height: 31px;" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group col-md-4">
                                <label for="txtIFSCCode" class="col-sm-4 control-label">IFSC Code</label>
                                <div class="col-sm-8">
                                    <input id="txtIFSCCode" name="txtIFSCCode" tabindex="7" class="form-control" placeholder="Enter Bank IFSC Code" />
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="txtOverDraftLimit" class="col-sm-4 control-label">Over Draft Limit</label>
                                <div class="col-sm-8">
                                    <input id="txtOverDraftLimit" name="txtOverDraftLimit" tabindex="8" class="form-control numeric-only" placeholder="Enter Over Draft Limit " />
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                                <div class="col-sm-8">
                                    <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="9" class="form-control"></select>
                                    <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                                    <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">

                           
                           
                            <div class="form-group col-md-4">
                                <label for="chkstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                                <div class="col-sm-8">
                                    <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="10" />
                                </div>
                            </div>
                        </div>

                       

                    </div>


                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Save" alt="Save" id="btnSave" onclick="SaveData(1)" type="button" border="0" tabindex="11"> 
                                <input class="btn btn-success" value="Update" style="display:none;" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0" tabindex="11"> 
                                <a class="btn btn-success" id="btnReset" href="@Url.Content("~/Book/AddEditBook")" tabindex="14">Reset</a>
                                @*<input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" tabindex="11" /> &nbsp;&nbsp;*@
                                @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                                <a class="btn btn-success" id="btnList" href="@Url.Content("~/Book/ListBook")" tabindex="15">Search Book</a>
                            </center>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel"  tabindex="12" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" tabindex="13" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" tabindex="13" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/Book/AddBook.js"></script>
