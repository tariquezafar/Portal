@{
    ViewBag.Title = "ListCustomerPaymentRegister";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AccountDashboard">Account </a> >> List  Customer Payment </b></p></div>
</div>
<section>
    <form action="#" id="frmListCustomerPayment" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group  col-md-4">
                    <label for="txtCustomerName" class="col-sm-4 control-label">Customer Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="1" placeholder="Search with Customer Name" type="text" maxlength="100" />
                        <input id="hdnCustomerId" name="hdnCustomerId" type="hidden" value="0" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlFormStatus" class="col-sm-4 control-label">Payment Mode &nbsp;</label>
                    <div class="col-sm-8">
                        <select id="ddlPaymentModeName" name="ddlPaymentMode" tabindex="2" class="form-control">
                            <option value="0">-Select Payment Mode-</option>
                            
                        </select>
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="ddlSortBy" class="col-sm-4 control-label">Sort By</label>
                    <div class="col-sm-8">
                        <select id="ddlSortBy" name="ddlSortBy" class="form-control" tabindex="3">
                            <option value="C.CustomerName">Customer Name</option>
                            <option value="S.InvoiceNo">InvoiceNo</option>
                            <option value="book.BookName">BookName</option>
                            <option value="E.CreatedBy">Created By</option>

                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-12" style="display:none;">
                <div class="form-group col-md-6">
                    <label for="txtRefNo" class="col-sm-4 control-label">Ref No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtRefNo" name="txtRefNo" tabindex="3" placeholder="Search with Ref. No." type="text" maxlength="50" />
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label for="ddlFormStatus" class="col-sm-4 control-label">Form Status &nbsp;</label>
                    <div class="col-sm-8">
                        <select id="ddlFormStatus" name="ddlFormStatus" tabindex="4" class="form-control">
                            <option value="0"> --Select Form Status-- </option>
                            <option value="Pending"> Pending </option>
                            <option value="Partial"> Partial </option>
                            <option value="Received"> Received </option>
                        </select>
                    </div>
                </div>
            </div>
           

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlSortOrder" class="col-sm-4 control-label">Sort Order</label>
                    <div class="col-sm-8">
                        <select id="ddlSortOrder" name="ddlSortOrder" class="form-control" tabindex="4">
                            <option value="ASC">Ascending</option>
                            <option value="DESC">Desending</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Payment From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="5" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtToDate" class="col-sm-4 control-label">Payment To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="6" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
            </div>

            <div class="col-md-12" style="display:none">
                <div class="form-group col-md-6">
                    <label for="txtFromDate" class="col-sm-4 control-label">Created By</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="9" type="text" maxlength="50" />
                        <input id="hdnCreatedId" name="hdnCreatedId" value="0" type="hidden" />
                    </div>
                </div>
            </div>

           


            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" tabindex="7" alt="Save" id="btnSearch" onclick="SearchCustomerRegister()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" tabindex="7" id="btnReset" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <input class="btn btn-success" value="Export" tabindex="11" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">

                    </center>
                </div>
                
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" tabindex="8" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" tabindex="9" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" tabindex="10" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>

<script src="~/Scripts/CustomerPaymentRegister/ListCustomerPaymentRegister.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>
