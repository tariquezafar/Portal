@{
    ViewBag.Title = "Add Leave Type";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR</a> >> Add/Edit Leave Type </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductType" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtLeaveTypeName" class="col-sm-4 control-label">Leave Type Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLeaveTypeName" name="txtLeaveTypeName" tabindex="1" placeholder="Enter Leave Type Name" type="text" maxlength="100" />
                        <input id="hdnLeaveTypeId" type="hidden" value="@ViewData["leaveTypeId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label for="txtLeaveTypeCode" class="col-sm-4 control-label">Leave Type Code&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtLeaveTypeCode" name="txtLeaveTypeCode" tabindex="2" type="text" placeholder="Enter Leave Type Code" maxlength="50" class="form-control" />
                    </div>
                </div> 

              
            </div>


            <div class="col-md-12 ">
                <div class="form-group col-md-6">
                    <label for="txtLeavePeriod" class="col-sm-4 control-label">Leave Period&nbsp;</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLeavePeriod" name="txtLeavePeriod" onkeyup="checkDec(this);"  tabindex="3" placeholder="Enter Leave Period" type="text" maxlength="100" />                       
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label for="txtPayPeriod" class="col-sm-4 control-label">Pay Period&nbsp;</label>
                    <div class="col-sm-8">
                        <input id="txtPayPeriod" name="txtPayPeriod" onkeyup="checkDec(this);" tabindex="4" type="text" placeholder="Enter Pay Period" maxlength="50" class="form-control" />
                    </div>
                </div>


            </div>


            <div class="col-md-12">

                <div class="form-group col-md-6">
                    <label for="txtWorkPeriod" class="col-sm-4 control-label">Work Period</label>
                    <div class="col-sm-8">
                        <input id="txtWorkPeriod" name="txtWorkPeriod" tabindex="5" onkeyup="checkDec(this);"  type="text" placeholder="Enter Work Period" maxlength="50" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="6" />
                    </div>
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="7" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="7" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0">
                        <a class="btn btn-success" id="btnReset" tabindex="8" href="@Url.Content("~/LeaveType/AddEditLeaveType")">Reset</a>                    
    @*<input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;*@                       
                        <a class="btn btn-success" id="btnList" tabindex="9" href="@Url.Content("~/LeaveType/ListLeaveType")">Search Leave Type</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/LeaveType/AddLeaveType.js"></script>