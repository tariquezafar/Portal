@model List<Portal.Core.ViewModel.PaymentTermViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>

@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table table-bordered table-hover" id="tblPaymentTermList">
            <thead>
                <tr aling="center"  style="background:rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;">
                    <th colspan="2">Action</th>
                    <th>Payment Term Name</th>
                    <th>Status</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a style="color:darkblue;text-decoration:none" title="View" class="fa fa-eye" aria-hidden="true" href="~/PaymentTerm/AddEditPaymentTerm?PaymentTermId=@item.PaymentTermId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a style="color:darkgreen;text-decoration:none" title="Edit" class="fa fa-pencil" href="~/PaymentTerm/AddEditPaymentTerm?PaymentTermId=@item.PaymentTermId&AccessMode=2"></a>
                        </td>
                        <td align="center">@item.PaymentTermDesc</td>
                        <td align="center">@(item.PaymentTerm_Status == true ? "Active" : "Inactive")</td>
                        

                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblPaymentTermList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>