@{
    ViewBag.Title = "List Employee Attendance";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> List Employee Attendance</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditEmployeeAttendance" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12" style="top: 33px;margin-bottom: 54px;">
                <div class="form-group col-md-6">
                    <label for="txtAttendanceDate" class="col-sm-4 control-label">Attendance From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtAttendanceDate" name="txtAttendanceDate" tabindex="1" value="@ViewData["attendanceDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["attendanceDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="ddlDepartment" class="col-sm-4 control-label">Department</label>
                    <div class="col-sm-8">
                        <select id="ddlDepartment" name="ddlDepartment" onchange="BindDesignationList(0)" tabindex="2" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlDesignation" class="col-sm-4 control-label">Designation</label>
                    <div class="col-sm-8">
                        <select id="ddlDesignation" name="ddlDesignation" tabindex="3" class="form-control"></select>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="46" class="form-control"></select>
                        <input id="hdnBillingStateId" type="hidden" value="0" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>

            </div>


            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6" style="margin-bottom: 25px;">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Search" tabindex="4" id="btnSearch" onclick="SearchEmployeeAttendance()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <input type="hidden" id="hdnEmployeeId" value="0" />
                        <input type="hidden" id="hdnEmployeeName" value="0" />
                        <a class="btn btn-success" id="btnList" tabindex="6" href="@Url.Content("~/EmployeeAttendance/AddEditEmployeeAttendance?accessMode=1")">Add More Attendance</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divEmployeeAttendanceList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/EmployeeAttendance/ListEmployeeAttendance.js"></script> 
<script src="~/Scripts/paging.js"></script>