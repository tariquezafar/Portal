@{
    ViewBag.Title = "ListCFormRegister";
    Layout = "~/Views/Shared/_SaleLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/SaleDashboard">Sale </a> >> List  Customer Form </b></p></div>
</div>
<section>
    <form action="#" id="frmListCustomerForm" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group  col-md-4">
                    <label for="txtCustomerName" class="col-sm-4 control-label">Customer Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="1" placeholder="Search with Customer Name" type="text" maxlength="100" />
                        <input id="hdnCustomerId" name="hdnCustomerId" type="hidden" value="0" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="txtInvoiceNo" class="col-sm-4 control-label">Invoice No</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtInvoiceNo" name="txtInvoiceNo" tabindex="2" placeholder="Search with Invoice No" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtRefNo" class="col-sm-4 control-label">Ref No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtRefNo" name="txtRefNo" tabindex="3" placeholder="Search with Ref. No." type="text" maxlength="50" />
                    </div>
                </div>
            </div>
            <div class="col-md-12">
               <div class="form-group col-md-4">
                    <label for="ddlFormStatus" class="col-sm-4 control-label">Form Status &nbsp;</label>
                    <div class="col-sm-8">
                        <select id="ddlFormStatus" name="ddlFormStatus" tabindex="4" class="form-control">
                            <option value="0"> --Select Form Status-- </option>
                            <option value="Pending"> Pending </option>
                            <option value="Partial"> Partial </option>
                            <option value="Received"> Received </option>
                        </select>
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="ddlSortBy" class="col-sm-4 control-label">Sort By</label>
                    <div class="col-sm-8">
                        <select id="ddlSortBy" name="ddlSortBy" class="form-control" tabindex="5">
                            <option value="C.CustomerName">Customer Name</option>
                            <option value="S.InvoiceNo">InvoiceNo</option>
                            <option value="E.RefNo">RefNo</option>
                            <option value="E.CreatedBy">Created By</option>

                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlSortOrder" class="col-sm-4 control-label">Sort Order</label>
                    <div class="col-sm-8">
                        <select id="ddlSortOrder" name="ddlSortOrder" class="form-control" tabindex="6">
                            <option value="ASC">Ascending</option>
                            <option value="DESC">Desending</option>
                        </select>
                    </div>
                </div>
            </div>
        
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Created By</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="7"  type="text" maxlength="50"  />
                        <input id="hdnCreatedId" name="hdnCreatedId" value="0" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Ref From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="8" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="9" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
            </div>

            @*<div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>
            </div>*@

                <div class="row col-sm-12 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" tabindex="10" onclick="SearchCustomerRegister()" type="button" border="0">&nbsp;&nbsp;
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="11" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                            @*<input class="btn btn-success" value="Export" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">*@
                            <a class="btn btn-success" alt="Export" tabindex="12" id="btnExport" onclick="OpenPrintPopup();" border="0">Export</a>

                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div id="divList">

                    </div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="printModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Customer Form Register</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ddlPrintOption" class="col-sm-4 control-label">Report Option</label>
                            <div class="col-sm-8">
                                <select id="ddlPrintOption" name="ddlPrintOption" onchange="ShowHidePrintOption()" tabindex="1" class="form-control">
                                    <option selected="selected" value="PDF">PDF</option>
                                    <option value="Excel">Excel</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-success" target="_blank" href="#" id="btnPdf">Print</a>
                        <a class="btn btn-success" style="display:none;" target="_blank" href="#" id="btnExcel">Print</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/CustomerFromRegister/ListCustomerFormRegister.js"></script>

<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>
<script>
        $( document ).ready(function() {
            document.getElementById("txtCustomerName").focus();
    });
</script>