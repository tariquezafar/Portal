@{
    ViewBag.Title = "List Size";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<style>
    .table {
        width: 121%;
        max-width: 121%;
        margin-bottom: 20px;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> List Size </b></p></div>
</div>
<section>
    <form action="#" id="frmListSize" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtSizeCode" class="col-sm-4 control-label">Size Code</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtSizeCode" name="txtSizeCode" tabindex="1" placeholder="Search with Size Name" type="text" maxlength="100" />
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label for="txtSizeDesc" class="col-sm-4 control-label">Size Desc</label>
                    <div class="col-sm-8">
                        <input id="txtSizeDesc" name="txtSizeDesc" tabindex="2" type="text" placeholder="Search with Size Desc" maxlength="100" class="form-control" />
                    </div>
                </div>
          
                <div class="form-group col-md-4">
                    <label for="ddlProductMainGroup" class="col-sm-4 control-label">Product Main Group</label>
                    <div class="col-sm-8">
                        <select id="ddlProductMainGroup" name="ddlProductMainGroup" onchange="BindProductSubGroupList(0)" tabindex="3" class="form-control"></select>
                    </div>
                </div>
               
               
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlProductSubGroup" class="col-sm-4 control-label">Product Sub Group</label>
                    <div class="col-sm-8">
                        <select id="ddlProductSubGroup" name="ddlProductSubGroup" tabindex="4" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" class="form-control" tabindex="5" id="ddlStatus">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
               
                </div>
             


                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Search" alt="Save" tabindex="6" id="btnSearch" onclick="SearchSize()" type="button" border="0">
                                <input class="btn btn-success" type="button" id="btnReset" tabindex="7" onclick="ClearFields()" value="Reset" /> 
                                <a class="btn btn-success" id="btnList" tabindex="8" href="@Url.Content("~/Size/AddEditSize?accessMode=1")">Add More Size</a>
                            </center>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div id="divList"style="margin:10px;margin-top:10px;margin-right:5px">

                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/Size/ListSize.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>