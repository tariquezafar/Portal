@{
    ViewBag.Title = "List Product Opening";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> List Product Opening Stock</b></p></div>
</div>
<section>
    <form action="#" id="frmListProductOpening" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
             </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtProductName" class="col-sm-4 control-label">Product Name</label>
                    <div class="col-sm-8">
                       <input class="form-control" id="txtProductName" name="txtProductName" tabindex="1" placeholder="Search with Product Name" type="text" maxlength="100" />
                    </div>
                </div>

           
           
                <div class="form-group col-md-4 ">
                    <label for="ddlFinYear" class="col-sm-4 control-label">Fin. Year</label>
                    <div class="col-sm-8">
                        <select id="ddlFinYear" name="ddlFinYear" tabindex="2" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">

                    <label for="ddlcompanybranch" class="col-sm-4 control-label">Company Branch:</label>
                    <div class="col-sm-8">
                        <select id="ddlcompanybranch" name="ddlcompanybranch" tabindex="3" class="form-control"></select>
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />

                    </div>
                </div>
            </div>
          

            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="4" id="btnSearch" onclick="SearchProductOpening()" type="button" border="0">
                       
                        @if (ViewData["UserId"] != null)
                        {
                            if (ViewData["UserId"].ToString() == "2")
                            {
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields(1)" value="Reset" />

                            }
                            else
                            {
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields(2)" value="Reset" />
                            }
                        }
                        else

                        {
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields(1)" value="Reset" />
                        }

                        <a class="btn btn-success" id="btnList" tabindex="6" href="@Url.Content("~/ProductOpeningStock/AddEditProductOpening?accessMode=1")">Add More Product Opening</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin-top:10px;margin:20px">

                </div>
            </div>
        </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/Product/ListProductOpeningStock.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script>
        $( document ).ready(function() {
            document.getElementById("txtProductName").focus();
    });
</script>