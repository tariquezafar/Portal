@{
    ViewBag.Title = "Add SeparationClearList";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR</a> >> Add/Edit Separation Clear List </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditSeparationClearList" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtSeparationClearListName" class="col-sm-4 control-label">Separation Clear List Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtSeparationClearListName" name="txtSeparationClearListName" tabindex="1" placeholder="Enter Separation Clear List" type="text" maxlength="100" />
                        <input id="hdnSeparationClearListID" type="hidden" value="@ViewData["separationclearlistId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtSeparationClearListDesc" class="col-sm-4 control-label">Separation Clear List Desc &nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtSeparationClearListDesc" name="txtSeparationClearListDesc" tabindex="2" placeholder="Enter Separation Clear Desc" type="text" />  
                    </div>
                </div>  
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="3" />
                    </div>
                </div>  
                </div>


                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="4" onclick="SaveData(1)" type="button" border="0"> 
                            <input class="btn btn-success" value="Update" style="display:none;" tabindex="4" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                            <a class="btn btn-success" id="btnReset" tabindex="5" href="@Url.Content("~/SeparationClearList/AddEditSeparationClearList")">Reset</a>
                             @*<input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;*@
                            @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                            <a class="btn btn-success" id="btnList" tabindex="6" href="@Url.Content("~/SeparationClearList/ListSeparationClearList")">Search Separation Clear List</a>
                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/SeparationClearList/AddSeparationClearList.js"></script>
<script>
        $( document ).ready(function() {
            document.getElementById("txtSeparationClearListName").focus();
    });
</script>