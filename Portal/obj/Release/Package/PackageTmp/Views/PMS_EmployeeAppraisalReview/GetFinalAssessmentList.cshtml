@model List<Portal.Core.ViewModel.PMS_EmployeeAppraisalTemplateMappingViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblAssessmentList">
            <thead>
                <tr>
                    <th align="center">Action</th>
                    <th>Template Name</th>
                    <th>Department</th>
                    <th>Designation</th>  
                    <th>Employee</th>  
                    <th>Performance Cycle</th>  
                    <th>Fin. Year</th>  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success"> 
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="#" onclick="SelectTemplate('@item.EmpAppraisalTemplateMappingId','@item.PerformanceCycleId','@item.EmployeeId','@item.EmployeeName','@item.FinYearId')"></a>
                        </td>
                        <td>@item.TemplateName</td>
                        <td>@item.DepartmentName</td> 
                        <td>@item.DesignationName</td>  
                        <td>@item.EmployeeName</td>  
                        <td>@item.PerformanceCycleName</td>  
                        <td>@item.FinYearDesc</td>  
                    </tr>
                } 
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblAppraisalTemplateList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
 