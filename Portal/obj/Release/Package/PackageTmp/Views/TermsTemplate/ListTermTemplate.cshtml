@{
    ViewBag.Title = "List Term Template";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin </a> >> List Term Template </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditTermTemplate" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group  col-md-4">
                    <label for="txttermtemplateName" class="col-sm-4 control-label">Term Template Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txttermtemplateName" name="txttermtemplateName" tabindex="1" placeholder="Search with Term Template Name" type="text" maxlength="100" />
                       
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="2" class="form-control"></select>
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>

                <div class="form-group col-md-4"> 
                        <label for="ddlStatus" class="col-sm-4 control-label">Status</label>
                        <div class="col-sm-8">
                            <select name="ddlStatus" id="ddlStatus" tabindex="3" class="form-control">
                                <option value="">All</option>
                                <option value="1">Active</option>
                                <option value="0">InActive</option>
                            </select>
                        </div> 
                </div>
            </div>
            

            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" onclick="SearchTermTemplate()" type="button" border="0"  tabindex="3">
                        <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset"  tabindex="4" /> 
                        <a class="btn btn-success" id="btnList" href="@Url.Content("~/TermsTemplate/AddEditTermTemplate?accessMode=1")"  tabindex="5">Add More Term Template</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin: 85px; margin-top: 28px;">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/TermTemplate/ListTermTemplate.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>