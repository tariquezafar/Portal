<script>
    $(document).ready(function () {
        calc_total();
    });
    function calc_total() {
        var sum = 0;
        var TotalQuantity = 0;
        var BasicValue = 0;
        var CGST_Amount = 0;
        var SGST_Amount = 0;
        var IGST_Amount = 0;
