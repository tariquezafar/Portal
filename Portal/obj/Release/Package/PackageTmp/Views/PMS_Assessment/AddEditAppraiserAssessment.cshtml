                <div class="form-group col-md-6">
                    <label for="txtModifiedBy" class="col-sm-4 control-label">Modified By</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtModifiedBy" name="txtModifiedBy" tabindex="9" placeholder="Modified By User Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtModifiedDate" class="col-sm-4 control-label">Modified Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtModifiedDate" name="txtModifiedDate" tabindex="10" placeholder="Modified Date" type="text" maxlength="50" />
                    </div>
                </div>
            </div>
             
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                </div>
                <div class="form-group col-md-4" style="background-color:yellow">
