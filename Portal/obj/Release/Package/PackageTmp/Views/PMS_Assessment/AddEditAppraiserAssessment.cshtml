                    <div class="col-sm-8">
                        <textarea rows="2" cols="2" class="form-control" id="txtSelfRemarks" name="txtSelfRemarks" tabindex="20" placeholder="Self Remarks Description" type="text" maxlength="1000"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-12 goalsection" style="display:none;">
