                        <input class="form-control" id="txtWeight" name="txtWeight" tabindex="15" placeholder="Enter Weight" type="text" maxlength="100" onkeyup="checkDec(this)" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtEvalutionCriteria" class="col-sm-4 control-label right-text">Evalution Criteria&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <textarea rows="2" cols="2" class="form-control" id="txtEvalutionCriteria" name="txtEvalutionCriteria" tabindex="16" placeholder="Evalution Criteria" type="text" maxlength="1000"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-12 goalsection" style="display:none;">
