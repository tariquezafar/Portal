@{
    ViewBag.Title = "AddEdit SL Type";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Company/SuperAdminDashboard">Control Panel</a> >> Add/Edit SL Type</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditSLType" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtSLTypeName" class="col-sm-4 control-label">SL Type Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtSLTypeName" name="txtSLTypeName" tabindex="1" placeholder="Enter SL Type Name" type="text" maxlength="50" />
                        <input id="hdnSLTypeId" type="hidden" value="@ViewData["sLTypeId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label for="chkStatus" class="col-sm-4 control-label">Active Status</label>
                    <div class="col-sm-8">
                        <input type="checkbox" name="chkStatus" id="chkStatus" tabindex="2" class="" checked="checked" />
                        <label style="font-size: 24px; " for="chkStatus"></label>
                    </div>
                </div>
            </div>
          
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" onclick="SaveData(1)" type="button" border="0" tabindex="3"> 
                        <input class="btn btn-success" value="Update" style="display:none;" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0" tabindex="3"> 
                        <a class="btn btn-success" id="btnList" href="@Url.Content("~/SLType/AddEditSLType")" tabindex="4">Reset</a>
                        @*<input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" tabindex="4"/> &nbsp;&nbsp;*@
                        @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                        <a class="btn btn-success" id="btnList" href="@Url.Content("~/SLType/ListSLType")" tabindex="5">Search SL Type</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/SLType/AddSLType.js"></script>

