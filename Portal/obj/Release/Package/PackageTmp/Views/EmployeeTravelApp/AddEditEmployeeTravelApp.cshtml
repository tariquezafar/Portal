@{
    ViewBag.Title = "Add EmployeeTravelApplication";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }

    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }


    legend {
        display: block;
        width: 40%;
        padding: 0;
        margin-bottom: 5px;
        font-size: 15px;
        line-height: inherit;
        color: #333;
        border: 0;
        border-bottom: 0px solid #e5e5e5;
    }
    /*** custom checkboxes ***/
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> Add/Edit Employee Travel Application</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditEmployeeTravelApplication" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtApplicationNo" class="col-sm-4 control-label">Application No</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtApplicationNo"  name="txtApplicationNo" tabindex="1" placeholder="Auto Application No." type="text" maxlength="100" />
                        <a style="display:none;color:#fff;" class="btn btn-success" id="btnAddNew" tabindex="2" href="@Url.Content("~/EmployeeTravelApp/AddEditEmployeeTravelApp?accessMode=1")">New</a>
                        <input id="hdnApplicationId" type="hidden" value="@ViewData["applicationId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label for="txtApplicationDate" class="col-sm-4 control-label right-text">Application Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtApplicationDate" value="@ViewData["currentDate"]" name="txtApplicationDate" tabindex="3" placeholder="Enter Application Date" type="text" maxlength="2" />
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="txtEmployee" class="col-sm-4 control-label">Employee &nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployee" name="txtEmployee" tabindex="4" placeholder="Enter Employee" type="text" maxlength="50"  />
                        <input type="hidden" id="hdnEmployeeId" name="hdnEmployeeId" value="0" />
                        
                        <input type="hidden" id="hdnEssEmployeeId" name="hdnEssEmployeeId" value="@ViewData["essEmployeeId"]" />
                        <input type="hidden" id="hdnEssEmployeeName" name="hdnEssEmployeeName" value="@ViewData["essEmployeeName"]" />
                    </div>
                </div> 
                
            </div>
             
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlTravelType" class="col-sm-4 control-label">Travel Type&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlTravelType" name="ddlTravelType" tabindex="5" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="txtTravelStartDate" class="col-sm-4 control-label">Travel Start Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtTravelStartDate" name="txtTravelStartDate" tabindex="6" placeholder="Enter Travel Start Date" type="text" maxlength="2" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtTravelEndDate" class="col-sm-4 control-label">Travel End Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtTravelEndDate" name="txtTravelEndDate" tabindex="7" placeholder="Enter Travel End Date" type="text" maxlength="2" />
                    </div>
                </div> 
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtTravelDestination" class="col-sm-4 control-label">Travel Destination&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtTravelDestination" name="txtTravelDestination" tabindex="8" placeholder="Enter Travel Destination" type="text" maxlength="100"/> 
                    </div>
                </div>
                <div class="form-group col-md-4"> 
                        <label for="txtTravelReason" class="col-sm-4 control-label">Travel Reason&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <textarea rows="3"  cols="5" class="form-control" id="txtTravelReason" name="txtTravelReason" tabindex="9" placeholder="Enter Travel Reason" type="text" maxlength="1000" ></textarea>
                        </div> 
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlTravelStatus" class="col-sm-4 control-label">Travel Status</label>
                    <div class="col-sm-8">
                        <select id="ddlTravelStatus" name="ddlTravelStatus" tabindex="12" class="form-control">
                            <option selected="selected" value="Draft">Draft</option>
                            <option value="Final">Final</option>
                        </select>

                    </div>
                </div>
            </div>
             
            
           <div class="col-md-12" id="divReject" style="display:none;">
                <div class="form-group col-md-6">
                    <label for="txtRejectReason" class="col-sm-4 control-label">Rejection Reason</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtRejectReason" name="txtRejectReason" tabindex="10" placeholder="Rejection Reason" type="text" maxlength="1000" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtRejectedDate" class="col-sm-4 control-label">Rejected Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtRejectedDate" name="txtRejectedDate" tabindex="11" placeholder="Rejected Date" type="text" maxlength="50" />
                    </div>
                </div>
            </div> 

            <div class="row col-sm-12 col-lg-12 col-md-12 ftop">
                <div class="col-md-3" style="visibility:hidden">
                    <label for="ddlTravelStatus" class="col-sm-6 control-label">Travel Status</label>
                    
                </div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="13" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="13" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="16" onclick="ClearFields()" value="Reset" />  
                        <a class="btn btn-success" id="btnList" tabindex="17" href="@Url.Action("ListEmployeeTravelApp",new {essEmployeeId=ViewData["essEmployeeId"], essEmployeeName=ViewData["essEmployeeName"]})">Search Employee Travel Application</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="14" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" tabindex="15" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="15" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


    </form>
</section>

<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/EmployeeTravelApplication/AddEmployeeTravelApplication.js"></script>