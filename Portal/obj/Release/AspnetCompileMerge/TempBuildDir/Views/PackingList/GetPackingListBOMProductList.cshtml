@model List<Portal.Core.ViewModel.PackingListDetailViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr>      
                   
                    <th style="text-align:center;">Product Name</th>
                    <th style="text-align:center;">Product Code</th>
                    <th style="text-align:center;">Product Description</th>
                    <th style="text-align:center;">Unit</th>
                     <th style="text-align:center;">Quantity</th>
                    <th style="text-align:center;">Parts</th>
                    <th colspan="2" align="center" class="editonly">Action</th>
                    <th align="center"><a style="color:white" class="fa fa-trash" href="#" onclick="RemoveProductRowCheckbox()"></a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                      
                        <td>@item.ProductName
                            <input type="hidden" id="hdnSequenceNo" value="@item.SequenceNo" />
                        <input type="hidden" id="hdnPackingListDetailedID" value="@item.PackingListDetailedID" />
                        <input type="hidden" id="hdnProductId" value="@item.ProductId" />
                        <input type="hidden" id="hdnProductName" value="@item.ProductName" />
                         
                        </td>
                        <td>@item.ProductCode
                        <input type="hidden" id="hdnProductCode" value="@item.ProductCode" />
                        </td>
                        <td>
                            @item.ProductShortDesc
                            <input type="hidden" id="hdnProductShortDesc" value="@item.ProductShortDesc" />
                        </td>
                        <td>@item.UOMName
                            <input type="hidden" id="hdnUOMName" value="@item.UOMName" />
                            

                        </td>
                        <td>@item.Quantity
                                <input type="hidden" id="hdnQuantity" value="@item.Quantity" />
                         </td>
                        <td>
                            @item.IsComplimentary
                            <input type="hidden" id="hdnIsComplimentary" value="@item.IsComplimentary" />
                        </td>
                        
                        <td class="btn btn-success table_btn editonly" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" onclick="EditProductRow(this);" href="#"></a>
                        </td>
                        <td class="btn btn-success table_btn editonly" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-trash"  onclick="RemoveProductRow(this)" href="#"></a>
                        </td>
                        <td> </td>
                        <td><input type="checkbox" id="chkDeleteRow" calss="chkDeleteRowClass"></td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr>                 
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Product Description</th>
                    <th>Unit</th>
                    <th>Quantity</th>   
                    <th colspan="2" align="center">Action</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
<script>
    $(document).ready(function () {
        if ($("#hdnAccessMode").val() == "3") {
            $(".editonly").hide();
        }
    });
</script>