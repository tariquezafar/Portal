@{
    ViewBag.Title = "List Resource Requisition";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .table {
    width: 129% !important;
    max-width: 129% !important;
    margin-bottom: 20px;
}
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
table tr:nth-child(2n+1) {
    
    background-color: #dbe5f7;
    }

     table tr:nth-child(2n) {
    
    background-color: #dbe5f7;
    }
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> List Resource Requisition </b></p></div>
</div>
<section>
    <form action="#" id="frmListRequisition" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div>
            <div class="col-md-12 ftop">  
                <div class="form-group col-md-4">
                    <label for="txtResourceRequisitionNo" class="col-sm-4 control-label">Requisition No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtResourceRequisitionNo" name="txtResourceRequisitionNo" tabindex="1" placeholder="Search with Requisition No." type="text" maxlength="50" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlPositionLevel" class="col-sm-4 control-label">Position Level</label>
                    <div class="col-sm-8 ">
                        <select id="ddlPositionLevel" name="ddlPositionLevel" tabindex="2" class="form-control">
                            </select>
                    </div>
                </div>
 
                <div class="form-group  col-md-4">
                    <label for="ddlPriorityLevel" class="col-sm-4 control-label">Priority Level</label>
                    <div class="col-sm-8">
                        <select id="ddlPriorityLevel" name="ddlPriorityLevel" tabindex="3" class="form-control">
                            <option selected="selected" value="0">-Select Priority Level-</option>
                            <option value="High">High</option>
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            
                        </select>
                    </div>
                </div>
               
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlPositionType" class="col-sm-4 control-label">Position Type</label>
                    <div class="col-sm-8">
                        <select id="ddlPositionType" name="ddlPositionType" tabindex="4" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlDepartment" class="col-sm-4 control-label">Department</label>
                    <div class="col-sm-8 ">
                        <select id="ddlDepartment" name="ddlDepartment" tabindex="5" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="ddlApprovalStatus" class="col-sm-4 control-label">Requisition Status</label>
                    <div class="col-sm-8">
                        <select id="ddlApprovalStatus" name="ddlApprovalStatus" tabindex="6" class="form-control">
                            <option value="0">--Status--</option>
                            <option value="Approved">Approved</option>
                            <option value="Draft">Draft</option>
                            <option value="Final">Final</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    </div>
                </div>
            </div>
           
             <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Requisition From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="7" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="8" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
                 <div class="form-group col-md-4">
                     <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                     <div class="col-sm-8">
                         <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                     </div>
                 </div>
            </div>
    

            
                <div class="row col-sm-12 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Search" alt="Save" tabindex="9" id="btnSearch" onclick="SearchResourceRequisition()" type="button" border="0">&nbsp;&nbsp;
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="10" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                            <a class="btn btn-success" id="btnList" tabindex="11" href="@Url.Content("~/ResourceRequisition/AddEditResourceRequisition?accessMode=1")">Add More Resource Requisition</a>
                            <input class="btn btn-success" value="Export" alt="Export" tabindex="12" id="btnExport" onclick="Export()" type="button" border="0">
                         </center>
                    </div>
                    
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div id="divList">

                    </div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>

 
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>   
<script src="~/Scripts/ResourceRequisition/ListResourceRequisition.js"></script>