@{
    ViewBag.Title = "List Tax";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AccountDashboard">Account</a> >> List Tax </b></p></div>
</div>
<section>
    <form action="#" id="frmListUser" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div> 
         
            <div class="col-md-12 ftop">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="txtTaxName" class="col-sm-4 control-label">Tax Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtTaxName" name="txtTaxName" tabindex="1" placeholder="Search with Tax Name" type="text" maxlength="100" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="ddlTaxType" class="col-sm-4 control-label">Tax Type</label>
                        <div class="col-sm-8">
                            <select id="ddlTaxType" name="ddlTaxType" tabindex="2" style="width: 100%;height: 35px;">
                                <option value="0">Select Tax Type</option>
                                <option value="Local">Local</option>
                                <option value="Central">Central</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="ddlTaxSubType" class="col-sm-4 control-label">Tax Sub Type</label>
                        <div class="col-sm-8">
                            <select id="ddlTaxSubType" name="ddlTaxSubType" tabindex="3" style="width: 100%;height: 35px;">
                                <option value="0">Select Sub Type</option>
                                <option value="Sale">Sale</option>
                                <option value="Purchase">Purchase</option>
                                <option value="Service">Service</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
               
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="selstatus" class="col-sm-4 control-label">Status</label>
                        <div class="col-sm-8">
                            <select name="ddlStatus" tabindex="4" id="ddlStatus" class="form-control">
                                <option value="">All</option>
                                <option value="1">Active</option>
                                <option value="0">InActive</option>
                            </select>
                        </div>
                    </div>
                    
                </div>
            </div>
             
            
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" tabindex="5" onclick="SearchTax()" type="button" border="0">
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="6" onclick="ClearFields()" value="Reset" /> 
                        <a class="btn btn-success" id="btnList" tabindex="7" href="@Url.Content("~/Tax/AddEditTax?accessMode=1")">Add More Tax</a>
                        <input class="btn btn-success" value="Export" tabindex="8" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">
                    </center>
                </div>
                
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList"> 
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Tax/ListTax.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>




