@{
    ViewBag.Title = "List Countries";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Company/SuperAdminDashboard">Control Panel</a> >> List Country </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditCountry" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtCountryName" class="col-sm-4 control-label">Country Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCountryName" tabindex="1" name="txtCountryName" placeholder="Search with Country Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtcountrycode" class="col-sm-4 control-label">Country Code</label>
                    <div class="col-sm-8">
                        <input id="txtCountryCode" name="txtCountryCode"  tabindex="2" type="text" placeholder="Search with Country Code" maxlength="100" class="form-control alpha-space-only" />
                    </div> 
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="selstatus" class="col-sm-4 control-label" >Status</label>
                    <div class="col-sm-8">
                        <!--- <input id="chkStatus" type="checkbox" name="chkStatus" class="" /> --->
                        <select name="ddlStatus" tabindex="3" id="ddlStatus">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
            </div>

            
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" tabindex="4" onclick="SearchCountry()" type="button" border="0">
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields()" value="Reset" /> 
                        <a class="btn btn-success" id="btnList" tabindex="6" href="@Url.Content("~/Country/AddEditCountry")">Add More Country</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin:100px;margin-top:10px">

                </div>
            </div>
         </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Country/ListCountry.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>