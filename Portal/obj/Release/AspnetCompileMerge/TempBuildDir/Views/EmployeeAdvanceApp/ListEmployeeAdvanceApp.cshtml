@{
    ViewBag.Title = "List Employee Advance Application";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> List Employee Advance Application</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditEmployeeAdvanceApplication" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtApplicationNo" class="col-sm-4 control-label">Application No</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtApplicationNo" name="txtApplicationNo" tabindex="1" placeholder="Search with Application No." type="text" maxlength="100" />  
                    </div>
                </div>
                <div class="form-group col-md-4">
                        <label for="ddlAdvanceType" class="col-sm-4 control-label">Advance Type</label>
                  <div class="col-sm-8">
                      <select id="ddlAdvanceType" name="ddlAdvanceType" tabindex="2" class="form-control"></select>
                  </div>
                </div>
     
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Application From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="3" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
               
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="4" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtEmployee" class="col-sm-4 control-label">Employee</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployee" name="txtEmployee" tabindex="5" placeholder="Search with Employee" type="text" />
                        <input type="hidden" id="hdnEmployeeId" name="hdnEmployeeId" value="0" />
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="ddlApprovalStatus" class="col-sm-4 control-label">Advance Status</label>
                    <div class="col-sm-8">
                        <select id="ddlAdvanceStatus" name="ddlAdvanceStatus" tabindex="6" class="form-control">
                            <option value="0">--Status--</option>
                            <option value="Draft">Draft</option>
                            <option value="Final">Final</option>
                            
                        </select>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                        <div class="col-sm-8">
                            <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="46" class="form-control"></select>
                            <input id="hdnBillingStateId" type="hidden" value="0" />
                            <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                            <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                        </div>
                    </div>
                </div>

                </div> 
           
            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="7" id="btnSearch" onclick="SearchEmployeeAdvanceApp()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="8" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <input type="hidden" id="hdnEssEmployeeId" value="@ViewData["essEmployeeId"]" />
                        <input type="hidden" id="hdnEssEmployeeName" value="@ViewData["essEmployeeName"]" />
                        @if (Convert.ToString(ViewData["essEmployeeId"]) != "0")
                        {
                           <a class="btn btn-success" id="btnList" tabindex="9" href="@Url.Action("AddEditEmployeeAdvanceApp", new { essEmployeeId = ViewData["essEmployeeId"], essEmployeeName = ViewData["essEmployeeName"] })">Add More Application</a>
                        }
                        else
                        {
                            <a class="btn btn-success" id="btnList" tabindex="10" href=@Url.Content("~/EmployeeAdvanceApp/AddEditEmployeeAdvanceApp?accessMode=1")>Add More Application</a>
                        }
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/EmployeeAdvanceApplication/ListEmployeeAdvanceApplication.js"></script> 
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>