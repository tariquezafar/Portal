@model List<Portal.Core.ViewModel.CompanyBranchViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table{
        background-color:white;
        margin-left:0px;
        margin-right:20px
    }
    .table th {
    background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    color:#fff;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x: scroll;">
        <table class="table table-bordered" id="tblCompanyList">
            <thead>
                <tr>
                    <th colspan="2">Action</th>
                    <th><center>Company Branch Name</center></th>                  
                    <th><center>Contact Person</center></th>
                    <th><center>Mobile No.</center></th>
                    <th><center>Contact No.</center></th>
                    <th><center>Email</center></th>                   
                    <th><center>City</center></th>
                    <th><center>PAN No.</center></th>
                    <th><center>TIN No.</center></th>
                    <th><center>Annual TurnOver</center></th>
                    <th><center>Company Branch Code</center></th>
                    <th><center>Manufactor Location Code</center></th>
                    <th><center>Status</center></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.CompanyBranch_Status == true)
                    {
                    <tr class="success">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a title="View" style="color:darkblue;text-decoration:none" title="View"   class="fa fa-eye" aria-hidden="true" href="~/CompanyBranch/AddEditCompanyBranch?CompanyBranchId=@item.CompanyBranchId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a  title="Edit"style="color:darkgreen;text-decoration:none" title="Edit" class="fa fa-pencil" href="~/CompanyBranch/AddEditCompanyBranch?CompanyBranchId=@item.CompanyBranchId&AccessMode=2"></a>
                        </td>
                        <td>@item.BranchName</td>                                          
                        <td>@item.ContactPersonName</td>
                        <td>@item.MobileNo</td>
                        <td>@item.ContactNo</td>
                        <td>@item.Email</td>                       
                        <td>@item.City</td>
                        <td>@item.PANNo</td>
                        <td>@item.TINNo</td>
                        <td>@item.AnnualTurnover</td>
                        <td>@item.CompanyBranchCode</td>
                        <td>@item.ManufactorLocationCode</td>
                        <td>@(item.CompanyBranch_Status == true ? "Active" : "Inactive")</td>
                        

                    </tr>
                    }
                    else
                    {
                        <tr class="danger">
                            <td class="teal text" style="width:30px; margin:0px auto;">
                                <a title="View"  style="color:darkblue;text-decoration:none; " class="fa fa-eye" aria-hidden="true" href="~/CompanyBranch/AddEditCompanyBranch?CompanyBranchId=@item.CompanyBranchId&AccessMode=3"></a>
                            </td>
                            <td class="teal text" style="width:30px; margin:0px 2px auto;">
                                <a title="Edit" style="color:darkgreen; text-decoration:none;" class="fa fa-pencil" href="~/CompanyBranch/AddEditCompanyBranch?CompanyBranchId=@item.CompanyBranchId&AccessMode=2"></a>
                            </td>
                            <td>@item.BranchName</td>
                            <td>@item.ContactPersonName</td>
                            <td>@item.MobileNo</td>
                            <td>@item.ContactNo</td>
                            <td>@item.Email</td>
                            <td>@item.City</td>
                            <td>@item.PANNo</td>
                            <td>@item.TINNo</td>
                            <td>@item.AnnualTurnover</td>
                            <td>@item.CompanyBranchCode</td>
                            <td>@item.ManufactorLocationCode</td>
                            <td>@(item.CompanyBranch_Status == true ? "Active" : "Inactive")</td>
                        </tr>
                    }
                }


            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblCompanyList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>