@model List<Portal.Core.ViewModel.StateViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table{
        margin-left:1px;
        margin-right:1px
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;background-color:white;margin-top: 20px;">
        <table class="table table-bordered table-hover" id="tblStateList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>State Name</center></th>
                    <th><center>State Code</center></th>
                    <th><center>Country Name</center></th> 
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="info">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/State/AddEditState?StateId=@item.StateId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a style="color:darkgreen" class="fa fa-pencil" href="~/State/AddEditState?StateId=@item.StateId&AccessMode=2"></a>
                        </td>
                        <td align="center">@item.StateName</td>
                        <td align="center">@item.StateCode</td>
                        <td align="center">@item.CountryName</td> 
                        

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblStateList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>