@{
    ViewBag.Title = "List States";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Company/SuperAdminDashboard">Control Panel</a> >> List State </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditState" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtStateName" class="col-sm-4 control-label">State Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtStateName" name="txtStateName" tabindex="1"  placeholder="Search with State Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="ddlCountry" class="col-sm-4 control-label">Country</label>
                    <div class="col-sm-8">
                        <select id="ddlCountry" name="ddlCountry" tabindex="2" class="form-control"></select>
                    </div>
                </div> 
            </div>
             

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtCode" class="col-sm-4 control-label">State Code</label>
                    <div class="col-sm-8">
                        <input id="txtCode" name="txtCode" type="text" value="" tabindex="3" placeholder="Search with State Code" maxlength="100" class="form-control alpha-space-only" />
                    </div> 
                </div>   
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" onclick="SearchState()" type="button" border="0" tabindex="4">
                        <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" tabindex="5" /> 
                        <a class="btn btn-success" id="btnList" href="@Url.Content("~/State/AddEditState")" tabindex="6">Add More State</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin:80px">
                    
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/State/ListState.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>