@{
    ViewBag.Title = "Add Edit CarryForwardChasis";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/StoreDashboard">Production</a> >> Carry Forward Chasis</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductSubGroup" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4 ">
                    <label for="txtCarryForwardNo" class="col-sm-4 control-label">Carry Forward No.</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCarryForwardNo" name="txtCarryForwardNo" tabindex="1" placeholder="Auto Generated Carry Forward No." type="text" maxlength="100" />   
                        <a style="display:none;color:#fff;" class="btn btn-success" id="btnAddNew" tabindex="2" href="@Url.Content("~/CarryForwardChasis/AddEditCarryForwardChasis?accessMode=1")">New</a>
                        <a style="display:none;color:#fff;" class="btn btn-success" target="_blank" tabindex="3" href="@Url.Action("PrintCarryForward",new {carryForwardID=ViewData["carryForwardID"], reportType="PDF" })" id="btnPrint">Print</a>                     
                        <input id="hdnCarryForwardID" type="hidden" value="@ViewData["carryForwardID"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtCarryForwardDate" class="col-sm-4 control-label">Carry Forward Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtCarryForwardDate" name="txtCarryForwardDate" tabindex="4" placeholder="Select Carry Forward Date" value="@ViewData["currentDate"]" type="text" maxlength="50" />
                        <input id="hdnCurrentDate" name="hdnCurrentDate" value="@ViewData["currentDate"]" type="hidden" />
                    </div>
                </div>
    
                <div class="form-group col-md-4">
                    <label for="PrevddlYear" class="col-sm-4 control-label">Previous Year&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="PrevddlYear" name="PrevddlYear" tabindex="5" class="form-control">
                            <option value="0">--Select Year--</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                            <option value="2028">2028</option>
                            <option value="2029">2029</option>
                            <option value="2030">2030</option>
                            <option value="2031">2031</option>
                        </select>

                    </div>
                </div>
               
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="PrevddlMonth" class="col-sm-4 control-label">Previous Month&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8 ">
                        <select id="PrevddlMonth" name="PrevddlMonth" onchange="GetCarryForwardChasisProductList(); selectCarryForwardDropDownlist();" tabindex="6" class="form-control">
                            <option value="0">--Select Month--</option>
                            <option value="01">January</option>
                            <option value="02">February</option>
                            <option value="03">March</option>
                            <option value="04">April</option>
                            <option value="05">May</option>
                            <option value="06">June</option>
                            <option value="07">July</option>
                            <option value="08">August</option>
                            <option value="09">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>

                    </div>
                </div>
                <div class="form-group col-md-4 ">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch"  tabindex="7" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="CarryddlYear" class="col-sm-4 control-label">Carry Forward Year&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="CarryddlYear" name="CarryddlYear" tabindex="8" class="form-control">
                            <option value="0">--Select Year--</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                            <option value="2028">2028</option>
                            <option value="2029">2029</option>
                            <option value="2030">2030</option>
                            <option value="2031">2031</option>
                        </select>

                    </div>
                </div>
            </div>

           
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="CarryddlMonth" class="col-sm-4 control-label">Carry Forward Month&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8 ">
                        <select id="CarryddlMonth" name="CarryddlMonth" tabindex="9" class="form-control">
                            <option value="0">--Select Month--</option>
                            <option value="01">January</option>
                            <option value="02">February</option>
                            <option value="03">March</option>
                            <option value="04">April</option>
                            <option value="05">May</option>
                            <option value="06">June</option>
                            <option value="07">July</option>
                            <option value="08">August</option>
                            <option value="09">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>

                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlApprovalStatus" class="col-sm-4 control-label">Carry Forward Status</label>
                    <div class="col-sm-8">
                        <select id="ddlApprovalStatus" name="ddlApprovalStatus" tabindex="10" class="form-control">
                            <option selected="selected" value="Draft">Draft</option>
                            <option value="Final">Final</option>
                        </select>
                    </div>

                </div>
            </div>
            <div class="col-md-12">
                <div id="DivChasisNo">

                </div>
            </div>
            
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3">
                  
                    <div class="col-sm-8">
                       
                        </select>
                    </div>

                </div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="11" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="11" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        <a class="btn btn-success" id="btnReset" tabindex="14" onclick="ResetPage();">Reset</a>                         
                        <a class="btn btn-success" id="btnList" tabindex="15" href="@Url.Content("~/CarryForwardChasis/ListCarryForwardChasis")">Search Carry Forward Chasis</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="12" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" tabindex="13" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="13"  data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
