@{
    ViewBag.Title = "List DeliveryChallanRegister";
    Layout = "~/Views/Shared/_SaleLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/SaleDashboard">Sale </a> >> List Delivery Challan Register </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditSO" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group  col-md-4">
                    <label for="txtCustomerName" class="col-sm-4 control-label">Customer Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="1" placeholder="Search with Customer Name" type="text" maxlength="100" />
                        <input type="hidden" value="0" id="hdnCustomerId" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>
                <div class="form-group  col-md-4 ">
                    <label for="ddlState" class="col-sm-4 control-label">State</label>
                    <div class="col-sm-8">
                        <select id="ddlState" name="ddlState" tabindex="2" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Challan From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="3" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="4" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData[" toDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtCreatedBy" class="col-sm-4 control-label">Created By</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="5" placeholder="Created By User Name" type="text" maxlength="100" />
                        <input type="hidden" value="0" id="hdnCreatedId" />
                    </div>
                </div>
                <div class="form-group  col-md-4 ">
                    <label for="ddlShippingState" class="col-sm-4 control-label">Shipping State</label>
                    <div class="col-sm-8">
                        <select id="ddlShippingState" name="ddlShippingState" tabindex="6" class="form-control"></select>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group  col-md-4">
                    <label for="ddlSortBy" class="col-sm-4 control-label">Sort By</label>
                    <div class="col-sm-8">
                        <select id="ddlSortBy" tabindex="7" name="ddlSortBy" class="form-control">
                            <option value="E.ChallanNo">Challan No.</option>
                            <option value="E.InvoiceNo">Invoice No.</option>
                            <option value="E.ChallanDate">Challan Date</option>
                            <option value="E.CustomerName">Customer Name</option>
                            <option value="E.TotalValue">Total Value</option>
                            <option value="E.CreatedBy">Created By</option>
                            <option value="st.StateName">State Name</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlSortOrder" class="col-sm-4 control-label">Sort Order</label>
                    <div class="col-sm-8">
                        <select id="ddlSortOrder" name="ddlSortOrder" class="form-control" tabindex="8">
                            <option value="ASC">Ascending</option>
                            <option value="DESC">Desending</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>
            </div>

            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="9" id="btnSearch" onclick="SearchDeliveryChallanRegister()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="10" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        @*<input class="btn btn-success" value="Export" alt="Export" tabindex="11" id="btnExport" onclick="Export()" type="button" border="0">*@
                        <a class="btn btn-success" alt="Export" tabindex="11" id="btnExport" onclick="OpenPrintPopup();" border="0">Export</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="printModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">SO Register Reports</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ddlPrintOption" class="col-sm-4 control-label">Report Option</label>
                            <div class="col-sm-8">
                                <select id="ddlPrintOption" name="ddlPrintOption" onchange="ShowHidePrintOption()" tabindex="1" class="form-control">
                                    <option selected="selected" value="PDF">PDF</option>
                                    <option value="Excel">Excel</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-success" target="_blank" href="#" id="btnPdf">Print</a>
                        <a class="btn btn-success" style="display:none;" target="_blank" href="#" id="btnExcel">Print</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/DeliveryChallanRegister/ListDeliveryChallanRegister.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>
<script>
        $( document ).ready(function() {
            document.getElementById("txtCustomerName").focus();
    });
</script>