@{
    ViewBag.Title = "Add/Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
    /*** custom checkboxes ***/

    input[type=checkbox] {
        display: none;
    }
        /* to hide the checkbox itself */
        input[type=checkbox] + label:before {
            font-family: FontAwesome;
            display: inline-block;
        }

        input[type=checkbox] + label:before {
            content: "\f096";
        }
        /* unchecked icon */
        input[type=checkbox] + label:before {
            letter-spacing: 10px;
        }
        /* space between checkbox and label */

        input[type=checkbox]:checked + label:before {
            content: "\f046";
        }
        /* checked icon */
        input[type=checkbox]:checked + label:before {
            letter-spacing: 5px;
        }
    /* allow space for check mark */
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin</a> >> Add/Edit User </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditUser" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtUserName" class="col-sm-4 control-label">Login Id&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtUserName" name="txtUserName" tabindex="1" placeholder="Enter Email Id as Login ID" type="text" maxlength="100" />
                        <input id="hdnUserID" type="hidden" value="@ViewData["userId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                       
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtFullName" class="col-sm-4 control-label">Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtFullName" name="txtFullName" tabindex="2" type="text" placeholder="Enter Full Name" maxlength="100" class="form-control alpha-space-only" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtPhone" class="col-sm-4 control-label">Phone&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtPhone" name="txtPhone" type="text" tabindex="3" placeholder="Enter Phone Number" maxlength="10" class="form-control  input-number" onkeyup="checkPhone(this)" />
                    </div>
                </div>

                </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtEmail" class="col-sm-4 control-label">Email&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtEmail" name="txtEmail" type="text" tabindex="4" placeholder="Enter Email Address" maxlength="100" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtPassword" class="col-sm-4 control-label">Password&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtPassword" name="txtPassword" type="password" tabindex="5" placeholder="Enter Password" maxlength="20" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtConfirmPassword" class="col-sm-4 control-label">Confirm Password&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtConfirmPassword" name="txtConfirmPassword" type="password" tabindex="6" placeholder="Enter Confirm Password" maxlength="20" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlRole" class="col-sm-4 control-label">Role&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlRole" name="ddlRole" tabindex="7" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtExpiryDate" class="col-sm-4 control-label">User Expiry Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtExpiryDate" name="txtExpiryDate" tabindex="8" type="text" placeholder="Enter User Expiry Date" maxlength="2" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="9" class="form-control"></select>                        
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserIdCom"]" />

                       
                    </div>
                </div>
               

            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="chkStatus" class="col-sm-4 control-label">Active Status</label>
                    <div class="col-sm-8">
                        <input type="checkbox" name="chkStatus" id="chkStatus" class="" checked="checked" />
                        <label style="font-size: 24px; " tabindex="9" for="chkStatus"></label>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="lblUserType" class="col-sm-4 control-label">UserType&nbsp;</label>
                    <div class="col-sm-8">
                        <select id="ddlUserType" name="ddlUserType" tabindex="9" class="form-control" onchange="BindDealer();">
                        </select>



                    </div>
                    </div>
                    <div class="form-group col-md-4" id="dvDealer" style="display:none">
                        <label for="lblUserType" class="col-sm-4 control-label">Dealer&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <select id="ddlDealer" name="ddlDealer" tabindex="9" class="form-control">
                            </select>



                        </div>
                    </div>
                </div>
            <div class="col-md-12">
              

                <div class="form-group col-md-4">
                    <label for="imgUserPic" class="col-sm-4 control-label">Upload Image</label>
                    <div class="col-sm-8">
                        <img id="imgUserPic" width="150" height="150" style="border-radius:85px !important;margin-bottom:20px;" src="" />
                        <input type="file" id="FileUpload1" name="FileUpload1" onchange="ShowImagePreview(this);" tabindex="11" /><br />
                        <a id="btnRemoveImg" style="display:none" onclick="ConfirmRemoveImage()">Remove Image</a>
                        <input type="hidden" id="hdnRemoveImage" value="0" />
                    </div>
                </div>
            </div>

            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="12" onclick="SaveData(1)" type="button" border="0">
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="12" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0">
                        <a class="btn btn-success" id="btnReset" tabindex="15" href="@Url.Content("~/User/AddEditUser")">Reset</a>
                        @*<input class="btn btn-success" type="button" id="btnReset" tabindex="11" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;*@
                        @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                        <a class="btn btn-success" id="btnList" tabindex="16" href="@Url.Content("~/User/ListUser")">Search User</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="13" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" tabindex="14" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="14" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/User/AddUser.js"></script>

