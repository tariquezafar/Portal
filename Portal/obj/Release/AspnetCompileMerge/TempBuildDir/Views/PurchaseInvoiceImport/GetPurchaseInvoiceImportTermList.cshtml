@model List<Portal.Core.ViewModel.PurchaseInvoiceImportTermsDetailViewModel>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblTermList">
            <thead>
                <tr>
                    <th width="10%" style="display:none">Sr. No.</th>
                    <th width="70%" style="text-align:center">Terms</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">

                        <td width="10%" style="display:none">
                            @item.TermSequence
                        <input type="hidden" id="hdnPITermDetailId" value="@item.InvoiceTermDetailId" />
                        <input type="hidden" id="hdnTermDesc" value="@item.TermDesc" />
                        <input type="hidden" id="hdnTermSequence" value="@item.TermSequence" />
                    </td>
                    <td width="70%">
                        @item.TermDesc
                </td>
                <td style="width:30px; margin:0px 2px auto;">
                    <a class="fa fa-pencil-square-o erp-btn" onclick="EditTermRow(this);" href="#"></a>
                </td>
                <td style="width:30px; margin:0px 2px auto;">
                    <a class="fa fa-trash erp-btn" onclick="RemoveTermRow(this)" href="#"></a>
                </td>
            </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblTermList">
            <thead>
                <tr>
                    <th width="10%" style="display:none">Sr. No.</th>
                    <th width="70%">Terms</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
<script>
    $(document).ready(function () {
        if ($("#hdnAccessMode").val() == "3") {
            $(".editonly").hide();
        }

    });
</script>