@model List<Portal.Core.ViewModel.UOMViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;background-color:white;margin-top: 20px;">
        <table class="table table-bordered table-hover" id="tblUOMList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>UOM Name</center></th>
                    <th><center>UOM Desc</center></th>  
                    <th><center>UOM Status</center></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="info">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/UOM/AddEditUOM?UOMId=@item.UOMId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a style="color:darkgreen" class="fa fa-pencil" href="~/UOM/AddEditUOM?UOMId=@item.UOMId&AccessMode=2"></a>
                        </td>
                        <td align="center">@item.UOMName</td>
                        <td align="center">@item.UOMDesc</td>  
                        <td align="center">@(item.UOM_Status == true ? "Active" : "Inactive")</td>
                       

                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblUOMList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>