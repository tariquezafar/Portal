@model List<Portal.Core.ViewModel.ProductionSummaryReportViewModel>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table int-product" id="tblProductionSummaryReportList" style="margin-top:10px;">
            <thead style="border-top-left-radius:15px;">
                <tr style="border:none;">
                    <th style="background:#4f75c6; color:#fff;" colspan="2">Today's Production Summary Report</th>
                </tr>
                <tr style="background:#D0DDEC; border:1px solid #ccc;">
                    
                    <th style="text-align:center">Description</th>
                    <th style="text-align:center">Total Value</th>

                </tr>

            </thead>
            <tbody style="border:1px solid #ccc;">
                @foreach (var item in Model)
                {
                    <tr class="success">
                        
                        <td style="text-align:left;">@item.Nature </td>
                        <td align="center">@item.TotalValue</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
