@{
    ViewBag.Title = "Add/Edit Holiday Calender";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
 
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR</a> >> Add/Edit Holiday Calender</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditHolidayCalender" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtHolidayDate" class="col-sm-4 control-label">Holiday Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtHolidayDate" name="txtHolidayDate" tabindex="1" placeholder="Enter Holiday Date" value="@ViewData["currentDate"]" type="text" maxlength="100" />
                        <input id="hdnHolidayCalenderId" type="hidden" value="@ViewData["holidaycalenderId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        <input id="hdnCurrentDate" name="hdnCurrentDate" value="@ViewData["currentDate"]" type="hidden" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCalender" class="col-sm-4 control-label">Calender&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCalender" name="ddlCalender" tabindex="2" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtHolidayDescription" class="col-sm-4 control-label">Holiday Description</label>
                    <div class="col-sm-8">
                        <textarea rows="3" cols="50" id="txtHolidayDescription" name="txtHolidayDescription" type="text" tabindex="3" placeholder="Enter Holiday Description" class="form-control"></textarea>
                    </div>
                </div>
            </div>
          
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control" onchange="BindHolidayTypeIdList(0)"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlHolidayType" class="col-sm-4 control-label">Holiday Type&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlHolidayType" name="ddlHolidayType" tabindex="4" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="chkStatus" class="col-sm-4 control-label">Active Status</label>
                    <div class="col-sm-8">
                        <input type="checkbox" name="chkStatus" id="chkStatus" tabindex="5" class="" checked="checked" />
                        <label style="font-size: 24px; " for="chkStatus"></label>
                    </div>
                    </div>
                </div>

                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Save" alt="Save" tabindex="6" id="btnSave" onclick="SaveData(1)" type="button" border="0"> 
                                <input class="btn btn-success" value="Update" tabindex="6" style="display:none;" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                                <a class="btn btn-success" id="btnReset" tabindex="7" href="@Url.Content("~/HolidayCalender/AddEditHolidayCalender")">Reset
                                </a>
                                  @*<input class="btn btn-success" type="button" tabindex="6" id="btnReset" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;*@
                                @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                                <a class="btn btn-success" id="btnList" tabindex="8" href="@Url.Content("~/HolidayCalender/ListHolidayCalender")">Search Holiday Calender</a>
                            </center>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/jquery-ui.js"></script> 
<script src="~/Scripts/HolidayCalender/AddHolidayCalender.js"></script>