@model List<Portal.Core.ViewModel.TermTemplateViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table{
           margin-right:10px;
           margin-left:0px;
           background-color:white;
          }
    .table th {
    background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    color:#fff;
}
</style>
@if (Model != null && Model.Count > 0)
{
    <div>
        <table class="table table-bordered" id="tblTermTemplateList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>Term Template Name</center></th> 
                    <th><center>Company Branch</center></th> 
                    <th><center>Created By User</center></th>
                    <th><center>Created Date</center></th>
                    <th><center>Status</center></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.TermTemplate_Status == true)
                    {
                    <tr class="success">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a title="View" style="color:darkblue;text-decoration:none;" class="fa fa-eye" aria-hidden="true" href="~/TermsTemplate/AddEditTermTemplate?TermTemplateId=@item.TermTemplateId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a title="Edit"  style="color:darkgreen;text-decoration:none;" class="fa fa-pencil" href="~/TermsTemplate/AddEditTermTemplate?TermTemplateId=@item.TermTemplateId&AccessMode=2"></a>
                        </td>
                        <td align="center">@item.TermTempalteName</td>
                        <td align="center">@item.CompanyBranchName</td> 
                        <td align="center">@item.CreatedByName</td>                        
                        <td align="center">@item.CreatedDate</td>
                        <td align="center">@(item.TermTemplate_Status == true ? "Active" : "Inactive")</td>
                        
                    </tr>
                    }
                    else
                    {
                         <tr class="danger">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/TermsTemplate/AddEditTermTemplate?TermTemplateId=@item.TermTemplateId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a style="color:darkgreen" class="fa fa-pencil" href="~/TermsTemplate/AddEditTermTemplate?TermTemplateId=@item.TermTemplateId&AccessMode=2"></a>
                        </td>
                        <td align="center">@item.TermTempalteName</td> 
                             <td align="center">@item.CompanyBranchName</td> 
                        <td align="center">@item.CreatedByName</td>
                        <td align="center">@item.CreatedDate</td>
                        <td align="center">@(item.TermTemplate_Status == true ? "Active" : "Inactive")</td>
                    </tr>
                    }
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblTermTemplateList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>