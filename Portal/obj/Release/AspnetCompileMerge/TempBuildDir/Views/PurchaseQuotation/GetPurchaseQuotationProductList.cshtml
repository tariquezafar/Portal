@model List<Portal.Core.ViewModel.PurchaseQuotationProductViewModel>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Unit</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Discount Amount</th>
                    <th>Total</th>
                    <th colspan="2" align="center" class="editonly">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                      
                    <td>
                        @item.ProductName
                        <input type="hidden" id="hdnSequenceNo" value="@item.SequenceNo" />
                    <input type="hidden" id="hdnQuotationProductDetailId" value="0" />
                    <input type="hidden" id="hdnProductId" value="@item.ProductId" />
                    <input type="hidden" id="hdnProductName" value="@item.ProductName" />

                </td>
                <td>
                    @item.ProductCode
                <input type="hidden" id="hdnProductCode" value="@item.ProductCode" />
            </td>
            <td>
                @item.UOMName
            <input type="hidden" id="hdnUOMName" value="@item.UOMName" />
            <input type="hidden" id="hdnProductShortDesc" value="@item.ProductShortDesc" />

        </td>
        <td>
            @item.Price
            <input type="hidden" id="hdnPrice" value="@item.Price" />
        </td>
        <td>
            @item.Quantity
            <input type="hidden" id="hdnQuantity" value="@item.Quantity" />
            <input type="hidden" id="hdnCGSTPerc" value="@item.CGST_Perc" />
            <input type="hidden" id="hdnCGSTAmount" value="@item.CGST_Amount" />
            <input type="hidden" id="hdnSGSTPerc" value="@item.SGST_Perc" />
            <input type="hidden" id="hdnSGSTAmount" value="@item.SGST_Amount" />
            <input type="hidden" id="hdnIGSTPerc" value="@item.IGST_Perc" />
            <input type="hidden" id="hdnIGSTAmount" value="@item.IGST_Amount" />
            <input type="hidden" id="hdnTotalPrice" value="@item.TotalPrice" />
          
       
        </td>
        <td>
            @item.DiscountAmount
            <input type="hidden" id="hdnDiscountPerc" value="@item.DiscountPercentage" />
            <input type="hidden" id="hdnDiscountAmount" value="@item.DiscountAmount" />
            <input type="hidden" id="hdnHSN_Code" value="@item.HSN_Code" />
        </td>
        <td>
            @((item.Price * item.Quantity) - item.DiscountAmount)
        </td>



        <td class="editonly"  style="width:30px; margin:0px 2px auto;">
            <a class="fa fa-pencil-square-o erp-btn" onclick="EditProductRow(this);" href="#"></a>
        </td>
        <td class="editonly" style="width:30px; margin:0px 2px auto;">
            <a class="fa fa-trash erp-btn" onclick="RemoveProductRow(this)" href="#"></a>
        </td>
    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr>
                  
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Unit</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Discount Amount</th>
                    <th>Total</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
<script>
    $(document).ready(function () {
        if ($("#hdnAccessMode").val() == "3") {
            $(".editonly").hide();
        }

    });
</script>
