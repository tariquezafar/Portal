@model List<Portal.Core.ViewModel.PMS_AppraisalTemplateViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblAppraisalTemplateList">
            <thead>
                <tr>
                    <th align="center">Action</th>
                    <th>Template Name</th>
                    <th>Department</th>
                    <th>Designation</th>    
                    <th>Created By User</th>
                    <th>Created Date</th> 
                    <th>Modified By User</th>
                    <th>Modified Date</th> 
                    <th>Status</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success"> 
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white" class="fa fa-eye" aria-hidden="true" href="~/PMS_AppraisalTemplate/AddEditAppraisalTemplate?TemplateId=@item.TemplateId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/PMS_AppraisalTemplate/AddEditAppraisalTemplate?TemplateId=@item.TemplateId&AccessMode=2"></a>
                        </td> 
                        <td>@item.TemplateName</td>
                        <td>@item.DepartmentName</td> 
                        <td>@item.DesignationName</td>  
                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td>  
                        <td>@(item.AppraisalTemplate_Status == true ? "Active" : "Inactive")</td> 
                        
</tr>
                } 
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblAppraisalTemplateList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
 