@model List<Portal.Core.ViewModel.RoleViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table {
        width: 100% !important;
        max-width: 99% !important;
        margin-bottom: 18px !important;
        margin-left: 10px !important;
        margin-right: 30px !important;
    }
    .table th {
    background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    color:#fff;
}
</style>
@if (Model != null && Model.Count > 0)
{
    <div>
        <table class="table table-bordered" id="tblRoleList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>Role Name</center></th>
                    <th><center>Company Branch</center></th>
                    <th><center>Role Description</center></th>
                    <th><center>Role Type</center></th>
                    <th><center>Status</center></th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Role_Status == true)
                    {
                    <tr class="success">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a style="color:darkblue;text-decoration:none" title="View" class="fa fa-eye" aria-hidden="true" href="~/Role/AddEditRole?RoleId=@item.RoleId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a style="color:darkgreen;text-decoration:none" title="Edit" class="fa fa-pencil" href="~/Role/AddEditRole?RoleId=@item.RoleId&AccessMode=2"></a>
                        </td>
                        <td align="center">@item.RoleName</td>
                        <td align="center">@item.CompanyBranchName</td>
                        <td align="center">@item.RoleDesc</td>
                        <td align="center">@(item.IsAdmin == true ? "Admin" : "Other")</td>
                        <td align="center">@(item.Role_Status == true ? "Active" : "Inactive")</td>
                        </tr>
                    }
                    else
                    {
                        <tr class="danger">
                            <td class="teal text" style="width:30px; margin:0px auto;">
                                <a title="View" style="color:darkblue;text-decoration:none;" class="fa fa-eye" aria-hidden="true" href="~/Role/AddEditRole?RoleId=@item.RoleId&AccessMode=3"></a>
                            </td>
                            <td class="teal text" style="width:30px; margin:0px 2px auto;">
                                <a title="Edit" style="color:darkgreen;text-decoration:none;" class="fa fa-pencil" href="~/Role/AddEditRole?RoleId=@item.RoleId&AccessMode=2"></a>
                            </td>
                            <td align="center">@item.RoleName</td>
                            <td align="center">@item.RoleDesc</td>
                            <td align="center">@(item.IsAdmin == true ? "Admin" : "Other")</td>
                            <td align="center">@(item.Role_Status == true ? "Active" : "Inactive")</td>
                        </tr>

                    }
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblRoleList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>