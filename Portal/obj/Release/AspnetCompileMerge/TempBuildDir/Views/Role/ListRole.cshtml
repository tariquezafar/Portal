@{
    ViewBag.Title = "List Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin</a> >> List Role </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditRole" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtRoleName" class="col-sm-4 control-label">Role Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtRoleName" tabindex="1" name="txtRoleName" placeholder="Search with Role Name" type="text" maxlength="100" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
 </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="selIsAdmin" class="col-sm-4 control-label">Is Admin&nbsp;</label>
                    <div class="col-sm-8">
                        <select name="ddlIsAdmin" tabindex="2" class="form-control" id="ddlIsAdmin">
                            <option value="">All</option>
                            <option value="1">Admin</option>
                            <option value="0">Other</option>
                        </select>
                    </div>
                </div>


                <div class="form-group col-md-4">
                    <label for="txtRoleDescription" class="col-sm-4 control-label">Role Description</label>
                    <div class="col-sm-8">
                        <input id="txtRoleDescription" name="txtRoleDescription" tabindex="3" type="text" placeholder="Search Role Description" maxlength="200" class="form-control alpha-space-only" />
                    </div>
                </div>

            </div>
            <div class="col-md-12">

                <div class="form-group col-md-4">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" tabindex="4" class="form-control" id="ddlStatus">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>
            </div>

            
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="5" id="btnSearch" onclick="SearchRole()" type="button" border="0">
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="6" onclick="ClearFields()" value="Reset" />  
                        <a class="btn btn-success" id="btnList" tabindex="7" href="@Url.Content("~/Role/AddEditRole?accessMode=1")">Add More Role</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin: 85px;margin-top: 28px;" >

                </div>
            </div>
         </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Role/ListRole.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>