@model List<Portal.Core.ViewModel.ChasisSerialPlanDetailViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:5px;background-color:#dbe5f7;">
        <table class="table table-bordered table-hover" id="myTable" style="width:60%">
            <thead style="font-size: 11px;">
                <tr>                 
                    <th><center>Chasis Serial No.</center></th>
                    <th><center>Motor No.</center></th>                                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">                       
                        <td>@item.ChasisSerialNo
                            <input type="hidden" id="hdnChasisSerialDetailID" value="@item.ChasisSerialDetailID" />
                            <input type="hidden" id="hdnChasisModelID" value="@item.ChasisModelID" /></td>


                        <td>
                            @item.MotorNo
                        <input type="hidden" id="hdnChasisModelCode" value="@item.ChasisModelID" />
                      </td>
                                                                                    
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
