@model List<Portal.Core.ViewModel.JobCardProductDetailViewModel>
@if (Model != null && Model.Count > 0)
{
    <div class="divproductlist" style="padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr style="background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;">
                    <th colspan="1" class="editonly" align="center">Action</th>
                    <th >Product Name</th>
                    <th >Service Item Name</th>
                    <th >Cust. Complaint Observation</th>
                    <th >Supervisor Advice</th>
                    <th >Amount Estimated</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                       
                        <td class="" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-trash btn btn-success table_btn editonly selectpo" onclick="RemoveProductRow(this)" href="#"></a>
                        </td>
                        <td>
                            @item.ProductName

                        </td>
                        <td>
                            @item.ServiceItemName

                        </td>
                        <td>
                            @item.CustComplaintObservation
                            <input type="hidden" id="hdnSequenceNo" value="@item.SequenceNo" />
                            <input type="hidden" id="hdnJobCardDetailID" value="@item.JobCardDetailID" />
                            <input type="hidden" id="hdnCustComplaintObservation" value="@item.CustComplaintObservation" />
                            <input type="hidden" id="hdnSupervisorAdvice" value="@item.SupervisorAdvice" />
                            <input type="hidden" id="hdnAmountEstimated" value="@item.AmountEstimated" />

                            <input type="hidden" id="hdnProductID" value="@item.ProductID" />
                            <input type="hidden" id="hdnProductName" value="@item.ProductName" />
                            <input type="hidden" id="hdnServiceItemID" value="0" />
                            <input type="hidden" id="hdnServiceItemName" value="@item.ServiceItemName" />

                        </td>
                        <td>
                            @item.SupervisorAdvice

                        </td>
                        <td>
                            @item.AmountEstimated



                        </td>


                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div class="divproductlist" style="padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr style="background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;">
                    <th>Product Name</th>
                    <th>Service Item Name</th>
                    <th>Cust. Complaint Observation</th>
                    <th>Supervisor Advice</th>
                    <th>Amount Estimated</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
