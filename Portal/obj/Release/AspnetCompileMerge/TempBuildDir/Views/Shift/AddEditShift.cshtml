@{
       ViewBag.Title = "Add Shift";
       Layout = "~/Views/Shared/_HRLayout.cshtml";
}

<link href="~/Content/jquery.timepicker.css" rel="stylesheet" />

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR</a> >> Add/Edit Shift </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditShift" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtShiftName" class="col-sm-4 control-label">Shift Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtShiftName" name="txtShiftName" tabindex="1" placeholder="Enter Shift Name" type="text" maxlength="100" />
                        <input id="hdnShiftId" type="hidden" value="@ViewData["shiftId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>


                <div class="form-group col-md-4">
                    <label for="txtShiftDescription" class="col-sm-4 control-label right-text">Shift Description</label>
                    <div class="col-sm-8">
                        <textarea rows="2" cols="2" class="form-control" id="txtShiftDescription" name="txtShiftDescription" tabindex="2" placeholder="Enter Shift Description" type="text" maxlength="1000"></textarea>
                    </div>
                </div> 
      
                <div class="form-group col-md-4">
                    <label for="ddlShiftType" class="col-sm-4 control-label">Shift Type Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlShiftType" name="ddlShiftType" tabindex="3" class="form-control"></select>
                    </div>
                </div>              
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtNormalPaidHours" class="col-sm-4 control-label">Normal Paid Hours&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtNormalPaidHours" name="txtNormalPaidHours" tabindex="4" placeholder="Enter Normal Paid Hours" onkeyup="checkDec(this)" type="text" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtShiftStartTime" class="col-sm-4 control-label">Shift Start Time&nbsp;<span class="Mandatory">(*)</span> </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtShiftStartTime" name="txtShiftStartTime" tabindex="5" placeholder="Select Shift Start Time."  onkeyup="checkDec(this)" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtShiftEndTime" class="col-sm-4 control-label">Shift End Time&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtShiftEndTime" name="txtShiftEndTime" tabindex="6" onkeyup="checkDec(this)" placeholder="Select Shift End Time" type="text" />
                    </div>
                </div>

            </div>     
           
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtLateArrivalLimit" class="col-sm-4 control-label">Late Arrival Limit&nbsp;<span class="Mandatory">(*)</span> </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLateArrivalLimit" name="txtLateArrivalLimit" tabindex="7" onkeyup="checkDec(this)" placeholder="Select Late Arrival Limit." type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtEarlyGoLimit" class="col-sm-4 control-label">Early Go Limit&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEarlyGoLimit" name="txtEarlyGoLimit" tabindex="8" onkeyup="checkDec(this)" placeholder="Select Early Go Limit" type="text" />
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="txtOvertimeStartTime" class="col-sm-4 control-label">Over time Start Time&nbsp;<span class="Mandatory">(*)</span> </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtOvertimeStartTime" name="txtOvertimeStartTime" tabindex="9" onkeyup="checkDec(this)" placeholder="Select Over Time Start Time." type="text" maxlength="100" />
                    </div>
                </div>
                
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtValidTill" class="col-sm-4 control-label">Valid Till&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtValidTill" name="txtValidTill" tabindex="10" placeholder="Enter Valid Till" type="text" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtFullDayWorkHour" class="col-sm-4 control-label">Full Day Work Hour&nbsp;<span class="Mandatory">(*)</span> </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtFullDayWorkHour" onkeyup="checkDec(this)" name="txtFullDayWorkHour" tabindex="11" placeholder="Enter Full Day Work Hour" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtHalfDayWorkHour" class="col-sm-4 control-label">Half Day Work Hour&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtHalfDayWorkHour" onkeyup="checkDec(this)" name="txtHalfDayWorkHour" tabindex="12" placeholder="Enter Half Day Work Hour" type="text" />
                    </div>
                </div>

            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtAllowance" class="col-sm-4 control-label">Allowance&nbsp;<span class="Mandatory">(*)</span> </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtAllowance" onkeyup="checkDec(this)" name="txtAllowance" tabindex="13" placeholder="Enter Allowance" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="14" />
                    </div>
                </div>


            </div>

            <div class="col-md-12" id="divCreated" style="display:none;">
                <div class="form-group col-md-4">
                    <label for="txtCreatedBy" class="col-sm-4 control-label">Created By</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="15" placeholder="Created By User Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtCreatedDate" class="col-sm-4 control-label">Created Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtCreatedDate" name="txtCreatedDate" tabindex="16" placeholder="Created Date" type="text" maxlength="50" />
                    </div>
                </div>
            </div>
            <div class="col-md-12" id="divModified" style="display:none;">
                <div class="form-group col-md-4">
                    <label for="txtModifiedBy" class="col-sm-4 control-label">Modified By</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtModifiedBy" name="txtModifiedBy" tabindex="17" placeholder="Modified By User Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtModifiedDate" class="col-sm-4 control-label">Modified Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtModifiedDate" name="txtModifiedDate" tabindex="18" placeholder="Modified Date" type="text" maxlength="50" />
                    </div>
                </div>
            </div> 

          
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="15" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="15" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        @*<input class="btn btn-success" type="button" id="btnReset" tabindex="16" onclick="ClearFields()" value="Reset" />*@ 
                        <a class="btn btn-success" id="btnReset" tabindex="16" href="@Url.Content("~/Shift/AddEditShift")">Reset</a>             
                        <a class="btn btn-success" id="btnList" tabindex="17" href="@Url.Content("~/Shift/ListShift")">Search Shift</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/jquery.timepicker.js"></script>
<script src="~/Scripts/jquery.timepicker.min.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Shift/AddShift.js"></script>
<script>
        $( document ).ready(function() {
            document.getElementById("txtShiftName").focus();
    });
</script>