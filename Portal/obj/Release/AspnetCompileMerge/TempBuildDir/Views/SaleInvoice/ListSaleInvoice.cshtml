@{
    ViewBag.Title = "List Sale Invoice";
    Layout = "~/Views/Shared/_SaleLayout.cshtml";
}
<style>
    .table {
    width: 129% !important;
    max-width: 129% !important;
    margin-bottom: 20px;
}
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/SaleDashboard">Sale </a> >> List Sale Invoice </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditSaleInvoice" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtSINo" class="col-sm-4 control-label">Sale Invoice No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtSINo" name="txtSINo" tabindex="1" placeholder="Search with Search SI No." type="text" maxlength="50" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                        <input id="hdnTodayList" type="hidden" value="@ViewData["todayList"]" />
                        <input id="hdnCurrentDate" type="hidden" value="@ViewData["currentDate"]" />
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="txtCustomerName" class="col-sm-4 control-label">Customer Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="2" placeholder="Search with Customer Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtRefNo" class="col-sm-4 control-label">Ref No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtRefNo" name="txtRefNo" tabindex="3" placeholder="Search with Ref. No." type="text" maxlength="50" />
                    </div>
                </div>
            </div>
            
            
            <div class="col-md-12">
                <div class="form-group col-md-4 ">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="4" class="form-control"></select>
                    </div>
                </div>
                
                <div class="form-group  col-md-4">
                        <label for="ddlApprovalStatus" class="col-sm-4 control-label">SI Status</label>
                        <div class="col-sm-8">
                            <select id="ddlApprovalStatus" name="ddlApprovalStatus" tabindex="5" class="form-control">
                                <option value="0">--Status--</option>
                                <option value="Final">Final</option>
                                <option value="Draft">Draft</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                    </div>

                <div class="form-group  col-md-4">
                    <label for="ddlSaleType" class="col-sm-4 control-label">Sale Type</label>
                    <div class="col-sm-8">
                        <select id="ddlSaleType" name="ddlSaleType" tabindex="6" class="form-control">
                            <option value="0">Select Sale Type</option>
                            <option value="Domestic">Domestic</option>
                            <option value="Export">Export</option>
                        </select>
                    </div>
                </div>
                </div> 

            <div class="col-md-12">
                <div class="form-group  col-md-4">
                    <label for="ddlInvoiceType" class="col-sm-4 control-label">Invoice Type</label>
                    <div class="col-sm-8">
                        <select id="ddlInvoiceType" name="ddlInvoiceType" tabindex="7" class="form-control">
                            <option selected="selected" value="0">-Select Invoice Type-</option>
                            <option value="Tax">TAX</option>
                            <option value="Retail">RETAIL</option>
                            <option value="EXPORT">EXPORT</option>
                            <option value="SERVICE">SERVICE</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtSearchCreatedBy" class="col-sm-4 control-label">Created By UserName</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtSearchCreatedBy" name="txtSearchCreatedBy" tabindex="10" placeholder="Search with Created By User Name" type="text" maxlength="50" />
                    </div>
                </div>
               
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Sale Invoice From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="8" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>

            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="9" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
            </div>

                <div class="row col-sm-12 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Search" alt="Save" tabindex="11" id="btnSearch" onclick="SearchSaleInvoice()" type="button" border="0">
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="12" onclick="ClearFields()" value="Reset" />
                            <a class="btn btn-success" id="btnList" tabindex="13" href="@Url.Content("~/SaleInvoice/AddEditSaleInvoice?accessMode=1")">Add More Sale Invoice</a>
                            <input class="btn btn-success" value="Export" alt="Export" id="btnExport" tabindex="14" onclick="Export()" type="button" border="0">
                        </center>
                    </div>
                    
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div id="divList">

                    </div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>

<script src="~/Scripts/SaleInvoice/ListSaIeInvoice.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>