@{
    ViewBag.Title = "AddEditCity";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Company/SuperAdminDashboard">Control Panel</a> >> Add/Edit City </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditCity" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="ddlCountry" class="col-sm-4 control-label">Country&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCountry" name="ddlCountry" tabindex="1" class="form-control" onchange="BindStateList(0)"></select>
                    </div>
                </div>
                <div class="form-group col-md-6"> 
                        <label for="ddlState" class="col-sm-4 control-label">State&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <select id="ddlState" name="ddlState" tabindex="2" class="form-control"></select>
                        </div> 
                    </div>
                </div>

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtCityName" class="col-sm-4 control-label">City Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCityName" name="txtCityName" tabindex="3" placeholder="Enter City Name" type="text" maxlength="50" />
                        <input id="hdnCityId" type="hidden" value="@ViewData["cityId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtPopulation" class="col-sm-4 control-label">Population</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtPopulation" name="txtPopulation" tabindex="3" placeholder="Enter Population" type="text" maxlength="50" />
                       
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtArea" class="col-sm-4 control-label">Area(sq km)</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtArea" name="txtArea" tabindex="3" placeholder="Enter Area" type="text" maxlength="50" />

                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtRailway" class="col-sm-4 control-label">Railway</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtRailway" name="txtRailway" tabindex="3" placeholder="Enter Railway" type="text" maxlength="50" />

                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtAirport" class="col-sm-4 control-label">Airport</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtAirport" name="txtAirport" tabindex="3" placeholder="Enter Airport" type="text" maxlength="50" />

                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtPointOfInterest" class="col-sm-4 control-label">Point Of Interest</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtPointOfInterest" name="txtPointOfInterest" tabindex="3" placeholder="Enter Point Of Interest" type="text" maxlength="50" />

                    </div>
                </div>
            </div>
            
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlCityClass" class="col-sm-4 control-label">City Class</label>
                    <div class="col-sm-8">
                        <select id="ddlCityClass" name="ddlCityClass" tabindex="1" class="form-control">
                            <option value="0">-Select City Class-</option>
                            <option value="1">Tier-1</option>
                            <option value="2">Tier-2</option>
                            <option value="3">Tier-3</option>
                            <option value="4">Tier-4</option>
                            <option value="5">Tier-5</option>
                            <option value="6">Tier-6</option>
                        </select>

                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtPopFactor" class="col-sm-4 control-label">Pop Factor</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtPopFactor" name="txtPopFactor" tabindex="3" placeholder="Enter Pop Factor" type="text" maxlength="50" />

                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-6">
                   
                </div>
                <div class="form-group col-md-6">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="4" />
                    </div>
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" tabindex="5" id="btnSave" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="5" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="6" onclick="ClearFields()" value="Reset" />  
                        @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                        <a class="btn btn-success" id="btnList"  tabindex="7" href="@Url.Content("~/City/ListCity")">Search City</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/City/AddCity.js"></script>