@{
    ViewBag.Title = "List Project";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .table {
        width: 121%;
        max-width: 121%;
        margin-bottom: 20px;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin</a> >> List Project </b></p></div>
</div>
<section>
    <form action="#" id="frmListProduct" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtProjectName" class="col-sm-4 control-label">Project Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProjectName" name="txtProjectName" tabindex="1" placeholder="Search with Project Name" type="text" maxlength="100" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                     </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtProjectCode" class="col-sm-4 control-label">Project Code</label>
                    <div class="col-sm-8">
                        <input id="txtProjectCode" name="txtProjectCode" tabindex="2" type="text" placeholder="Search with Project Code" maxlength="50" class="form-control" />
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="txtCustomerName" class="col-sm-4 control-label">Customer</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="3" placeholder="Search with Customer Name" type="text" />
                        <input id="hdnCustomerId" type="hidden" value="" />
                    </div>
                </div>

            </div>

            <div class="col-md-12">

                <div class="form-group col-md-4">
                    <label for="ddlCustomerBranch" class="col-sm-4 control-label">Customer Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCustomerBranch" name="ddlCustomerBranch" tabindex="4" class="form-control"></select>
                    </div>

                </div>

                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" class="form-control" tabindex="5" id="ddlStatus">
                            <option value="">All</option>
                            <option value="True">Active</option>
                            <option value="False">InActive</option>
                        </select>
                    </div>
                </div>
            </div>
           
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="6" id="btnSearch" onclick="SearchProject()" type="button" border="0">
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="7" onclick="ClearFields()" value="Reset" />
                        <a class="btn btn-success" id="btnList" tabindex="8" href="@Url.Content("~/Project/AddEditProject?accessMode=1")">Add More Project</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin:10px;margin-top:10px;margin-right:5px">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Project/ListProject.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>