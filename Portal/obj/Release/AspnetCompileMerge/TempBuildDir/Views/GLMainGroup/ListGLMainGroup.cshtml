@{
    ViewBag.Title = "List GLMainGroup";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
} 
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AccountDashboard">Account</a> >> List GL Main Group </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditGLMainGroup" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4"> 
                        <label for="txtGLMainGroupName" class="col-sm-4 control-label">GL Main Group Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtGLMainGroupName" tabindex="1"  name="txtGLMainGroupName" placeholder="Search with GL Main Group Name" type="text" maxlength="100" />
                        </div> 
                </div>
                      <div class="form-group col-md-4"> 
                            <label for="ddlGLType" class="col-sm-4 control-label">GL Type</label>
                            <div class="col-sm-8">
                                <select id="ddlGLType" name="ddlGLType"  class="form-control" style="width: 100%;height: 35px;" tabindex="2">
                                    <option value="0">Select GL Type</option>
                                    <option value="A">Assets </option>
                                    <option value="L">Liabilities </option>
                                    <option value="I">Income</option>
                                    <option value="E">Expenses</option>
                                </select>
                            </div>  
                       </div>
                <div class="form-group col-md-4">
                    <label for="txtSequenceNo" class="col-sm-4 control-label">Sequence No.</label>
                    <div class="col-sm-8">
                        <input class="form-control numeric-only" id="txtSequenceNo" tabindex="3" name="txtSequenceNo" placeholder="Search Sequence No" type="text" maxlength="100" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
               
                <div class="form-group col-md-4">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" id="ddlStatus" class="form-control" tabindex="4">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                    </div>
                </div> 
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Search" alt="Save" tabindex="5" id="btnSearch" onclick="SearchGLMainGroup()" type="button" border="0">
                                <input class="btn btn-success" type="button" tabindex="6" id="btnReset" onclick="ClearFields()" value="Reset" /> 
                                <a class="btn btn-success" id="btnList" tabindex="7" href="@Url.Content("~/GLMainGroup/AddEditGLMainGroup?accessMode=1")">Add More GL Main Group</a>
                                <input class="btn btn-success" value="Export" tabindex="8" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">
                            </center>
                        </div>
                        
                    </div>
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div id="divList"> 
                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div> 
                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/GLMainGroup/ListGLMainGroup.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>