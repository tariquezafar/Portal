@{
    ViewBag.Title = "Add/Edit Activity Calender";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
 
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR</a> >> Add/Edit Activity Calender</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditActivityCalender" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtActivityDate" class="col-sm-4 control-label">Activity Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtActivityDate" name="txtActivityDate" tabindex="1" placeholder="Enter Activity Date" value="@ViewData["currentDate"]" type="text" maxlength="100" />
                        <input id="hdnActivityCalenderId" type="hidden" value="@ViewData["activitycalenderId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        <input id="hdnCurrentDate" name="hdnCurrentDate" value="@ViewData["currentDate"]" type="hidden" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div> 
           <div class="form-group col-md-6">
              <label for="ddlCalender" class="col-sm-4 control-label">Calender&nbsp;<span class="Mandatory">(*)</span></label>
                <div class="col-sm-8">
                   <select id="ddlCalender" name="ddlCalender" tabindex="2" class="form-control"></select>
                    </div>
                </div> 
            </div>
            <div class="col-md-12"> 
                <div class="form-group col-md-6">
                    <label for="txtActivityDescription" class="col-sm-4 control-label">Activity Description</label>
                    <div class="col-sm-8">
                        <textarea rows="10" cols="50"  id="txtActivityDescription" name="txtActivityDescription" type="text" tabindex="3" placeholder="Enter Activity Description" class="form-control" ></textarea>
                    </div>
                </div> 
                <div class="form-group col-md-6">
                    <label for="chkStatus" class="col-sm-4 control-label">Active Status</label>
                    <div class="col-sm-8">
                        <input type="checkbox" name="chkStatus" id="chkStatus" tabindex="4" class="" checked="checked" />
                        <label style="font-size: 24px; " for="chkStatus"></label>
                    </div>
                </div> 
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>
            </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Save" alt="Save" tabindex="5" id="btnSave" onclick="SaveData(1)" type="button" border="0">
                            <input class="btn btn-success" value="Update" tabindex="5" style="display:none;" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0">
                            <a class="btn btn-success" id="btnReset" tabindex="6" href="@Url.Content("~/ActivityCalender/AddEditActivityCalender")">Reset</a>
                            @*<input class="btn btn-success" type="button" tabindex="6" id="btnReset" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;*@
                            @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                            <a class="btn btn-success" id="btnList" tabindex="7" href="@Url.Content("~/ActivityCalender/ListActivityCalender")">Search Activity Calender</a>
                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/jquery-ui.js"></script> 
<script src="~/Scripts/ActivityCalender/AddActivityCalender.js"></script>