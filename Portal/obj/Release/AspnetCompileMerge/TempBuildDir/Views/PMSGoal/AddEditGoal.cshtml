@{
    ViewBag.Title = "Add Goal";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }

    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
        
    }


    legend {
        display: block;
        width: 40%;
        padding: 0;
        margin-bottom: 5px;
        font-size: 15px;
        line-height: inherit;
        color: #333;
        border: 0;
        border-bottom: 0px solid #e5e5e5;
    }
    /*** custom checkboxes ***/
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> Add/Edit Goal</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditEmployeeLoanApplication" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtGoalName" class="col-sm-4 control-label">Goal Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtGoalName" name="txtGoalName" tabindex="1" placeholder="Enter Goal Name" type="text" maxlength="100" />
                        @*<a style="display:none;color:#fff;" class="btn btn-success" id="btnAddNew" href="@Url.Content("~/EmployeeAssetApplication/AddEditEmployeeAssetApplication")">New</a>*@
                        <input id="hdngoalId" type="hidden" value="@ViewData["goalId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />

                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtGoalDescription" class="col-sm-4 control-label right-text">Goal Description&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <textarea rows="2" cols="2" class="form-control" id="txtGoalDescription" name="txtGoalDescription" tabindex="2" placeholder="Goal Description" type="text" maxlength="1000"></textarea>
                    </div>
                </div>
         
                <div class="form-group col-md-4">
                    <label for="ddlSectionName" class="col-sm-4 control-label">Section&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlSectionName" name="ddlSectionName" tabindex="3" class="form-control"></select>
                    </div>
                </div>
               
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlGoalCategoryName" class="col-sm-4 control-label">Goal Category&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlGoalCategoryName" name="ddlGoalCategoryName" tabindex="4" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlPerformanceName" class="col-sm-4 control-label">Performance Cycle&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlPerformanceName" name="ddlPerformanceName" tabindex="5" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtWeight" class="col-sm-4 control-label">Weightage(%)&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtWeight" name="txtWeight" tabindex="6" placeholder="Enter Weight" type="text" maxlength="100" onkeyup="checkDec(this)" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group  col-md-4">
                    <label for="txtGoalStartDate" class="col-sm-4 control-label">Goal Start Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtGoalStartDate" name="txtGoalStartDate" tabindex="7" placeholder="Enter Goal Start Date" type="text" maxlength="2" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtGoalDueDate" class="col-sm-4 control-label">Goal Due Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtGoalDueDate" name="txtGoalDueDate" tabindex="8" placeholder="Enter Goal Due Date" type="text" maxlength="2" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="9" />
                    </div>
                </div>
            </div>

          
            <div class="col-md-12" id="divCreated" style="display:none;">
                <div class="form-group col-md-4">
                    <label for="txtCreatedBy" class="col-sm-4 control-label">Created By</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="15" placeholder="Created By User Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtCreatedDate" class="col-sm-4 control-label">Created Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtCreatedDate" name="txtCreatedDate" tabindex="16" placeholder="Created Date" type="text" maxlength="50" />
                    </div>
                </div>
            </div>
            <div class="col-md-12" id="divModified" style="display:none;">
                <div class="form-group col-md-4">
                    <label for="txtModifiedBy" class="col-sm-4 control-label">Modified By</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtModifiedBy" name="txtModifiedBy" tabindex="17" placeholder="Modified By User Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtModifiedDate" class="col-sm-4 control-label">Modified Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtModifiedDate" name="txtModifiedDate" tabindex="18" placeholder="Modified Date" type="text" maxlength="50" />
                    </div>
                </div>
            </div>


             </div>
            
          

        <div class="row col-sm-12 col-lg-12 col-md-12 ftop">
            <div class="col-md-3">

            </div>

            <div class="col-md-6">
                <center>
                    <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="10" onclick="SaveData(1)" type="button" border="0"> 
                    <input class="btn btn-success" value="Update" style="display:none;" tabindex="10" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                    <a class="btn btn-success" id="btnReset" tabindex="11" href="@Url.Content("~/PMSGoal/AddEditGoal")">Reset</a>
                    @*<input class="btn btn-success" type="button" id="btnReset" tabindex="11" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;*@
                    <a class="btn btn-success" id="btnList" tabindex="12" href="@Url.Content("~/PMSGoal/ListGoal")">Search Goal</a>
                </center>
            </div>
        </div>
                <div class="col-md-3"></div>
            
       
        <!--Modal-->
            <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

           
    </form>
</section>
<script src="~/Scripts/PMSGoal/AddGoal.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/paging.js"></script>
<script>
        $( document ).ready(function() {
            document.getElementById("txtGoalName").focus();
    });
</script>