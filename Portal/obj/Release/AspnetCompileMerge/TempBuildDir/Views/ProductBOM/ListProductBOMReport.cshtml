@{
    ViewBag.Title = "List Product BOM";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
      .ui-autocomplete {
         max-height: 500px;
         overflow-y: auto;
         z-index:999999;        
         overflow-x: hidden;
     }
     /* IE 6 doesn't support max-height
    * we use height instead, but this forces the menu to always be this tall
    */
     * html .ui-autocomplete {
         height: 500px;
     }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/StoreDashboard">Production</a> >>Product BOM Report</b></p></div>
</div>
<section>
    <form action="#" id="frmListProductBOM" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="ddlAssemblyType" class="col-sm-4 control-label">Assembly Type</label>
                    <div class="col-sm-8">
                        <select id="ddlAssemblyType" name="ddlAssemblyType" tabindex="2" onchange="GenerateReportParameters();" class="form-control">
                            <option selected="selected" value="0">-Select Assembly Type-</option>
                            <option value="MA">Main Assembly</option>
                            <option value="SA">Sub Assembly</option>
                        </select>
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    
                        <label for="txtAssemblyName" class="col-sm-4 control-label">Assembly Name&nbsp;</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtAssemblyName" name="txtAssemblyName" tabindex="2" placeholder="Enter Assembly/ Sub Assembly Name" type="text" maxlength="100" />
                            <input id="hdnAssemblyId" type="hidden" value="0" />

                        </div>
                    </div>
                    
                </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="7" class="form-control"></select>
                    </div>
                    </div>
                <div class="form-group col-md-6">
                    &nbsp;
                </div>
                </div>
             <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>                      
                        <a class="btn btn-success" alt="Export" tabindex="10" id="btnExport" onclick="OpenPrintPopup();" border="0">Product BOM Report</a>                   
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
          
        </div>    
        <div class="modal fade" id="printModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Product BOM Report</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ddlPrintOption" class="col-sm-4 control-label">Report Option</label>
                            <div class="col-sm-8">
                                <select id="ddlPrintOption2" name="ddlPrintOption2" onchange="ShowHidePrintOption();" tabindex="1" class="form-control">
                                    <option selected="selected" value="PDF">PDF</option>
                                    <option value="Excel">Excel</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-success" target="_blank" href="#" id="btnPdf">Print</a>
                        <a class="btn btn-success" style="display:none;" target="_blank" href="#" id="btnExcel">Print</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

                    </div>
                </div>

            </div>
        </div>
        
    </form>
</section>
<script src="~/Scripts/Product/ListProductBOMReport.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>