@model List<Portal.Core.ViewModel.ExitInterviewViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
   .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
 table tr:nth-child(2n+1) {
    
    background-color: #dff0d8;
    }

     table tr:nth-child(2n) {
    
    background-color: #dff0d8;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblExitInterviewList">
            <thead>
                <tr>
                    <th align="center">Action</th>
                    <th>Interview No</th>
                    <th>Interview Date</th>
                    <th>Employee </th> 
                    <th>Application No.</th> 
                    <th>Interview By</th>  
                    <th>Description</th> 
                    <th>Remarks</th>  
                    <th>Interview Status</th> 
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="btn btn-success table_btn" style="margin:0px auto;">
                            <a style="color:white" class="fa fa-eye" aria-hidden="true" href="~/ExitInterview/AddEditExitInterview?ExitInterviewId=@item.ExitInterviewId&AccessMode=3"></a>

                            <a style="color:white" class="fa fa-pencil-square-o" href="~/ExitInterview/AddEditExitInterview?ExitInterviewId=@item.ExitInterviewId&AccessMode=2"></a>

                        </td>
                        <td>@item.ExitInterviewNo</td>
                        <td>@item.ExitInterviewDate</td>
                        <td>@item.EmployeeName</td> 
                        <td>@item.ApplicationNo</td> 
                        <td>@item.InterviewByUserName</td> 
                        <td>@item.InterviewDescription</td> 
                        <td>@item.InterviewRemarks</td> 
                        <td>@item.InterviewStatus</td>
                       
                         


                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblExitInterviewList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>