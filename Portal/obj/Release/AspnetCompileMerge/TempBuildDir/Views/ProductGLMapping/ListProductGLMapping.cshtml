@{
    ViewBag.Title = "List Product GL Mapping";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin</a> >> List Product GL Mapping  </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditCity" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="ddlProductType" class="col-sm-4 control-label">Product Type</label>
                    <div class="col-sm-8">
                        <select id="ddlProductType" name="ddlProductType" tabindex="4" class="form-control"></select>
                        <input id="hdnMappingId" type="hidden" value="@ViewData["mappingId"]" />
                        <input id="hdnCompanyId" type="hidden" value="@ViewData["CompanyId"]" />
                        <input id="hdnCreatedBy" type="hidden" value="@ViewData["CreatedBy"]" />
                    </div>
                </div>
                <div class="form-group col-md-4"> 
                    <label for="txtGLHead" class="col-sm-4 control-label">GL</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtGLHead" name="txtGLHead" tabindex="5" placeholder="Search GL Head" type="text" maxlength="100" />
                        <input id="hdnGLId" type="hidden" value="0" />
                        <input id="hdnPITaxDetailId" type="hidden" value="0" />
                    </div>
                                       
                </div>
            </div>
          

            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch"  tabindex="6" onclick="SearchProductGLMapping()" type="button" border="0">
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="7" onclick="ClearFields()" value="Reset" /> 
                        <a class="btn btn-success" id="btnList" tabindex="8" href="@Url.Content("~/ProductGLMapping/AddEditProductGLMapping?accessMode=1")">Add More Product GL</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin:100px; margin-top:10px;">
                    
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/ProductGLMapping/ListProductGLMapping.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>