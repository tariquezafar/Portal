@model List<Portal.Core.ViewModel.ApplicantViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblApplicantList">
            <thead>
                <tr>
                    <th align="center">Select</th>
                    <th>Applicant No.</th>
                    <th>Application Date</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Father/ Spouse</th>
                    <th>Job Opening No.</th>
                    <th>Location</th>
                    <th>Project</th>
                    <th>Resume Source</th>
                    <th>Position Applied</th>
                    <th>Applicant Status</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="#" onclick="SelectApplicant('@item.ApplicantNo','@item.ApplicantId')"></a>
                        </td>
                        <td>@item.ApplicantNo</td>
                        <td>@item.ApplicationDate</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Gender</td>
                        <td>@item.FatherSpouseName</td>
                        <td>@item.JobOpeningNo</td>
                        <td>@item.CompanyBranchName</td>
                        <td>@item.ProjectNo</td>
                        <td>@item.ResumeSourceName</td>
                        <td>@item.PositionAppliedName</td>
                        @if (item.ApplicantStatus.ToUpper() == "DRAFT")
                        {
                            <td style="background-color:aquamarine;">
                                @item.ApplicantStatus
                            </td>
                        }
                        else
                        {
                            <td style="background-color:green;color:white">
                                @item.ApplicantStatus
                            </td>

                        }

                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
