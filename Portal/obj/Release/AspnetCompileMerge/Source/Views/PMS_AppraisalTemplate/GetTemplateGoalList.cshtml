@model List<Portal.Core.ViewModel.PMSGoalViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblGoalList">
            <thead>
                <tr>
                    <th align="center">Select</th>
                    <th>Goal Name</th>
                    <th>Section Name</th>
                    <th>Goal Category Name</th>
                    <th>PerformanceCycle Name</th>
                    <th>Weightage(%)</th>
                    <th>Start Date</th>
                    <th>Due Date</th>
                    <th>Created By User</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success"> 
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="#" onclick="SelectGoal('@item.GoalId','@item.GoalName')"></a>
                        </td> 
                        <td>@item.GoalName</td>
                        <td>@item.SectionName</td>
                        <td>@item.GoalCategoryName</td>
                        <td>@item.PerformanceCycleName</td>
                        <td>@item.Weight</td>
                        <td>@item.StartDate</td>
                        <td>@item.DueDate</td>
                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblGoalList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>