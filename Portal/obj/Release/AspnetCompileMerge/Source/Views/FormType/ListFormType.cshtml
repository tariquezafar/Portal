@{
    ViewBag.Title = "List FormType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
} 
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin</a> >> List Form Type Desc </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditGLMainGroup" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6"> 
                        <label for="txtFormTypeDesc" class="col-sm-4 control-label">Form Type Description</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtFormTypeDesc" name="txtFormTypeDesc" placeholder="Search with Form Type Desc" type="text" tabindex="1" maxlength="100" />
                        </div> 
                </div>    
                <div class="form-group col-md-6">
                    <label for="selstatus" class="col-sm-4 control-label" >Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" class="form-control"  tabindex="2" id="ddlStatus">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div> 
            </div>

            <div class="col-md-12">  
                </div> 
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Search" alt="Save" tabindex="3" id="btnSearch" onclick="SearchFormType()" type="button" border="0">
                                <input class="btn btn-success" type="button" tabindex="4" id="btnReset" onclick="ClearFields()" value="Reset" /> 
                                <a class="btn btn-success" id="btnList" tabindex="5" href="@Url.Content("~/FormType/AddEditFormType?accessMode=1")">Add More Form Type Desc</a>
                            </center>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div id="divList" style="margin:100px;margin-top:10px"> 
                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div> 
                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/FormType/ListFormType.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>