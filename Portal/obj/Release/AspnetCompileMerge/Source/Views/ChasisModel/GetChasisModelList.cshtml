@model List<Portal.Core.ViewModel.ChasisModelViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
      .table th {
    background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    color:#fff;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div>
        <table class="table table-bordered table-hover" id="tblProductSubGroupList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>Chasis Model Name</center></th>
                    <th><center>Product Sub Group Name</center></th>
                    <th><center>Chasis Model Code</center></th>
                    <th><center>Motor Model Code</center></th>
                    @*<th><center>Company Branch</center></th>*@
                    <th><center>Status</center></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.ChasisModelStatus==true)
                    {
                    <tr class="success">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/ChasisModel/AddEditChasisModel?chasisModelID=@item.ChasisModelID&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a style="color:darkgreen" class="fa fa-pencil" href="~/ChasisModel/AddEditChasisModel?chasisModelID=@item.ChasisModelID&AccessMode=2"></a>
                        </td>
                        <td align="center">@item.ChasisModelName</td>
                        <td align="center">@item.ProductSubGroupName</td>
                        <td align="center">@item.ChasisModelCode</td>
                        <td align="center">@item.MotorModelCode</td>
                        @*<td align="center">@item.CompanyBranchName</td>*@
                        <td align="center">@(item.ChasisModelStatus == true ? "Active" : "Inactive")</td>
                    </tr>
                    }
                    else
                    {
                        <tr class="danger">
                            <td class="teal text" style="width:30px; margin:0px auto;">
                                <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/ChasisModel/AddEditChasisModel?chasisModelID=@item.ChasisModelID&AccessMode=3"></a>
                            </td>
                            <td class="teal text" style="width:30px; margin:0px 2px auto;">
                                <a style="color:darkgreen" class="fa fa-pencil" href="~/ChasisModel/AddEditChasisModel?chasisModelID=@item.ChasisModelID&AccessMode=2"></a>
                            </td>
                            <td align="center">@item.ChasisModelName</td>
                            <td align="center">@item.ProductSubGroupName</td>
                            <td align="center">@item.ChasisModelCode</td>
                            <td align="center">@item.MotorModelCode</td>
                            @*<td align="center">@item.CompanyBranchName</td>*@
                            <td align="center">@(item.ChasisModelStatus == true ? "Active" : "Inactive")</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblProductSubGroupList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>