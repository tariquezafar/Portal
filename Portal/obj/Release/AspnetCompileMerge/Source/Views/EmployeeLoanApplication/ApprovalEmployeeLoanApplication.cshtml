@{
    ViewBag.Title = "Add EmployeeAdvanceApplication";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }

    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }


    legend {
        display: block;
        width: 40%;
        padding: 0;
        margin-bottom: 5px;
        font-size: 15px;
        line-height: inherit;
        color: #333;
        border: 0;
        border-bottom: 0px solid #e5e5e5;
    }
    /*** custom checkboxes ***/
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> Add/Edit Employee Advance Application</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditEmployeeLoanApplication" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtApplicationNo" class="col-sm-4 control-label">Application No</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtApplicationNo" name="txtApplicationNo" tabindex="1" placeholder="Auto Application No." type="text" maxlength="100" />
                        <a style="display:none;color:#fff;" class="btn btn-success" id="btnAddNew" tabindex="2" href="@Url.Content("~/EmployeeLoanApplication/AddEditEmployeeLoanApplication?accessMode=1")">New</a>
                        <input id="hdnApplicationId" type="hidden" value="@ViewData["applicationId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtApplicationDate" class="col-sm-4 control-label right-text">Application Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtApplicationDate" name="txtApplicationDate" tabindex="3" placeholder="Enter Application Date" type="text" maxlength="2" />
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtEmployee" class="col-sm-4 control-label">Employee Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployee" name="txtEmployee" tabindex="4" placeholder="Select Employee Name" type="text" />
                        <input type="hidden" id="hdnEmployeeId" name="hdnEmployeeId" value="0" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="ddlLoanType" class="col-sm-4 control-label">Loan Type Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlLoanType" name="ddlLoanType" tabindex="5" class="form-control"></select>
                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-group  col-md-6">
                    <label for="txtLoanInterestRate" class="col-sm-4 control-label">Loan Interest Rate&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control  input-number numeric-only" id="txtLoanInterestRate" name="txtLoanInterestRate" tabindex="6" placeholder="Enter Loan Interest Rate" type="text" maxlength="100" />

                    </div>
                </div>
                <div class="form-group  col-md-6">
                    <label for="txtInterestCalcOn" class="col-sm-4 control-label">Interest Calc On&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtInterestCalcOn" name="txtInterestCalcOn" tabindex="7" placeholder="Enter Interest Calc On" type="text" />
                    </div>
                </div>

            </div>


            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtLoanAmount" class="col-sm-4 control-label">Loan Amount&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLoanAmount" name="txtLoanAmount" tabindex="8" placeholder="Enter Loan Amount" type="text" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtLoanStartDate" class="col-sm-4 control-label">Loan Start Date&nbsp;<span class="Mandatory">(*)</span> </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLoanStartDate" name="txtLoanStartDate" tabindex="9" placeholder="Select Loan Start Date." type="text" maxlength="100" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtLoanEndDate" class="col-sm-4 control-label">Loan End Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLoanEndDate" name="txtLoanEndDate" tabindex="10" placeholder="Select Loan End Date" type="text" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtLoanInstallmentAmount" class="col-sm-4 control-label">Loan Installment Amount&nbsp;<span class="Mandatory">(*)</span> </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLoanInstallmentAmount" name="txtLoanInstallmentAmount" tabindex="11" placeholder="Enter Loan Installment Amount" type="text" maxlength="100" />
                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtLoanReason" class="col-sm-4 control-label">Loan Reason&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <textarea rows="10" cols="5" class="form-control" id="txtLoanReason" name="txtLoanReason" tabindex="12" placeholder="Enter Loan Reason" type="text" maxlength="1000"></textarea>
                    </div>
                </div>
            </div>



            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlLoanStatus" class="col-sm-4 control-label">Approve/Reject</label>
                    <div class="col-sm-8">
                        <select id="ddlLoanStatus" name="ddlLoanStatus" tabindex="13" class="form-control" onchange="EnableDisableRejectReason()">
                            <option  selected="selected" value="0">-Select-</option>
                            <option  value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>

                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtRejectedReason" class="col-sm-4 control-label">Rejection Reason</label>
                    <div class="col-sm-8">                      
                            <textarea class="form-control" rows="4" cols="50" id="txtRejectedReason" name="txtRejectedReason" tabindex="14" placeholder="Enter Rejection Reason" value="" type="text" maxlength="1000"></textarea>                      
                    </div>
                    </div>
                </div>
        </div>
            <div class="row col-sm-12 col-lg-12 col-md-12 ftop">
                <div class="col-md-3">
                   
                </div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="15" onclick="SaveData(1)" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="15" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="16" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" tabindex="17" href="@Url.Content("~/EmployeeLoanApplication/ListEmployeeLoanApplicationApproval")">Search Employee Loan Application Approval</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


    </form>
</section>

<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/EmployeeLoanApplication/ApprovalEmployeeLoanApplication.js"></script>