@model List<Portal.Core.ViewModel.EmployeeMarkAttendanceViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }
    .table th {
        color:#ffffff;
        text-align:center;
    }
    .table tr {
        text-align:center;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table table-bordered table-hover" id="tblEmployeeMarkAttendanceList">
            <thead>
                <tr>
                    <th>Employee </th>
                    <th>Attendance Date</th>
                    <th>Present / Absent</th>
                    <th>In / Out</th>
                    <th>Attendance Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.EmployeeName</td>
                        <td>@item.TrnDateTime</td>
                        <td>@item.PresentAbsent</td>
                        <td>@item.InOut</td>
                        <td>@(item.AttendanceStatus == "" ? "NA" : @item.AttendanceStatus)</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblEmployeeMarkAttendanceList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>