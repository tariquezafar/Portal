@{
    ViewBag.Title = "Add ProductSubGroup";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> Add/Edit Product Sub Group </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductSubGroup" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtProductSubGroupName" class="col-sm-4 control-label">Product Sub Group Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductSubGroupName" name="txtProductSubGroupName" tabindex="1" placeholder="Enter Product Sub Group Name" type="text" maxlength="100" />
                        <input id="hdnProductSubGroupId" type="hidden" value="@ViewData["productsubgroupId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlProductMainGroup" class="col-sm-4 control-label">Product Main Group&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlProductMainGroup" name="ddlProductMainGroup"  tabindex="2" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtProductSubGroupCode" class="col-sm-4 control-label">Product Sub Group Code&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductSubGroupCode" name="txtProductSubGroupCode" tabindex="3" placeholder="Enter Product Sub Group Code" type="text" maxlength="100" />

                    </div>
                </div> 
            </div>
            <div class="col-md-12">
               
                <div class="form-group col-md-4">
                    <label for="chkstatus" class="col-sm-4 control-label">Active Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="4" />
                    </div>
                </div> 
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="5" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="5" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        <a class="btn btn-success" id="btnReset" tabindex="8" href="@Url.Content("~/ProductSubGroup/AddEditProductSubGroup")">Reset</a>
                         @*<input class="btn btn-success" type="button" id="btnReset" tabindex="6" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;*@
                        @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                        <a class="btn btn-success" id="btnList" tabindex="9" href="@Url.Content("~/ProductSubGroup/ListProductSubGroup")">Search Product Sub Group</a>
                    </center>
                </div>
                
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="6"  role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" tabindex="7"  data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="7"  data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/ProductSubGroup/AddProductSubGroup.js"></script>
<script>
        $( document ).ready(function() {
            document.getElementById("txtProductSubGroupName").focus();
    });
</script>
