@{
    ViewBag.Title = "List Designation";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR</a> >> List Designation </b></p></div>
</div>
<section>
    <form action="#" id="frmListUser" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtDesignationName" class="col-sm-4 control-label">Designation Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtDesignationName" name="txtDesignationName" tabindex="1"  placeholder="Search with Designation Name" type="text" maxlength="100" />
                        <input id="hdnDesignationId" type="hidden" value="@ViewData["designationId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div> 

                <div class="form-group col-md-6">
                    <label for="ddlDepartment" class="col-sm-4 control-label">Department</label>
                    <div class="col-sm-8">
                        <select id="ddlDepartment" name="ddlDepartment" tabindex="2" class="form-control"></select>
                    </div>
                </div>  
                  
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtDesignationCode" class="col-sm-4 control-label">Designation Code</label>
                    <div class="col-sm-8">
                        <input id="txtDesignationCode" name="txtDesignationCode" type="text" tabindex="3" placeholder="Search with Designation Code" maxlength="10" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" class="form-control" id="ddlStatus" tabindex="4">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div> 
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="5" id="btnSearch" onclick="SearchDesignation()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="6" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" tabindex="7" href="@Url.Content("~/Designation/AddEditDesignation?accessMode=1")">Add More Designation</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Designation/ListDesignation.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>