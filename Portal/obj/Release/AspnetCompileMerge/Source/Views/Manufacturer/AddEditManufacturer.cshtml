@{
    ViewBag.Title = "Add Manufacturer";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> Add/Edit Manucfacturer</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductType" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtManufacturerCode" class="col-sm-4 control-label">Manufacturer Code&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtManufacturerCode" name="txtManufacturerCode" tabindex="1" placeholder="Enter Manufacturer Code " type="text" maxlength="50" />
                        <input id="hdnmanufacturerId" type="hidden" value="@ViewData["manufacturerId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="txtManufacturerName" class="col-sm-4 control-label">Manufacturer Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtManufacturerName" name="txtManufacturerName" tabindex="2" type="text" placeholder="Enter Manufacturer Name" maxlength="100" class="form-control" />
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="3" />
                    </div>
                </div>
              
            </div>
            


            <div class="col-md-12" id="divCreated" style="display:none;">
                <div class="form-group col-md-6">
                    <label for="txtCreatedBy" class="col-sm-4 control-label">Created By</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="21" placeholder="Created By User Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtCreatedDate" class="col-sm-4 control-label">Created Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtCreatedDate" name="txtCreatedDate" tabindex="22" placeholder="Created Date" type="text" maxlength="50" />
                    </div>
                </div>
            </div>
            <div class="col-md-12" id="divModified" style="display:none;">
                <div class="form-group col-md-6">
                    <label for="txtModifiedBy" class="col-sm-4 control-label">Modified By</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtModifiedBy" name="txtModifiedBy" tabindex="23" placeholder="Modified By User Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtModifiedDate" class="col-sm-4 control-label">Modified Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtModifiedDate" name="txtModifiedDate" tabindex="24" placeholder="Modified Date" type="text" maxlength="50" />
                    </div>
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="4" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="4" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        <a class="btn btn-success" id="btnReset" tabindex="7" href="@Url.Content("~/Manufacturer/AddEditManufacturer")">Reset</a>                       
                        <a class="btn btn-success" id="btnList" tabindex="8" href="@Url.Content("~/Manufacturer/ListManufacturer")">Search Manufacturer</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="5"  role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close"  tabindex="6" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="6"  data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Manufacturer/AddManufacturer.js"></script>