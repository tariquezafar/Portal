@model List<Portal.Core.ViewModel.PurchaseReturnViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table {
        width: 112% !important;
        max-width: 112% !important;
        margin-bottom: 20px;
        font-size: 12px;
    }
     #tblChallanList tr th{text-align:center; border:1px solid #ccc!important; font-family:Arial; color:#fff;}
    table tr td {
    border:1px solid #ccc!important; font-family:Arial;}
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table table-bordered table-hover" id="tblChallanList">
            <thead>
                <tr aling="center"  style="background:rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;">
                    <th rowspan="2">Action</th>
                    <th>Purchase Return No.</th>
                    <th>Purchase Return Date</th>
                    <th>Vendor Name</th>
                    <th>Billing Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Ref. No.</th>
                    <th>Ref. Date</th>
                    <th>Gross Amount</th>
                    <th>Net Amount</th>
                    <th>Return Type</th>
                    <th>Approval Status</th>
                    <th>Created By User</th>
                    <th>Created Date</th>
                    <th>Modified By User</th>
                    <th>Modified Date</th>
                    <th>Company Branch</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="margin:0px auto;">
                            <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/PurchaseReturn/AddEditPurchaseReturn?purchaseReturnId=@item.PurchaseReturnId&AccessMode=3"></a>
                            @if (item.ApprovalStatus.ToUpper() == "DRAFT")
                            {
                                <a style="color:darkgreen" class="fa fa-pencil" href="~/PurchaseReturn/AddEditPurchaseReturn?purchaseReturnId=@item.PurchaseReturnId&AccessMode=2"></a>
                            }
                        </td>
                        <td>@item.PurchaseReturnNo</td>
                        <td>@item.PurchaseReturnDate</td>
                        <td>@item.VendorName</td>
                        <td>@item.BillingAddress</td>
                        <td>@item.City</td>
                        <td>@item.StateName</td>
                        <td>@item.RefNo</td>
                        <td>@item.RefDate</td>
                        <td>@item.BasicValue</td>
                        <td>@item.TotalValue</td>
                        <td>@item.ReturnType</td>
                        @if (item.ApprovalStatus.ToUpper() == "DRAFT")
                        {
                            <td style="background-color:aquamarine">
                                @item.ApprovalStatus
                            </td>
                        }
                        else
                        {
                            <td style="background-color:green">
                                @item.ApprovalStatus
                            </td>

                        }
                     
                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td>
                        <td>@item.companyBranch</td>
                        
                      
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblChallanList').paging({
            limit:25,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>