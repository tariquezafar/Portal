@model List<Portal.Core.ViewModel.PayrollOtherEarningDeductionViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll;background-color:white;">
        <table class="table table-bordered table-hover" id="tblCountryList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>                    
                    <th><center>Payroll Process Start Date</center></th>
                    <th><center>Payroll Process End Date</center></th>                   
                    <th><center>Employee Name</center></th>
                    <th><center>Department Name</center></th>
                    <th><center>Designation Name</center></th>
                    <th><center>Company Branch Name</center></th>                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="margin:0px auto;">
                            <a style="color:darkblue" title="View" class="fa fa-eye" aria-hidden="true" href="~/PayrollOtherEarningDeduction/AddEditPayrollOtherEarningDeduction?monthlyInputId=@item.MonthlyInputId&AccessMode=3"></a>
                        </td>                      
                        <td class="teal text" style="margin:0px auto;">                            
                                <a style="color:darkgreen" title="Edit" class="fa fa-pencil" href="~/PayrollOtherEarningDeduction/AddEditPayrollOtherEarningDeduction?monthlyInputId=@item.MonthlyInputId&AccessMode=2"></a>                          
                        </td>
                      
                        <td>@item.PayrollProcessingStartDate</td>
                        <td>@item.PayrollProcessingEndDate</td>                      
                        <td>@item.EmployeeName</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.DesignationName</td>
                        <td>@item.CompanyBranchName</td>
                       
                     
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblCountryList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>