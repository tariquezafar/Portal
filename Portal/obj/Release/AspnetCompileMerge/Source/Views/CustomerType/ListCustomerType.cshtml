@{
    ViewBag.Title = "List Customer Type";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin</a> >> List Customer Type</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditCustomerType" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4"> 
                        <label for="txtCustomerTypeDesc" class="col-sm-4 control-label">Customer Type Desc</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtCustomerTypeDesc" name="txtCustomerTypeDesc" tabindex="1" placeholder="Search with Customer Type Desc" type="text" maxlength="100" />
                            <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                            <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                         </div> 
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="2" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4"> 
                        <label for="selstatus" class="col-sm-4 control-label" >Status</label>
                        <div class="col-sm-8">
                            <select name="ddlStatus" id="ddlStatus" tabindex="3" class="form-control">
                                <option value="">All</option>
                                <option value="1">Active</option>
                                <option value="0">InActive</option>
                            </select> 
                    </div>
                </div>
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" onclick="SearchCustomerType()" type="button" border="0" tabindex="3">
                            <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" tabindex="4" /> 
                            <a class="btn btn-success" id="btnList" href="@Url.Content("~/CustomerType/AddEditCustomerType?accessMode=1")" tabindex="5">Add More Customer Type</a>
                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div id="divList" style="margin:100px;margin-top:10px;">

                    </div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/CustomerType/ListCustomerType.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>