@{
    ViewBag.Title = "Add HSN";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> Add/Edit HSN Code</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductType" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtHSNCode" class="col-sm-4 control-label">HSN Code&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtHSNCode" name="txtHSNCode" tabindex="1" placeholder="Enter HSN Code" type="text" maxlength="50" />
                        <input id="hdnHSNID" type="hidden" value="@ViewData["hSNID"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="txtCGSTPerc" class="col-sm-4 control-label">CGST Perc&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtCGSTPerc" name="txtCGSTPerc" tabindex="2" type="text" placeholder="Enter CGST Perc" maxlength="100" class="form-control numeric-only" />
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label for="txtSGSTPerc" class="col-sm-4 control-label">SGST Perc&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtSGSTPerc" name="txtSGSTPerc" tabindex="2" type="text" placeholder="Enter SGST Perc" maxlength="100" class="form-control numeric-only" />
                    </div>
                </div> 
              
              
            </div>
            
            <div class="col-md-12">
                <div class="form-group col-md-4" style="display:none;">
                    <label for="txtIGSTPerc" class="col-sm-4 control-label">IGST Perc&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtIGSTPerc" name="txtIGSTPerc" tabindex="2" type="text" placeholder="Enter IGST Perc" value="0" maxlength="100" class="form-control numeric-only" />
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="3" />
                    </div>
                </div>
            </div>

            
            
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="4" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="4" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        <a class="btn btn-success" id="btnReset" tabindex="7" href="@Url.Content("~/HSN/AddEditHSN")">Reset</a>                       
                        <a class="btn btn-success" id="btnList" tabindex="8" href="@Url.Content("~/HSN/ListHSN")">Search HSN</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="5"  role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close"  tabindex="6" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="6"  data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/HSN/AddHSN.js"></script>