@model List<Portal.Core.ViewModel.ApplicantViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblApplicantList">
            <thead>
                <tr>
                    <th align="center">Action</th>
                    <th>Applicant No.</th>
                    <th>Application Date</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Father/ Spouse</th>
                    <th>Job Opening No.</th>
                    <th>Location</th>
                    <th>Project</th>
                    <th>Resume Source</th>
                    <th>Position Applied</th>
                    <th>Applicant Status</th>
                    <th>Modified By User</th>
                    <th>Modified Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="btn btn-success table_btn" style="margin:0px auto;">
                            <a style="color:white" class="fa fa-eye" aria-hidden="true" href="~/Applicant/ShortlistApplicant?applicantId=@item.ApplicantId&AccessMode=3"></a>
                            @if (item.ApplicantStortlistStatus=="" || item.ApplicantStortlistStatus.ToUpper() == "HOLD")
                            {
                                <a style="color:white" class="fa fa-pencil-square-o" href="~/Applicant/ShortlistApplicant?applicantId=@item.ApplicantId&AccessMode=2"></a>
                            }
                        </td>
                        <td>@item.ApplicantNo</td>
                        <td>@item.ApplicationDate</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Gender</td>
                        <td>@item.FatherSpouseName</td>
                        <td>@item.JobOpeningNo</td>
                        <td>@item.CompanyBranchName</td>
                        <td>@item.ProjectNo</td>
                        <td>@item.ResumeSourceName</td>
                        <td>@item.PositionAppliedName</td>
                        @if (item.ApplicantStortlistStatus.ToUpper() == "SHORTLIST")
                        {
                            <td style="background-color:green;color:white">
                                @item.ApplicantStortlistStatus
                            </td>
                        }
                        else if (item.ApplicantStortlistStatus.ToUpper() == "HOLD")
                        {
                            <td style="background-color:aquamarine;">
                                @item.ApplicantStortlistStatus
                            </td>
                        }
                        else if (item.ApplicantStortlistStatus.ToUpper() == "REJECT")
                        {
                            <td style="background-color:palevioletred;">
                                @item.ApplicantStortlistStatus
                            </td>
                        }
                        else
                        {
                            <td style="background-color:transparent">
                                @item.ApplicantStortlistStatus
                            </td>

                        }
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td>
                        
                        

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblApplicantList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>