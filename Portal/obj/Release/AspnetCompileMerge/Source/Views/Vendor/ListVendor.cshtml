@{
    ViewBag.Title = "List Vendor";
    Layout = "~/Views/Shared/_PurchaseLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/PurchaseDashboard">Purchase </a> >> List Vendor </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditVendor" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group  col-md-4">
                    <label for="txtVendorName" class="col-sm-4 control-label">Vendor Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtVendorName" name="txtVendorName" tabindex="1" placeholder="Search with Vendor Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtVendorCode" class="col-sm-4 control-label">Vendor Code</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtVendorCode" name="txtVendorCode" tabindex="2" placeholder="Search with Vendor Code" type="text" maxlength="50" />
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="txtCity" class="col-sm-4 control-label">City</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCity" name="txtCity" tabindex="3" placeholder="Search with City." type="text" maxlength="100" />
                    </div>
                </div>

            </div>
            <div class="col-md-12">

                <div class="form-group col-md-4">
                    <label for="txtState" class="col-sm-4 control-label">State</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtState" name="txtState" tabindex="4" placeholder="Search with State." type="text" maxlength="50" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtMobileNo" class="col-sm-4 control-label">Mobile No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control input-number numeric-only" id="txtMobileNo" name="txtMobileNo" tabindex="5" placeholder="Search with Mobile No." type="text" maxlength="10" />
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="ddlStatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" id="ddlStatus" tabindex="6" class="form-control">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
            </div> 

            <div class="col-md-12">

                <div class="form-group col-md-4" style="display:none;">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="7"  class="form-control"></select>
                        <input id="hdnBillingStateId" type="hidden" value="0" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>
            </div>
                

                <div class="row col-sm-12 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Search" alt="Save" tabindex="8" id="btnSearch" onclick="SearchVendor()" type="button" border="0">
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="9" onclick="ClearFields()" value="Reset" />
                            <a class="btn btn-success" id="btnList" tabindex="10" href="@Url.Content("~/Vendor/AddEditVendor?accessMode=1")">Add More Vendor</a>
                            <a class="btn btn-success" alt="Export" tabindex="11" id="btnExport" onclick="OpenPrintPopup();" border="0">Export</a>
                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div id="divList">

                    </div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

        <div class="modal fade" id="printModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Vendor Reports</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ddlPrintOption" class="col-sm-4 control-label">Report Option</label>
                            <div class="col-sm-8">
                                <select id="ddlPrintOption" name="ddlPrintOption" onchange="ShowHidePrintOption()" tabindex="1" class="form-control">
                                    <option selected="selected" value="PDF">PDF</option>
                                    <option value="Excel">Excel</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-success" target="_blank" href="#" id="btnPdf">Print</a>
                        <a class="btn btn-success" style="display:none;" target="_blank" href="#" id="btnExcel">Print</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Vendor/ListVendor.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>