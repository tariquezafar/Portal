@model List<Portal.Core.ViewModel.InvoicePackingListViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table {
        width: 112% !important;
        max-width: 112% !important;
        margin-bottom: 20px;
        font-size: 12px;
    }
     #tblInvoicePackingList tr th{text-align:center; border:1px solid #ccc!important; font-family:Arial; color:#fff;}
    table tr td {
    border:1px solid #ccc!important; font-family:Arial;}
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table table-bordered table-hover" id="tblInvoicePackingList">
            <thead>
                <tr aling="center"  style="background:rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;">
                    <th rowspan="2">Action</th>
                    <th>PL No.</th>
                    <th>PL Date</th>
                    <th>Invoice No.</th>
                    <th>Customer Name</th>
                    <th>Customer Code</th>
                    <th>PL Type</th>
                    <th>Company Branch</th>
                    <th>PL Status</th>
                    <th>Created By</th>
                    <th>Created Date</th>
                    <th>Modified By</th>
                    <th>Modified Date</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="margin:0px auto;">
                            <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/InvoicePackingList/AddEditInvoicePackingList?invoicePackingListId=@item.InvoicePackingListId&AccessMode=3"></a>
                            @if (item.InvoicePackingListStatus.ToUpper() == "DRAFT")
                            {
                                <a style="color:darkgreen" class="fa fa-pencil" href="~/InvoicePackingList/AddEditInvoicePackingList?invoicePackingListId=@item.InvoicePackingListId&AccessMode=2"></a>
                            }
                        </td>
                        <td>@item.InvoicePackingListNo</td>
                        <td>@item.InvoicePackingListDate</td>
                        <td>@item.InvoiceNo</td>
                        <td>@item.CustomerName</td>
                        <td>@item.CustomerCode</td>
                        <td>@item.PackingListTypeName</td>
                        <td>@item.CompanyBranchName</td>
                        
                        @if (item.InvoicePackingListStatus.ToUpper() == "DRAFT")
                        {
                            <td style="background-color:aquamarine">
                                @item.InvoicePackingListStatus
                            </td>
                        }
                        else
                        {
                            <td style="background-color:green">
                                @item.InvoicePackingListStatus
                            </td>

                        }
                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblInvoicePackingList').paging({
            limit: 20,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>