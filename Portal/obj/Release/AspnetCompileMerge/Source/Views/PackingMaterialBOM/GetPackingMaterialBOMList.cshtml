@model List<Portal.Core.ViewModel.PackingMaterialBOMViewModel>

<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;background-color:white;">
        <table class="table table-bordered table-hover" id="tblPackingMaterialBOMList" style="width:100% !important;">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>Packing Material BOM No.</center></th>
                    <th><center>Packing Material BOM Date</center></th>
                    <th><center>Packing List Type</center></th>
                    <th><center>Product Sub Group</center></th>
                    @*<th><center>Company Name</center></th>*@
                    <th><center>Created By User</center></th>
                    <th><center>Created Date</center></th>
                    <th><center>Modified By User</center></th>
                    <th><center>Modified Date</center></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="margin:0px auto;">
                            <a style="color:darkblue" title="View" class="fa fa-eye" aria-hidden="true" href="~/PackingMaterialBOM/AddEditPackingMaterialBOM?pMBId=@item.PMBId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="margin:0px auto;">
                            <a style="color:darkgreen" title="Edit" class="fa fa-pencil" href="~/PackingMaterialBOM/AddEditPackingMaterialBOM?pMBId=@item.PMBId&AccessMode=2"></a>
                        </td>
                        <td>@item.PMBNo</td>
                        <td>@item.PMBDate</td>
                        <td>@item.PackingListTypeName</td>
                        <td>@item.ProductSubGroupName</td>
                        @*<td>@item.CompanyBranchName</td>*@
                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblPackingMaterialBOMList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>