@model List<Portal.Core.ViewModel.LeadConversionCountViewModel>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table" id="tblLeadSourceCountList" style="margin-top:10px;">
            <thead style="border-top-left-radius:15px;">
                <tr style="border:none;">
                    <th colspan="2" style="background-color:lightseagreen; color:#000; border-top-left-radius:10px; border-top-right-radius:10px;">MTD Lead Conversion</th>
                    <th style="border:none;"></th>
                    <th style="border:none;"></th>
                </tr>
                <tr style="background:#D0DDEC; border:1px solid #ccc;">
                    <th>Date</th>
                    <th>Total Lead</th>
                    <th>New Opertunity</th>
                    <th>Quotation</th>
                </tr>
              
            </thead>
            <tbody style="border:1px solid #ccc;">
                @foreach (var item in Model)
                {
                <tr class="success">
                    <td>@item.DateValue</td>
                    <td>@item.TotalLead</td>
                    <td>@item.NewOpertunity</td>
                    <td>@item.Quotation</td>
                </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <h3 style="color:firebrick;text-align:center">Lead Data not updated</h3>
}
