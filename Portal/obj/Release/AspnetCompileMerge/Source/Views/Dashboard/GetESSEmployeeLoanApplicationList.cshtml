@model List<Portal.Core.ViewModel.EmployeeLoanApplicationViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<script src="~/Scripts/paging.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table" id="tblLoanApplicationList">
            <thead>
                <tr>
                    <th>Application No</th>
                    <th>Application Date</th>
                    <th>Loan Type</th>
                    <th>Loan Amount</th>
                    <th>Loan Installment Amount</th>
                    <th>Reason</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.LoanStatus == "Draft")
                            {
                               <a href='../EmployeeLoanApplication/AddEditEmployeeLoanApplication?applicationId=@item.ApplicationId&AccessMode=2&essEmployeeId=@item.EmployeeId&essEmployeeName=@item.EmployeeName' id="lnkLoanApplicationNo" target="_blank">@item.ApplicationNo</a>
                            }
                            else
                            {
                                <a href='../EmployeeLoanApplication/AddEditEmployeeLoanApplication?applicationId=@item.ApplicationId&AccessMode=3&essEmployeeId=@item.EmployeeId&essEmployeeName=@item.EmployeeName' id="lnkLoanApplicationNo" target="_blank">@item.ApplicationNo</a>
                            }
                        </td>
                        <td>
                            @item.ApplicationDate
                        </td>
                        <td>
                            @item.LoanTypeName
                        </td>
                        <td>
                            @item.LoanAmount
                        </td>
                        <td>
                            @item.LoanInstallmentAmount
                        </td>
                        <td>
                            @item.LoanReason
                        </td>
                        <td>
                            <center><span class="label label-success">@item.LoanStatus</span></center> 
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}

