@{
    ViewBag.Title = "Add Separation Application";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }

    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }


    legend {
        display: block;
        width: 40%;
        padding: 0;
        margin-bottom: 5px;
        font-size: 15px;
        line-height: inherit;
        color: #333;
        border: 0;
        border-bottom: 0px solid #e5e5e5;
    }
    /*** custom checkboxes ***/
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> Add/Edit Separation Application</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditSeparationApplication" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtApplicationNo" class="col-sm-4 control-label">Application No</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtApplicationNo" name="txtApplicationNo" tabindex="1" placeholder="Auto Application No." type="text" maxlength="100" />
                        <a style="display:none;color:#fff;" class="btn btn-success" id="btnAddNew" tabindex="2" href="@Url.Content("~/Application/AddEditApplication")">New</a>
                        <input id="hdnApplicationId" type="hidden" value="@ViewData["applicationId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label for="txtApplicationDate" class="col-sm-4 control-label right-text">Application Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtApplicationDate" name="txtApplicationDate" tabindex="3" value="@ViewData["currentDate"]" placeholder="Enter Application Date" type="text" maxlength="2" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtEmployee" class="col-sm-4 control-label">Employee&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployee" name="txtEmployee" tabindex="4" placeholder="Enter Employee" type="text" maxlength="2" />
                        <input type="hidden" id="hdnEmployeeId" name="hdnEmployeeId" value="0" />
                    </div>
                </div> 
            </div>
          
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlSeparationCategory" class="col-sm-4 control-label">Separation Category&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlSeparationCategory" name="ddlSeparationCategory" tabindex="5" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="txtRemark" class="col-sm-4 control-label">Remark&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtRemark" name="txtRemark" tabindex="6" placeholder="Enter Remark" type="text" />
                    </div>
                </div>
                <div class="form-group col-md-4">

                    <label for="txtReason" class="col-sm-4 control-label">Reason&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <textarea rows="2" cols="5" class="form-control" id="txtReason" name="txtReason" tabindex="7" placeholder="Enter Reason" type="text" maxlength="1000"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>
            </div>

                <div class="col-md-12" id="divCreated" style="display:none;">
                    <div class="form-group col-md-4">
                        <label for="txtCreatedBy" class="col-sm-4 control-label">Created By</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="8" placeholder="Created By User Name" type="text" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtCreatedDate" class="col-sm-4 control-label">Created Date</label>
                        <div class="col-sm-8 ">
                            <input class="form-control" id="txtCreatedDate" name="txtCreatedDate" tabindex="9" placeholder="Created Date" type="text" maxlength="50" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12" id="divModified" style="display:none;">
                    <div class="form-group col-md-4">
                        <label for="txtModifiedBy" class="col-sm-4 control-label">Modified By</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtModifiedBy" name="txtModifiedBy" tabindex="10" placeholder="Modified By User Name" type="text" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtModifiedDate" class="col-sm-4 control-label">Modified Date</label>
                        <div class="col-sm-8 ">
                            <input class="form-control" id="txtModifiedDate" name="txtModifiedDate" tabindex="11" placeholder="Modified Date" type="text" maxlength="50" />
                        </div>
                    </div>
                </div>


                @*<div class="col-md-12" id="divReject" style="display:none;">
                    <div class="form-group col-md-4">
                        <label for="txtRejectReason" class="col-sm-4 control-label">Rejection Reason</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtRejectReason" name="txtRejectReason" tabindex="19" placeholder="Rejection Reason" type="text" maxlength="1000" />
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtRejectedDate" class="col-sm-4 control-label">Rejected Date</label>
                        <div class="col-sm-8 ">
                            <input class="form-control" id="txtRejectedDate" name="txtRejectedDate" tabindex="20" placeholder="Rejected Date" type="text" maxlength="50" />
                        </div>
                    </div>
                </div>*@

                <div class="row col-sm-12 col-lg-12 col-md-12 ftop">
                    <div class="col-md-3">
                        <label for="ddlApplicationStatus" class="col-sm-6 control-label">Application Status</label>
                        <div class="col-sm-6">
                            <select id="ddlApplicationStatus" name="ddlApplicationStatus" tabindex="12" class="form-control">
                                <option selected="selected" value="Draft">Draft</option>
                                <option value="Final">Final</option>

                            </select>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="13" onclick="SaveData(1)" type="button" border="0">
                            <input class="btn btn-success" value="Update" style="display:none;" tabindex="13" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0">
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="16" onclick="ClearFields()" value="Reset" />
                            <a class="btn btn-success" id="btnList" tabindex="17" href="@Url.Content("~/SeparationApplication/ListSeparationApplication")">Search Separation Application</a>
                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="14" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" tabindex="15" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="15" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


    </form>
</section>

<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/SeparationApplication/AddSeparationApplication.js"></script>