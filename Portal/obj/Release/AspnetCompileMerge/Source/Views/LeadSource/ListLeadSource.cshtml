@{
    ViewBag.Title = "List LeadSource";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/CRMDashboard">CRM</a> >>List Lead Source </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditLeadSource" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtLeadSourceName" class="col-sm-4 control-label">Lead Source Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLeadSourceName" tabindex="1" name="txtLeadSourceName" placeholder="Search with Lead Source Name" type="text" maxlength="100" />
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="46" onchange="GetBranchStateId()" class="form-control"></select>
                        <input id="hdnBillingStateId" type="hidden" value="0" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="selstatus" class="col-sm-4 control-label">Active Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" tabindex="2" id="ddlStatus" class="form-control" style="width: 100%;height: 31px;">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
            </div> 
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" tabindex="3" alt="Save" id="btnSearch" onclick="SearchLeadSource()" type="button" border="0">
                        <input class="btn btn-success" type="button" tabindex="4" id="btnReset" onclick="ClearFields()" value="Reset" /> 
                        <a class="btn btn-success" id="btnList" tabindex="5" href="@Url.Content("~/LeadSource/AddEditLeadSource?accessMode=1")">Add More Lead Source</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/LeadSource/ListLeadSource.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>