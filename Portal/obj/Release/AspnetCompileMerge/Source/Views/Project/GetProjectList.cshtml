@model List<Portal.Core.ViewModel.ProjectViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
     .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;background-color:white">
        <table class="table table-bordered table-hover" id="tblUserList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>Project Name</center></th>
                    <th><center>Company Branch</center></th>
                    <th><center>Project Code</center></th>
                    <th><center>Customer Name</center></th>
                    <th><center>Customer Branch Name</center></th>
                    <th><center>Project Status</center></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.ProjectStatus == "True")
                    {
                        <tr class="success">
                            <td class="teal text" style="width:30px; margin:0px auto;">
                                <a style="color:darkblue;text-decoration:none" title="View" class="fa fa-eye" aria-hidden="true" href="~/Project/AddEditProject?ProjectId=@item.ProjectId&AccessMode=3"></a>
                            </td>
                            <td class="teal text" style="width:30px; margin:0px 2px auto;">
                                <a style="color:darkgreen;text-decoration:none" title="Edit" class="fa fa-pencil" href="~/Project/AddEditProject?ProjectId=@item.ProjectId&AccessMode=2"></a>
                            </td>

                            <td align="center">@item.ProjectName</td>
                            <td align="center">@item.CompanyBranchName</td>
                            <td align="center">@item.ProjectCode</td>
                            <td align="center">@item.CustomerName</td>
                            <td align="center">@item.CustomerBranchName</td>
                           
                            <td align="center">@(item.ProjectStatus == "True" ? "Active" : "Inactive")</td>

                        </tr>
                   }
                    else
                    {
                        <tr class="danger">
                            <td class="teal text" style="width:30px; margin:0px auto;">
                                <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/Project/AddEditProject?ProjectId=@item.ProjectId&AccessMode=3"></a>
                            </td>
                            <td class="teal text" style="width:30px; margin:0px 2px auto;">
                                <a style="color:darkgreen" class="fa fa-pencil" href="~/Project/AddEditProject?ProjectId=@item.ProjectId&AccessMode=2"></a>
                            </td>

                            <td align="center">@item.ProjectName</td>
                            <td align="center">@item.CompanyBranchName</td>
                            <td align="center">@item.ProjectCode</td>
                            <td align="center">@item.CustomerName</td>
                            <td align="center">@item.CustomerBranchName</td>

                            <td align="center">@(item.ProjectStatus == "True" ? "Active" : "Inactive")</td>

                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblUserList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>