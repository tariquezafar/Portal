@model List<Portal.Core.ViewModel.CustomerFollowUpViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblLeadList" >
            <thead>
                <tr> 
                    <th>Follow Up</th>   
                    <th>Due DateTime</th>  
                    <th>Reminder DateTime</th>  
                    <th>Remarks</th> 
                    <th>Status Reason</th> 
                    <th>Priority</th>  
                    <th>Status</th>
                    <th>Follow Up By User</th>
                    @*<th>Created By</th> 
                    <th>Created Date</th> 
                    <th>Modified By</th>
                    <th>Modified Date</th>*@ 
                     
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success"> 
                        <td>
                            @item.FollowUpActivityTypeName 
                            <input type="hidden" id="hdnCustomerFollowUpId" value="@item.CustomerFollowUpId" />
                            <input type="hidden" id="hdnFollowUpActivityTypeId" value="@item.FollowUpActivityTypeId" />
                            <input type="hidden" id="hdnFollowUpActivityTypeName" value="@item.FollowUpActivityTypeName" />
                            <input type="hidden" id="hdnFollowUpSequenceNo" value="@item.FollowUpSequenceNo" />
                        </td>
                        <td>@item.FollowUpDueDateTime 
                            <input type="hidden" id="hdnFollowUpDueDateTime" value="@item.FollowUpDueDateTime" />
                        </td>
                        <td>@item.FollowUpReminderDateTime 
                            <input type="hidden" id="hdnFollowUpReminderDateTime" value="@item.FollowUpReminderDateTime" />
                         </td>
                        <td>@item.FollowUpRemarks
                            <input type="hidden" id="hdnFollowUpRemarks" value="@item.FollowUpRemarks" />
                        </td>
                        <td>@item.PriorityName
                            <input type="hidden" id="hdnPriority" value="@item.Priority" />
                            <input type="hidden" id="hdnPriorityName" value="@item.PriorityName" />
                        </td>
                        <td>@item.FollowUpStatusName
                            <input type="hidden" id="hdnFollowUpStatusId" value="@item.FollowUpStatusId" />
                            <input type="hidden" id="hdnFollowUpStatusName" value="@item.FollowUpStatusName" />
                        </td>
                        <td>@item.FollowUpStatusReason
                            <input type="hidden" id="hdnFollowUpStatusReason" value="@item.FollowUpStatusReason" />
                        </td>
                        <td>@item.FollowUpByUserName
                            <input type="hidden" id="hdnFollowUpByUserId" value="@item.FollowUpByUserId" />
