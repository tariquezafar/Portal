                            <input type="hidden" id="hdnFollowUpCreatedBy" value="@item.CreatedBy" />
                            
                       </td>
                        
                        @*<td>@item.CreatedBy
                           
                        </td>
                        <td> @item.CreatedDate
                            <input type="hidden" id="hdnLeadCreatedDate" value="@item.CreatedDate" />
                        </td>
                        <td> @item.ModifiedBy
                            <input type="hidden" id="hdnLeadModifiedBy" value="@item.ModifiedBy" />
                        </td>
                        <td>@item.ModifiedDate
                            <input type="hidden" id="hdnLeadModifiedDate" value="@item.ModifiedDate" />
                        </td>*@ 
                        
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" onclick="EditFollowUpRow(this);" href="#"></a>
                        </td>
                        
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
