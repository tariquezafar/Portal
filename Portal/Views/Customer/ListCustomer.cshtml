@{
    ViewBag.Title = "List Customer";
    Layout = "~/Views/Shared/_SaleLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/SaleDashboard">Sale </a> >> List Customer </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditCustomer" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group  col-md-4">
                    <label for="txtCustomerName" class="col-sm-4 control-label">Customer Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="1" placeholder="Search with Customer Name" type="text" maxlength="100" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" /> 
                        <input id="hdnListStatus" type="hidden" value="@ViewData["ListStatus"]" /> 
                        <input id="hdnCurrentDate" type="hidden" value="@ViewData["currentDate"]" /> 
                        
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtCustomerCode" class="col-sm-4 control-label">Customer Code</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtCustomerCode" name="txtCustomerCode" tabindex="2" placeholder="Search with Customer Code" type="text" maxlength="50" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtMobileNo" class="col-sm-4 control-label">Mobile No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtMobileNo" name="txtMobileNo" tabindex="3" placeholder="Search with Customer Mobile No." type="text" maxlength="50" />
                    </div>
                </div>
            </div>
            <div class="col-md-12">
              <div class="form-group  col-md-4">
                    <label for="ddlCustomerType" class="col-sm-4 control-label">Customer Type</label>
                    <div class="col-sm-8">
                        <select id="ddlCustomerType" name="ddlCustomerType" tabindex="4" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="txtCity" class="col-sm-4 control-label">City</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCity" name="txtCity" tabindex="5" placeholder="Search with City." type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtState" class="col-sm-4 control-label">State</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtState" name="txtState" tabindex="6" placeholder="Search with State." type="text" maxlength="50" />
                    </div>
                </div>
            </div>
           <div class="col-md-12">
               <div class="form-group col-md-4" style="display:none;">
                   <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                   <div class="col-sm-8">
                       <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                   </div>
               </div>
                <div class="form-group  col-md-4">
                    <label for="ddlStatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" id="ddlStatus" tabindex="7" class="form-control">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
            </div> 
            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="8" id="btnSearch" onclick="SearchCustomer()" type="button" border="0">
                        <input class="btn btn-success" type="button" tabindex="8" id="btnReset" onclick="ClearFields()" value="Reset" /> 
                        <a class="btn btn-success" id="btnList" tabindex="8" href="@Url.Content("~/Customer/AddEditCustomer?accessMode=1")">Add More Customer</a>
                        <a class="btn btn-success" alt="Export" tabindex="10" id="btnExport" onclick="OpenPrintPopup();" border="0">Export</a>
                    </center>
                </div>

                @*<div class="col-md-3" style="text-align:right">
                    <input class="btn btn-success" value="Export" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">
                </div>*@
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12 ftop">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

        <div class="modal fade" id="printModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Customer Reports</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ddlPrintOption" class="col-sm-4 control-label">Report Option</label>
                            <div class="col-sm-8">
                                <select id="ddlPrintOption" name="ddlPrintOption" onchange="ShowHidePrintOption()" tabindex="1" class="form-control">
                                    <option selected="selected" value="PDF">PDF</option>
                                    <option value="Excel">Excel</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-success" target="_blank" href="#" id="btnPdf">Print</a>
                        <a class="btn btn-success" style="display:none;" target="_blank" href="#" id="btnExcel">Print</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Customer/ListCustomer.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>