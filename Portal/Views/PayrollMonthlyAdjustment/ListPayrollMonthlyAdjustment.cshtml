@{
    ViewBag.Title = "List Payroll Monthly Adjustment";
    Layout = "~/Views/Shared/_PayrollLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/PayrollDashboard">Payroll </a> >> List Payroll Monthly Adjustment</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditPO" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="ddlMonth" class="col-sm-4 control-label">Payroll Process Month</label>
                    <div class="col-sm-8 ">
                        <select id="ddlMonth" name="ddlMonth"  tabindex="1" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="txtEmployee" class="col-sm-4 control-label">Employee</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployee" name="txtEmployee" value="" tabindex="2" placeholder="Enter Employee Name" type="text" maxlength="50" />
                        <input type="hidden" id="hdnEmployeeId" name="hdnEmployeeId" value="0" />
                    </div>
                    
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlDepartment" class="col-sm-4 control-label">Department</label>
                    <div class="col-sm-8">
                        <select id="ddlDepartment" name="ddlDepartment" class="form-control" tabindex="3"></select>
                        <input type="hidden" id="hdnDepartment" name="hdnDepartment" value="0" />
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                
                
                    <div class="form-group col-md-4">
                        <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                        <div class="col-sm-8">
                            <select id="ddlCompanyBranch" name="ddlCompanyBranch" class="form-control" tabindex="4"></select>
                            <input type="hidden" id="hdnCompanyBranch" name="hdnCompanyBranch" value="0" />
                            <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                            <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />

                        </div>
                    
                </div>
               
            </div>

            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Search" tabindex="5" id="btnSearch" onclick="SearchPayrollMonthlyAdjustment();" type="button" border="0">
                        <input class="btn btn-success" type="button" tabindex="6" id="btnReset" onclick="ClearFields()" value="Reset" /> 
                        <a class="btn btn-success" id="btnList" tabindex="7" href="@Url.Content("~/PayrollMonthlyAdjustment/AddEditPayrollMonthlyAdjustment?accessMode=1")">Add More Payroll Monthly Adjustment</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/PayrollMonthlyAdjustment/ListPayrollMonthlyAdjustment.js"></script>