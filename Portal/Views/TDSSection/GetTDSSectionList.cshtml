@model List<Portal.Core.ViewModel.TDSSetionViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table{
        margin-left:0px;
        margin-right:20px
    }
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
 table tr:nth-child(2n+1) {
    
    background-color: #dbe5f7;
    }

     table tr:nth-child(2n) {
    
    background-color: #dbe5f7;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table table-bordered table-hover" id="tblCountryList">
            <thead>
                <tr>
                    <th colspan="2">Action</th>
                    <th><center>Section Name</center></th>
                    <th><center>Section Desc</center></th>
                    <th><center>Section MAX Value</center></th>
                    <th><center>Status</center></th>
                    <th><center>Company Branch</center></th>
               </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="info">
                        <td style="width:30px; margin:0px auto;">
                            <div class="teal text "><a style="color:darkblue;text-decoration:none" title="View" class="fa fa-eye" aria-hidden="true" href="~/TDSSection/AddEditTDSSection?tdssectionId=@item.SectionId&AccessMode=3"></a></div>
                        </td>
                        <td style="width:30px; margin:0px 2px auto;">
                            <div class="teal text">  <a style="color:darkgreen;text-decoration:none" title="Edit" class="fa fa-pencil" href="~/TDSSection/AddEditTDSSection?tdssectionId=@item.SectionId&AccessMode=2"></a></div>
                        </td>
                        <td align="center">@item.SectionName</td>
                        <td align="center">@item.SectionDesc</td>
                        <td align="center">@item.SectionMaxValue</td>
                        <td align="center">@(item.TDSSetion_Status==true?"Active":"Inactive")</td>
                        <td align="center">@item.CompanyBranchName</td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblCountryList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>