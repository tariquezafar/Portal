@{
    ViewBag.Title = "AddEditEmailTemplate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/editor.css" rel="stylesheet" />




<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }

    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }

    legend {
        display: block;
        width: 40%;
        padding: 0;
        margin-bottom: 5px;
        font-size: 15px;
        line-height: inherit;
        color: #333;
        border: 0;
        border-bottom: 0px solid #e5e5e5;
    }
    /*** custom checkboxes ***/

    input[type=checkbox] {
        display: none;
    }
        /* to hide the checkbox itself */
        input[type=checkbox] + label:before {
            font-family: FontAwesome;
            display: inline-block;
        }

        input[type=checkbox] + label:before {
            content: "\f096";
        }
        /* unchecked icon */
        input[type=checkbox] + label:before {
            letter-spacing: 10px;
        }
        /* space between checkbox and label */

        input[type=checkbox]:checked + label:before {
            content: "\f046";
        }
        /* checked icon */
        input[type=checkbox]:checked + label:before {
            letter-spacing: 5px;
        }
    /* allow space for check mark */
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin </a> >> Add/Edit Email Template</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditTermTemplate" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtEmailTemplateName" class="col-sm-4 control-label">Email Subject&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmailTemplateName" name="txtEmailTemplateName" tabindex="1" placeholder="Enter Subject Name" type="text" maxlength="100" />
                        <input id="hdnEmailTemplateId" type="hidden" value="@ViewData["emailtemplateId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlEmailTemplateType" class="col-sm-4 control-label">Email Type&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select name="ddlEmailTemplateType" id="ddlEmailTemplateType" class="form-control" tabindex="2"></select>
                    </div>

                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="5" class="form-control"></select>
                    </div>
                </div>
            </div>

                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label for="chkStatus" class="col-sm-4 control-label">Active Status&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <input type="checkbox" checked name="chkStatus" id="chkStatus" class="" />
                            <label style="font-size: 24px; " tabindex="3" for="chkStatus"></label>
                        </div>
                    </div>

                </div>
          
                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label for="txtEmailTemplateDesc" class="col-sm-2 control-label" style="margin-top:10px">Email Template Desc&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-10" id="txtEditor" style="background-color:#fff;" tabindex="4">

                        </div>
                    </div>
                    <div class="form-group  col-md-4">

                    </div>
                </div>
            


            <div class="col-sm-12 col-lg-12 col-md-12">
                <div id="divTermTemplateList">
                </div>
            </div>


            <div class="row col-sm-12 col-lg-12 col-md-12 ftop">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" onclick="SaveData(1)" tabindex="5" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" alt="Update" id="btnUpdate" tabindex="5" onclick="SaveData(2)" type="button" border="0"> 
                        <a class="btn btn-success" id="btnReset" href="@Url.Content("~/EmailTemplate/AddEditEmailTemplate")" tabindex="8">Reset</a>
                        <a class="btn btn-success" id="btnList" href="@Url.Content("~/EmailTemplate/ListEmailTemplate")" tabindex="9">Search Email Template</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="6" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" tabindex="7" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="7" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/editor.js"></script>
<script>
			$(document).ready(function() {
				$("#txtEditor").Editor();
			});
</script>
<script src="~/Scripts/EmailTemplate/AddEmail.js"></script>
