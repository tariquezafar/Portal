@model List<Portal.Core.ViewModel.EmailTemplateViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table{
        background-color:white;
        margin-right:10px;
        margin-left:5px
    }
      .table th {
    background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    color:#fff;
}
</style>
@if (Model != null && Model.Count > 0)
{
    <div>
        <table class="table table-bordered" id="tblCityList">
            <thead>
                <tr><th colspan="2"><center>Action</center></th>
                    <th><center>Email Subject</center></th>
                    <th><center>Email Type Name</center></th> 
                    <th><center>Company Branch</center></th> 
                    <th><center>Created By</center></th>
                    <th><center>Created Date</center></th>
                    <th><center>Modified By</center></th>
                    <th><center>Modified Date</center></th>
                    <th><center>Status</center></th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {   if (item.EmailTemplateStatus == true)
                    {
                    <tr class="success">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a title="View" style="color:darkblue;text-decoration:none;" class="fa fa-eye" aria-hidden="true" href="~/EmailTemplate/AddEditEmailTemplate?emailTemplateId=@item.EmailTemplateId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a title="Edit" style="color:darkgreen;text-decoration:none;" class="fa fa-pencil" href="~/EmailTemplate/AddEditEmailTemplate?emailTemplateId=@item.EmailTemplateId&AccessMode=2"></a>
                        </td>

                        <td align="center">@item.EmailTemplateSubject</td>
                        <td align="center">@item.EmailTemplateTypeName</td> 
                        <td align="center">@item.CompanyBranchName</td> 
                        <td align="center">@item.CreatedByName</td>
                        <td align="center">@item.CreatedDate</td>
                        <td align="center">@item.ModifiedByName</td>
                        <td align="center">@item.ModifiedDate</td>

                        <td accesskey="center">@(item.EmailTemplateStatus == true ? "Active" : "Inactive")</td>
                        
                    </tr>
                    }
                    else
                    {
                        <tr class="danger">
                            <td class="teal text" style="width:30px; margin:0px auto;">
                                <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/EmailTemplate/AddEditEmailTemplate?emailTemplateId=@item.EmailTemplateId&AccessMode=3"></a>
                            </td>
                            <td class="teal text" style="width:30px; margin:0px 2px auto;">
                                <a style="color:darkblue" class="fa fa-pencil" href="~/EmailTemplate/AddEditEmailTemplate?emailTemplateId=@item.EmailTemplateId&AccessMode=2"></a>
                            </td>

                            <td align="center">@item.EmailTemplateSubject</td>
                            <td align="center">@item.EmailTemplateTypeName</td>
                            <td align="center">@item.CompanyBranchName</td> 
                            <td align="center">@item.CreatedByName</td>
                            <td align="center">@item.CreatedDate</td>
                            <td align="center">@item.ModifiedByName</td>
                            <td align="center">@item.ModifiedDate</td>

                            <td align="center">@(item.EmailTemplateStatus == true ? "Active" : "Inactive")</td>

                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblCityList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>