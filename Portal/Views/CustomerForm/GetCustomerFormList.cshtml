@model List<Portal.Core.ViewModel.CustomerFormViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblCustomerPaymentList">
            <thead>
                <tr>
                   
                   
                    <th>Customer Name</th> 
                    <th>Invoice No</th> 
                    <th>Ref. No.</th>
                    <th>Ref. Date</th> 
                    <th>Created By User</th>
                   <th>Form Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">                       
                        <td>@item.CustomerName</td> 
                        <th>@item.InvoiceNo</th> 
                        <td>@item.RefNo</td>
                        <td>@item.RefDate</td> 
                        <td>@item.CreatedByUserName</td> 
                        <td>@item.FormStatus</td>                     
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white"  class="fa fa-eye" aria-hidden="true" href="~/CustomerForm/AddEditCustomerForm?CustomerFormTrnId=@item.CustomerFormTrnId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/CustomerForm/AddEditCustomerForm?CustomerFormTrnId=@item.CustomerFormTrnId&AccessMode=2"></a>
                        </td>

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblCustomerPaymentList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>