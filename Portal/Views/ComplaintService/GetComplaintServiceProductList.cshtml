@model List<Portal.Core.ViewModel.ComplaintServiceProductDetailViewModel>
<style>
   .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
 table tr:nth-child(2n+1) {
    
    background-color: #d0e9c6;
    }

     table tr:nth-child(2n) {
    
    background-color: #d0e9c6;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table table-bordered table-hover" id="tblProductList">
            <thead>
                <tr>

                    <th style="text-align:center;">Product Name</th>
                    <th style="text-align:center;">Product Code</th>
                    <th style="text-align:center;">Warranty Start Date</th>
                    <th style="text-align:center;">Warranty End Date</th>
                    <th style="text-align:center;">Quantity</th>
                    <th style="text-align:center;">Remarks</th>
                    <th colspan="2" align="center" class="editonly">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="success">

                    <td>
                        @item.ProductName
                        <input type="hidden" id="hdnComplaintProductDetailId" value="@item.ComplaintProductDetailID" />
                        <input type="hidden" id="hdnProductId" value="@item.ProductId" />
                        <input type="hidden" id="hdnProductName" value="@item.ProductName" />
                        <input type="hidden" id="hdnSequenceNo" value="@item.SequenceNo" />
                        <input type="hidden" id="hdnMappingId" value="@item.MappingId" />
                    </td>
                    <td>
                        @item.ProductCode
                        <input type="hidden" id="hdnProductCode" value="@item.ProductCode" />
                    </td>
                    <td>
                        @item.WarrantyStartDate
                        <input type="hidden" id="hdnProductWarrantyStartDate" value="@item.WarrantyStartDate" />
                    </td>
                    <td>
                        @item.WarrantyEndDate
                        <input type="hidden" id="hdnProductWarrantyEndDate" value="@item.WarrantyEndDate" />
                    </td>
                    <td>
                        @item.Quantity
                        <input type="hidden" id="hdnQuantity" value="@item.Quantity" />

                    </td>
                    <td>
                        @item.Remarks
                        <input type="hidden" id="hdnRemarks" value="@item.Remarks" />

                    </td>


                    <td class="btn btn-success table_btn" id="btnEditProduct" style="width:30px; margin:0px 2px auto;text-align:center;">
                        <a style="color:white" class="fa fa-pencil-square-o" onclick="EditProductRow(this);" href="#"></a>
                    </td>
                    <td class="btn btn-success table_btn" id="btnRemoveProduct" style="width:30px; margin:0px 2px auto;text-align:center;">
                        <a style="color:white" class="fa fa-trash" onclick="RemoveProductRow(this)" href="#"></a>
                    </td>
                </tr>
           }

            </tbody>
        </table>
    </div>
}
else
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr>

                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Warranty Start Date</th>
                    <th>Warranty End Date</th>
                    <th>Quantity</th>
                    <th>Remarks</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
