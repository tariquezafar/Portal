@model List<Portal.Core.ViewModel.CustomerSOViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
        color: #fff;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table mapping-list" id="tblSOList">
            <thead>
                <tr>
                    <th style="padding-left:13rem">Select<br /> <input type="checkbox" id="chkALLAccessAll" onclick="CheckAllCheckBoxAccess(this)" /></th>
                    <th style="padding-left:4rem">SO No.</th>
                    <th style="padding-left:4rem">SO Date</th>
                    <th style="padding-left:4rem">Quotation No.</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td> <input type="checkbox" id="chkAddAccess" name="chkAddAccess" class="AddAccess" /></td>
                        <td>
                            @item.SONo
                            <input type="hidden" id="hdnSONo" value="@item.SONo" />
                            <input type="hidden" id="hdnSOId" value="@item.SOId" />
                        </td>
                        <td>
                            @item.SODate
                            <input type="hidden" id="hdnSODate" value="@item.SODate" />
                        </td>

                        <td>
                            @item.QuotationNo
                            <input type="hidden" id="hdnQuotationNo" value="@item.QuotationNo" />
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblSOList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>