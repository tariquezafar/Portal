@model List<Portal.Core.ViewModel.DispatchPlanViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }
    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }

    table tr:nth-child(2n+1) {
        background-color: #dbe5f7;
    }

    table tr:nth-child(2n) {
        background-color: #dbe5f7;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table table-bordered table-hover" id="tblPurchaseIndentList">
            <thead>
                <tr>
                    <th><center>Select</center></th>
                    <th><center>Dispatch Plan No.</center></th>
                    <th><center>Dispatch Plan Date</center></th>
                    <th><center>Customer Name</center></th>
                    <th><center>Company Branch</center></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="success">
                    <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                        <a style="color:white;text-decoration:none" title="Edit" class="fa fa-pencil-square-o" href="#" onclick="SelectDispatchPlan('@item.DispatchPlanID', '@item.DispatchPlanNo' ,'@item.DispatchPlanDate')"></a>
                    </td>
                   
                    <td>@item.DispatchPlanNo</td>
                    <td>@item.DispatchPlanDate</td>
                    <td>@item.CustomerName</td>
                    <td>@item.BranchName</td>

                </tr>

                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center"> Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblPurchaseIndentList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>