        });

    });
</script>

<script>
    $(document).ready(function () {
        calc_total();
    });
    function calc_total() {      
        var sum = 0;
        var TotalQuantity = 0;
        var BasicValue = 0;
        var CGST_Amount = 0;
        var SGST_Amount = 0;
        var IGST_Amount = 0;
        var FreightValue = 0;
        var LoadingValue = 0;
        var InsuranceValue = 0;
        var FreightCGST_Amt = 0;
        var FreightSGST_Amt = 0;
        var FreightIGST_Amt = 0;
        var LoadingCGST_Amt = 0;
        var LoadingSGST_Amt = 0;
        var LoadingIGST_Amt = 0;
        var InsuranceCGST_Amt = 0;
        var InsuranceSGST_Amt = 0;
        var InsuranceIGST_Amt = 0;
       
        $(".GrossAmt").each(function () {
            sum += parseFloat($(this).text());
        });
        $(".TotalQuantity").each(function () {
            TotalQuantity += parseFloat($(this).text());
        });

        $(".BasicValue").each(function () {
            BasicValue += parseFloat($(this).text());
        });

        $(".CGST_Amount").each(function () {
            CGST_Amount += parseFloat($(this).text());
        });

        $(".SGST_Amount").each(function () {
            SGST_Amount += parseFloat($(this).text());
        });
        $(".IGST_Amount").each(function () {
            IGST_Amount += parseFloat($(this).text());
        });
        $(".FreightValue").each(function () {
            FreightValue += parseFloat($(this).text());
        });
        $(".LoadingValue").each(function () {
            LoadingValue += parseFloat($(this).text());
        });
        $(".InsuranceValue").each(function () {
            InsuranceValue += parseFloat($(this).text());
        });
        $(".FreightCGST_Amt").each(function () {
            FreightCGST_Amt += parseFloat($(this).text());
        });
        $(".FreightSGST_Amt").each(function () {
            FreightSGST_Amt += parseFloat($(this).text());
        });
        $(".FreightIGST_Amt").each(function () {
            FreightIGST_Amt += parseFloat($(this).text());
        });
        $(".LoadingCGST_Amt").each(function () {
            LoadingCGST_Amt += parseFloat($(this).text());
        });
        $(".LoadingSGST_Amt").each(function () {
            LoadingSGST_Amt += parseFloat($(this).text());
        });
        $(".LoadingIGST_Amt").each(function () {
            LoadingIGST_Amt += parseFloat($(this).text());
        });
        $(".InsuranceCGST_Amt").each(function () {
            InsuranceCGST_Amt += parseFloat($(this).text());
        });
        $(".InsuranceSGST_Amt").each(function () {
            InsuranceSGST_Amt += parseFloat($(this).text());
        });
        $(".InsuranceIGST_Amt").each(function () {
            InsuranceIGST_Amt += parseFloat($(this).text());
        });
       
        $('#spnTotalGrossAmt').html(sum.toFixed(2));
        $('#TotalQuantity').html(TotalQuantity.toFixed(2));
        $('#BasicValue').html(BasicValue.toFixed(2));
        $('#CGST_Amount').html(CGST_Amount.toFixed(2));
        $('#SGST_Amount').html(SGST_Amount.toFixed(2));
        $('#IGST_Amount').html(IGST_Amount.toFixed(2));
        $('#FreightValue').html(FreightValue.toFixed(2));
        $('#LoadingValue').html(LoadingValue.toFixed(2));
        $('#InsuranceValue').html(InsuranceValue.toFixed(2));
        $('#FreightCGST_Amt').html(FreightCGST_Amt.toFixed(2));
        $('#FreightSGST_Amt').html(FreightSGST_Amt.toFixed(2));
        $('#FreightIGST_Amt').html(FreightIGST_Amt.toFixed(2));
        $('#LoadingCGST_Amt').html(LoadingCGST_Amt.toFixed(2));
        $('#LoadingSGST_Amt').html(LoadingSGST_Amt.toFixed(2));
        $('#LoadingIGST_Amt').html(LoadingIGST_Amt.toFixed(2));
        $('#InsuranceCGST_Amt').html(InsuranceCGST_Amt.toFixed(2));
        $('#InsuranceSGST_Amt').html(InsuranceSGST_Amt.toFixed(2));
        $('#InsuranceIGST_Amt').html(InsuranceIGST_Amt.toFixed(2));
    }
</script>