@{
    ViewBag.Title = "List Appraisal Template";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .table {
      width: 78% !important;
    max-width: 78% !important;
    margin-bottom: 20px;
}
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> List Appraisal Template </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditQuotation" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtTemplateName" class="col-sm-4 control-label">Template Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtTemplateName" name="txtTemplateName" tabindex="1" placeholder="Search with Template Name" type="text" maxlength="100" />
                      
                    </div>
                </div>
                <div class="form-group  col-md-6"> 
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group  col-md-6">
                    <label for="ddlDepartment" class="col-sm-4 control-label">Department</label>
                    <div class="col-sm-8">
                        <select id="ddlDepartment" name="ddlDepartment" onchange="BindDesignationList(0)" tabindex="15" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group  col-md-6">
                    <label for="ddlDesignation" class="col-sm-4 control-label">Designation</label>
                    <div class="col-sm-8">
                        <select id="ddlDesignation" name="ddlDesignation" tabindex="16" class="form-control"></select>
                    </div>
                </div>

            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" tabindex="2" class="form-control" id="ddlStatus">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div> 
            </div>
           
            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" tabindex="7" onclick="SearchAppraisalTemplate()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="8" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" tabindex="9" href="@Url.Content("~/PMS_AppraisalTemplate/AddEditAppraisalTemplate")">Add More Appraisal Template</a>
                    </center>
                </div>

                <div class="col-md-3" style="text-align:right">
                    <input class="btn btn-success" value="Export" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/PMS_AppraisalTemplate/ListAppraisalTemplate.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>