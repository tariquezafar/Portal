@model List<Portal.Core.ViewModel.WorkOrderProductViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>

@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Product Description</th>
                    <th>Unit</th>
                    <th>Work Order Quantity</th>
                    <th>Total Fabrication Quantity</th>
                    <th>Pending Quantity</th>
                    <th>Recived Quantity</th>
                    <th colspan="2" align="center">Action</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.SequenceNo
                         <input type="hidden" id="hdnSequenceNo" value="@item.SequenceNo" />
                        </td>
                        <td>@item.ProductName
                        <input type="hidden" id="hdnWorkOrderProductDetailId" value="@item.WorkOrderProductDetailId" />
                        <input type="hidden" id="hdnProductId" value="@item.ProductId" />
                        <input type="hidden" id="hdnProductName" value="@item.ProductName" />                      
                        <input type="hidden" id="hdnIsSerializedProduct" value="@item.IsSerializedProduct" />
                        </td>
                        <td>@item.ProductCode
                        <input type="hidden" id="hdnProductCode" value="@item.ProductCode" />
                        </td>
                        <td>
                            @item.ProductShortDesc
                            <input type="hidden" id="hdnProductShortDesc" value="@item.ProductShortDesc" />
                        </td>
                        <td>@item.UOMName
                            <input type="hidden" id="hdnUOMName" value="@item.UOMName" />                            
                        </td>
                        <td>
                            @item.WorkorderQuantity
                            <input type="hidden" id="hdnWorkOrderQuantity" value="@item.WorkorderQuantity" />
                        </td>
                        <td>
                            @item.TotalRecivedFabQuantity
                            <input type="hidden" id="hdnTotalRecivedFabQuantity" value="@item.TotalRecivedFabQuantity" />
                        </td>
                        <td>
                            @item.PendingQuantity
                            <input type="hidden" id="hdnPendingQunatity" value="@item.PendingQuantity" />
                        </td>
                        <td>
                        @item.RecivedQuantity
                            <input type="hidden" id="hdnRecivedQuantity" value="@item.RecivedQuantity" />
                        <input type="hidden" id="hdnQuantity" value="@item.Quantity" />
                        </td>                      
                        <td style="width:30px; margin:0px 2px auto;">
                            <a class="fa fa-eye erp-btn" onclick="OpenPrintPopup('@item.ProductId', '@item.ProductName','@item.RecivedQuantity','@item.IsSerializedProduct');" href="#"></a>
                        </td>
                        
                        <td style="width:30px; margin:0px 2px auto;">
                            <a class="fa fa-pencil-square-o erp-btn" onclick="EditProductRow(this);" href="#"></a>
                        </td>
                        @*<td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-trash"  onclick="RemoveProductRow(this)" href="#"></a>
                        </td>*@
                    </tr>
                    <tr>
                        <td colspan="11" width="100%" height="auto">
                            <div style="display:none;" id="divProduct_@item.ProductId">

                            </div>
                        </td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Product Description</th>
                    <th>Unit</th>
                    <th>Work Order Quantity</th>
                    <th>Total Fabrication Quantity</th>
                    <th>Pending Quantity</th>   
                    <th>Recived Quantity</th>   
                    <th colspan="2" align="center">Action</th>
                    
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
