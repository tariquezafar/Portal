@{
    ViewBag.Title = "Separation Order";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }

    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }


    legend {
        display: block;
        width: 40%;
        padding: 0;
        margin-bottom: 5px;
        font-size: 15px;
        line-height: inherit;
        color: #333;
        border: 0;
        border-bottom: 0px solid #e5e5e5;
    }
    /*** custom checkboxes ***/
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >>Separation Order </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditSeparationOrder" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtSeparationOrderNo" class="col-sm-4 control-label">Separation Order No</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtSeparationOrderNo" name="txtSeparationOrderNo" tabindex="1" placeholder="Auto Generated Separation Order No." type="text" maxlength="100" />
                        <a style="display:none;color:#fff;" class="btn btn-success" id="btnAddNew" tabindex="2" href="@Url.Content("~/SeparationOrder/AddEditSeparationOrder?accessMode=1")">New</a>
                        <input id="hdnSeparationOrderId" type="hidden" value="@ViewData["separationorderId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label for="txtSeparationOrderDate" class="col-sm-4 control-label right-text">Separation Order Date&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtSeparationOrderDate" name="txtSeparationOrderDate" tabindex="3" value="@ViewData["currentDate"]" placeholder="Enter Separation Order Date" type="text" maxlength="50" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtEmployee" class="col-sm-4 control-label">Employee&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployee" name="txtEmployee" tabindex="4" placeholder="Enter Employee" type="text" maxlength="50" />
                        <input type="hidden" id="hdnEmployeeId" name="hdnEmployeeId" value="0" />
                    </div>
                </div> 
            </div>
           


            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtExitInterviewNo" class="col-sm-4 control-label">Exit Interview</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtExitInterviewNo" name="txtExitInterviewNo" tabindex="5" placeholder="Exit Interview No." type="text" maxlength="50" />
                        <input type="hidden" id="hdnExitInterviewId" name="hdnExitInterviewId" value="0" />
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="txtEmployeeClearanceNo" class="col-sm-4 control-label">Employee Clearance&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployeeClearanceNo" name="txtEmployeeClearanceNo" tabindex="6" placeholder="Employee Clearance No." type="text" maxlength="50" />
                        <input type="hidden" id="hdnEmployeeClearanceId" name="hdnEmployeeClearanceId" value="0" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtSeparationRemarks" class="col-sm-4 control-label">Separation Remarks&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <textarea rows="3" cols="5" class="form-control" id="txtSeparationRemarks" name="txtSeparationRemarks" tabindex="7" placeholder="Enter Separation Remarks" type="text" maxlength="1000"></textarea>

                    </div>
                </div> 
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtExperienceLetter" class="col-sm-4 control-label">Experience Letter&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <textarea rows="7" cols="18" class="form-control" id="txtExperienceLetter" name="txtExperienceLetter" tabindex="8" placeholder="Write Experience Letter" type="text" maxlength="4000"></textarea>
                    </div>
                </div> 
               
                <div class="form-group col-md-4">
                    <label for="ddlSeparationStatus" class="col-sm-4 control-label">Separation Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlSeparationStatus" name="ddlSeparationStatus" tabindex="9" class="form-control">
                            <option selected="selected"  value="Draft">Draft</option>
                            <option value="Final">Final</option>
                        </select>
                    </div>
                </div>
                
            </div>
                <div class="col-md-12" id="divCreated" style="display:none;">
                    <div class="form-group col-md-6">
                        <label for="txtCreatedBy" class="col-sm-4 control-label">Created By</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="10" placeholder="Created By User Name" type="text" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtCreatedDate" class="col-sm-4 control-label">Created Date</label>
                        <div class="col-sm-8 ">
                            <input class="form-control" id="txtCreatedDate" name="txtCreatedDate" tabindex="11" placeholder="Created Date" type="text" maxlength="50" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12" id="divModified" style="display:none;">
                    <div class="form-group col-md-6">
                        <label for="txtModifiedBy" class="col-sm-4 control-label">Modified By</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtModifiedBy" name="txtModifiedBy" tabindex="12" placeholder="Modified By User Name" type="text" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtModifiedDate" class="col-sm-4 control-label">Modified Date</label>
                        <div class="col-sm-8 ">
                            <input class="form-control" id="txtModifiedDate" name="txtModifiedDate" tabindex="13" placeholder="Modified Date" type="text" maxlength="50" />
                        </div>
                    </div>
                </div>
                <div class="row col-sm-12 col-lg-12 col-md-12 ftop">
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="14" onclick="SaveData(1)" type="button" border="0"> 
                            <input class="btn btn-success" value="Update" style="display:none;" tabindex="14" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                            <a class="btn btn-success" id="btnReset" tabindex="15" href="@Url.Content("~/SeparationOrder/AddEditSeparationOrder")">Reset</a>
                            <a class="btn btn-success" id="btnList" tabindex="16" href="@Url.Content("~/SeparationOrder/ListSeparationOrder")">Search Separation Order</a>
                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


    </form>
</section>

<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/SeparationOrder/AddSeparationOrder.js"></script>