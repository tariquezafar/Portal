                            <input type="hidden" id="hdnCustomSecHigherEduCessPerc" value="@item.CustomSecHigherEduCessPerc" />
                            <input type="hidden" id="hdnCustomSecHigherEduCessAmt" value="@item.CustomSecHigherEduCessAmt" />
                            <input type="hidden" id="hdnCustomEducationalCessPerc" value="@item.CustomEducationalCessPerc" />
                            <input type="hidden" id="hdnCustomEducationalCessAmt" value="@item.CustomEducationalCessAmt" />

                        </td>
                      
                        <td>
                            @item.UOMName
                        </td>
                        <td>
                            @item.Price

                        </td>
                        <td>
                            @item.Currency
                        </td>
                        <td>
                            @item.Quantity


                        </td>
                        <td>
                            @item.DiscountAmount

                        </td>

                        <td>
                            @item.AssValue

                        </td>
                        
                        <td>
                            @item.CustomDutyPerc

                        </td>
                        <td>
                            @item.BCDAmtRs

                        </td>
                        <td>
                            @item.ExciseDutyPerc

                        </td>
                        <td>
                            @item.ExciseDutyRate

                        </td>
                        <td>
                            @item.EducationalCessOnCVDPerc

                        </td>

                        <td>
                            @item.EducationalCessOnCVDAmt

                        </td>
                        <td>
                            @item.SecHigherEduCessOnCVDPerc

                        </td>
                        <td>
                            @item.SecHigherEduCessOnCVDAmt

                        </td>
                       
                        <td>
                            @item.CustomSecHigherEduCessPerc

                        </td>

                        <td>
                            @item.CustomSecHigherEduCessAmt

                        </td>
                        <td>
                            @item.CustomEducationalCessPerc

                        </td>
                        <td>
                            @item.CustomEducationalCessAmt

                        </td>

                        <td id="tdIGST_Perc">
                            @item.IGST_Perc

                        </td>
                        <td id="tdIGSTAmount">
                            @item.IGST_Amount


                        </td>
                        <td id="tdGSTCessPerc">
                            @item.GSTCessPerc

                        </td>
                        <td>
                            @item.GSTCessAmt

                        </td>
                        <td id="tdTotalPrice">
                            @item.Total

                        </td>
                        <td>
                            @item.HSN_Code

                        </td>

                        <td>
                            @item.RITC

                        </td>
                        <td>
                            @item.CTH

                        </td>

                        <td>
                            @item.CETH

                        </td>

                        <td>
                            @item.CNotn

                        </td>

                        <td>
                            @item.ENotn

                        </td>
                        <td>
                            @item.Cnsno

                        </td>
                        <td>
                            @item.Ensno

                        </td>

                       


                        <td>
                            @item.RSP

                        </td>

                        <td>
                            @item.LoadProv

                        </td>
                      
                       
                        <td class="editonly" style="width:30px; margin:0px 2px auto;">
                            <a class="fa fa-pencil-square-o erp-btn" onclick="EditProductRow(this);" href="#"></a>
                        </td>
                        <td class="editonly" style="width:30px; margin:0px 2px auto;">
                            <a class="fa fa-trash erp-btn" onclick="RemoveProductRow(this)" href="#"></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductList">
            <thead>
                <tr>
                   
                    <th style="display:none">S. No.</th>
                    <th>Product Name</th>
                    <th>Purchase UOM</th>
                    <th>Price</th>
                    <th>Currency</th>
                    <th>Quantity</th>
                    <th>Dis Amt.</th>
                    <th>Ass. Value</th>
                    <th> Amt(Rs)</th>
                    <th>CVD Amt (Rs)</th>
                    <th>Edu.Cess On CVD(%)</th>
                    <th>Amount</th>
                    <th>Sec & Hig. Edu.Cess On CVD(%)</th>
                    <th>Amount</th>
                    <th>Custom Edu.Cess(%)</th>
                    <th>Amount</th>
                    <th>Custom Sec & Hig. Edu. Cess(%)</th>
                    <th>Amount</th>
                    <th>IGST(%)</th>
                    <th>IGST Amt</th>
                    <th>GSTCess</th>
                    <th>Total Price</th>
                    <th>RITC</th>
                    <th>CTH</th>
                    <th>CETH</th>
                    <th>CNotn</th>
                    <th>ENotn</th>
                    <th>CNSNO</th>
                    <th>ENSNO</th>
                    <th>RSP</th>
                    <th>LoadProv</th>
                    <th>HSN Code</th>

                    <th colspan="2" align="center" class="editonly">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
<script>
    $(document).ready(function () {
        if ($("#hdnAccessMode").val() == "3") {
            $(".editonly").hide();
        }

    });
</script>