                        </td>
                        <td>
                            @item.ProductName
                            <input type="hidden" id="hdnPIProductDetailId" value="@item.InvoiceProductDetailId" />
                            <input type="hidden" id="hdnProductId" value="@item.ProductId" />
                            <input type="hidden" id="hdnProductName" value="@item.ProductName" />
                            <input type="hidden" id="hdnCustomDutyPerc" value="@item.CustomDutyPerc" />
                            <input type="hidden" id="hdnExciseDutyPerc" value="@item.ExciseDutyPerc" />
                            <input type="hidden" id="hdnCurrency" value="@item.Currency" />
                            <input type="hidden" id="hdnProductCode" value="@item.ProductCode" />
                            <input type="hidden" id="hdnUOMName" value="@item.UOMName" />
                            <input type="hidden" id="hdnProductShortDesc" value="@item.ProductShortDesc" />
                            <input type="hidden" id="hdnPrice" value="@item.Price" />
                            <input type="hidden" id="hdnQuantity" value="@item.Quantity" />
                            <input type="hidden" id="hdnIGSTPerc" value="@item.IGST_Perc" />
                            <input type="hidden" id="hdnIGSTAmount" value="@item.IGST_Amount" />
                            <input type="hidden" id="hdnTotalPrice" value="@item.Total" />
                            <input type="hidden" id="hdnDiscountPerc" value="@item.DiscountPercentage" />
                            <input type="hidden" id="hdnDiscountAmount" value="@item.DiscountAmount" />
                            <input type="hidden" id="hdnHSN_Code" value="@item.HSN_Code" />
                            <input type="hidden" id="hdnRITC" value="@item.RITC" />
                            <input type="hidden" id="hdnAssValue" value="@item.AssValue" />
                            <input type="hidden" id="hdnCTH" value="@item.CTH" />
                            <input type="hidden" id="hdnCETH" value="@item.CETH" />
                            <input type="hidden" id="hdnCNotn" value="@item.CNotn" />
                            <input type="hidden" id="hdnENotn" value="@item.ENotn" />
                            <input type="hidden" id="hdnCNSNO" value="@item.Cnsno" />
                            <input type="hidden" id="hdnENSNO" value="@item.Ensno" />
                            <input type="hidden" id="hdnRSP" value="@item.RSP" />
                            <input type="hidden" id="hdnLoadProv" value="@item.LoadProv" />
                            <input type="hidden" id="hdnBCDAmtRs" value="@item.BCDAmtRs" />
                            <input type="hidden" id="hdnCVDAmtRs" value="@item.CVDAmtRs" />
                            <input type="hidden" id="hdnCustomDutyPerc" value="@item.CustomDutyPerc" />
                            <input type="hidden" id="hdnCustomDutyRate" value="@item.CustomDutyRate" />
                            <input type="hidden" id="hdnExciseDutyPerc" value="@item.ExciseDutyPerc" />
                            <input type="hidden" id="hdnExciseDutyRate" value="@item.ExciseDutyRate" />
                            <input type="hidden" id="hdnGSTCessPerc" value="@item.GSTCessPerc" />
