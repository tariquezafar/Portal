@model List<Portal.Core.ViewModel.PurchaseInvoiceImportProductDetailViewModel>

<style>
    .table {
        width: 112% !important;
        max-width: 112% !important;
        margin-bottom: 20px;
        font-size: 12px;
    }

        .table th {
            background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
        }

        .table th {
            color: #ffffff;
            text-align: center;
        }

        .table tr {
            text-align: center;
        }
</style>
