{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table table table-bordered table-hover" id="tblProductList">
            <thead>
                <tr>
                   
                    <th style="display:none">S. No.</th>
                    <th>Product Name</th>      
                    <th>Purchase UOM</th>
                    <th>Price</th>
                    <th>Currency</th>
                    <th>Quantity</th>
                    <th>Dis Amt.</th>
                    <th>Ass. Value</th>
