@{
    ViewBag.Title = "List Location";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> List Location</b></p></div>
</div>
<section>
    <form action="#" id="frmListLocation" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtLocationName" class="col-sm-4 control-label">Location Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLocationName" name="txtLocationName" tabindex="1" placeholder="Searh with Location Name" type="text" maxlength="100" /> 
                    </div>
                </div>  
                <div class="form-group col-md-4"> 
                    <label for="txtLocationCode" class="col-sm-4 control-label">Location Code</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLocationCode" name="txtLocationCode" tabindex="2" placeholder="Search with Location Code" type="text" maxlength="50" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="2" class="form-control"></select>
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />

                    </div>
                </div> 
            </div>

            <div class="col-md-12">  
               
                <div class="form-group  col-md-4">
                    <label for="ddlLocationStatus" class="col-sm-4 control-label">Location Status</label>
                    <div class="col-sm-8">
                        <select id="ddlLocationStatus" name="ddlLocationStatus" tabindex="7" class="form-control">
                            <option value="">--All--</option>
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                    </div>
                </div> 
            </div>
           
              

            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="8" id="btnSearch" onclick="SearchLocation()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="9" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" tabindex="10" href="@Url.Content("~/Location/AddEditLocation?accessMode=1")">Add More Location</a>
                    </center>
                </div>
                
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin:50px;margin-top:10px;">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
 
<script src="~/Scripts/Location/ListLocation.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>