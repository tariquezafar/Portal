@{
    ViewBag.Title = "List ChasisModel";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/StoreDashboard">Production</a> >> List Chasis Model </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductSubGroup" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4 ">
                    <label for="txtChasisModelName" class="col-sm-4 control-label">Chasis Model Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtChasisModelName" name="txtChasisModelName" tabindex="1" placeholder="Search Chasis Model Name" type="text" maxlength="100" />                      
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" /> 
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlProductSubGroup" class="col-sm-4 control-label">Product Sub Group</label>
                    <div class="col-sm-8">
                        <select id="ddlProductSubGroup" name="ddlProductSubGroup" tabindex="2" class="form-control"></select>
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label for="txtChasisModelCode" class="col-sm-4 control-label">Chasis Model Code</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtChasisModelCode" name="txtChasisModelCode" tabindex="3" placeholder="Search Chasis Model Code" type="text" maxlength="100" />
                    </div>
                </div>
            </div> 
            
            <div class="col-md-12">   
                <div class="form-group col-md-4">
                    <label for="txtMotorModelCode" class="col-sm-4 control-label">Motor Model Code</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtMotorModelCode" name="txtMotorModelCode" tabindex="3" placeholder="Search Motor Model Code" type="text" maxlength="100" />

                    </div>
                </div>   
                <div class="form-group col-md-4" style="display:none;">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="12" class="form-control"></select>
                    </div>
                </div>          
                <div class="form-group col-md-4">
                    <label for="ddlStatus" class="col-sm-4 control-label">Status</label>
                     <div class="col-sm-8">
                        <select name="ddlStatus" tabindex="4" id="ddlStatus" class="form-control" >
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
                
            </div> 
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" tabindex="5" onclick="SearchChasisModel()" type="button" border="0">
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="6" onclick="ClearFields()" value="Reset" />
                        <a class="btn btn-success" id="btnList" tabindex="7" href="@Url.Content("~/ChasisModel/AddEditChasisModel?accessMode=1")">Add More Chasis Model</a>
                        <a class="btn btn-success" alt="Export" tabindex="10" id="btnExport" onclick="OpenPrintPopup();" border="0">Export</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin:50px;margin-top:10px">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="printModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Chasis Model Print</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ddlPrintOption" class="col-sm-4 control-label">Report Option</label>
                            <div class="col-sm-8">
                                <select id="ddlPrintOption" name="ddlPrintOption" onchange="ShowHidePrintOption()" tabindex="1" class="form-control">
                                    <option selected="selected" value="PDF">PDF</option>
                                    <option value="Excel">Excel</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-success" target="_blank" href="#" id="btnPdf">Print</a>
                        <a class="btn btn-success" style="display:none;" target="_blank" href="#" id="btnExcel">Print</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

                    </div>
                </div>

            </div>
        </div>
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/ChasisModel/ListChasisModel.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>