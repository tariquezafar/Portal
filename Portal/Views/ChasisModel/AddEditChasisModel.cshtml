@{
    ViewBag.Title = "Add Edit ChasisModel";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/StoreDashboard">Production</a> >> Add/Edit Chasis Model</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductSubGroup" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4 ">
                    <label for="txtChasisModelName" class="col-sm-4 control-label">Chasis Model Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtChasisModelName" name="txtChasisModelName" tabindex="1" placeholder="Enter Chasis Model Name" type="text" maxlength="100" />
                        <input id="hdnChasisModelID" type="hidden" value="@ViewData["chasisModelID"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" /> 
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlProductSubGroup" class="col-sm-4 control-label">Product Sub Group&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlProductSubGroup" name="ddlProductSubGroup"  tabindex="2" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtChasisModelCode" class="col-sm-4 control-label">Chasis Model Code&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtChasisModelCode" name="txtChasisModelCode" tabindex="3" placeholder="Enter Chasis Model Code" type="text" maxlength="100" />
                    </div>
                </div> 
            </div>
           
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtMotorModelCode" class="col-sm-4 control-label">Motor Model Code&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtMotorModelCode" name="txtMotorModelCode" tabindex="3" placeholder="Enter Motor Model Code" type="text" maxlength="100" />

                    </div>
                </div>  
                <div class="form-group col-md-4" style="display:none;">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="12" class="form-control"></select>
                    </div>
                </div>     
                <div class="form-group col-md-4">
                    <label for="chkstatus" class="col-sm-4 control-label">Active Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="4" />
                    </div>
                </div> 
               
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="5" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="5" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        <a class="btn btn-success" id="btnReset" tabindex="8" href="@Url.Content("~/ChasisModel/AddEditChasisModel")">Reset</a>                         
                        <a class="btn btn-success" id="btnList" tabindex="9" href="@Url.Content("~/ChasisModel/ListChasisModel")">Search Chasis Model</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" tabindex="6" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" tabindex="7" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" tabindex="7" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/ChasisModel/AddChasisModel.js"></script>
