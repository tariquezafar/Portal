@model List<Portal.Core.ViewModel.HR_CTCViewModel>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }

    table tr:nth-child(2n+1) {
        background-color: #dff0d8;
    }

    table tr:nth-child(2n) {
        background-color: #dff0d8;
    }
</style>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblCTCList">
            <thead>
                <tr>
                    <th>Designation</th> 
                    <th>Basic</th> 
                    <th>HRA Percentage</th> 
                    <th>HRA Amount</th> 
                    <th>Conveyance</th> 
                    <th>Medical Allowance</th> 
                    <th>Child Edu Allowance</th> 
                    <th>LTA</th> 
                    <th>Special Allowance</th> 
                    <th>Other Allowance</th> 
                    <th>Professional Tax</th> 
                    <th>Net Salary</th> 
                    <th>Employee PF</th> 
                    <th>Employee ESI</th> 
                    <th>Employer PF</th> 
                    <th>Employer ESI</th> 
                    <th>Monthly CTC</th> 
                    <th>Yearly CTC</th> 
                    <th>Created By User</th>
                    <th>Created Date</th>
                    <th>Modified By User</th>
                    <th>Modified Date</th>
                    <th>Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.DesignationName</td> 
                        <td>@item.Basic</td>
                        <td>@item.HRAPerc</td>
                        <td>@item.HRAAmount</td>
                        <td>@item.Conveyance</td>
                        <td>@item.Medical</td>
                        <td>@item.ChildEduAllow</td>
                        <td>@item.LTA</td>
                        <td>@item.SpecialAllow</td>
                        <td>@item.OtherAllow</td>
                        <td>@item.ProfessionalTax</td>
                        <td>@item.NetSalary</td>
                        <td>@item.EmployeePF</td>
                        <td>@item.EmployeeESI</td>
                        <td>@item.EmployerPF</td>
                        <td>@item.EmployerESI</td>
                        <td>@item.MonthlyCTC</td>
                        <td>@item.YearlyCTC</td> 
                        <td>@item.CreatedByName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByName</td>
                        <td>@item.ModifiedDate</td>
                        <td>@(item.CTC_Status == true?"Active":"Inactive")</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white;text-decoration:none" title="View" class="fa fa-eye" aria-hidden="true" href="~/CTCType/AddEditCTC?CTCId=@item.CTCId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white;text-decoration:none" title="Edit" class="fa fa-pencil-square-o" href="~/CTCType/AddEditCTC?CTCId=@item.CTCId&AccessMode=2"></a>
                        </td>

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblCTCList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>