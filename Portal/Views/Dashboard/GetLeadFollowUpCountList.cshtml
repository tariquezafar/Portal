@model List<Portal.Core.ViewModel.LeadFollowUpCountViewModel>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table" id="tblLeadSourceCountList" style="margin-top:10px;">
            <thead style="border-top-left-radius:15px;">
                <tr style="border:none;">
                    <th style="background:#68ae00; color:#fff;width:100%;" colspan="5">Lead Follow Up Timeline</th>
                   
                </tr>
                <tr style="background:#D0DDEC; border:1px solid #ccc;">
                    <th>Follow-Up Activity</th>
                    <th>Today</th>
                    <th>Tomorrow</th>
                    <th>7 Days</th>
                    <th>30 Days</th>
                </tr>
               
            </thead>
            <tbody style="border:1px solid #ccc;">
                @foreach (var item in Model)
                {
                <tr class="success">
                    <td>@item.FollowUpActivityTypeName</td>
                    <td>@item.TodayCount</td>
                    <td>@item.TommorowCount</td>
                    <td>@item.WeekCount</td>
                    <td>@item.MonthCount</td>
                </tr>
                }
            </tbody>
            <tfoot style="border:1px solid #ccc;">
                <tr class="active">
                    <th>Total Follow-Up Activity</th>
                    <th>@Model.Sum(x => x.TodayCount)</th>
                    <th>@Model.Sum(x => x.TommorowCount)</th>
                    <th>@Model.Sum(x => x.WeekCount)</th>
                    <th>@Model.Sum(x => x.MonthCount)</th>
                </tr>
            </tfoot>
        </table>
    </div>

}
else
{
    <h3 style="color:firebrick;text-align:center">Lead Follow Up Data not updated</h3>
}
