@model List<Portal.Core.ViewModel.PurchaseIndentViewModel>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table int-product" id="tblSINPendingCountList" style="margin-top:10px;">
            <thead style="border-top-left-radius:15px;">
                <tr style="border:none;">
                    <th style="background:#4f75c6; color:#fff;" colspan="8">Indent Pending For PO</th>
                </tr>
                <tr style="background:#D0DDEC; border:1px solid #ccc;">
                    <th style="text-align:center">Indent No.</th>
                    <th style="text-align:center">Indent Date</th>                   
                    <th style="text-align:center">Created By User</th>                    
                </tr>

            </thead>
            <tbody style="border:1px solid #ccc;">
                @foreach (var item in Model)
                {
                    <tr class="success">
                       
                        <td align="center">@item.IndentNo </td>                       
                       
                        <td align="center">@item.IndentDate</td>
                        <td align="center">@item.CreatedByUserName</td>

                    </tr>
                }
                <tr>
                    <td colspan="8" align="center" style="background:#bfdfff;">
                        <a href="@Url.Content("~/PurchaseIndent/ListPurchaseIndent?pendingStatus=Pending")"  target="_blank">View All Pending Indent</a>
                        
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

}
else
{
    <h3 style="color:firebrick;text-align:center">Indents Not Found !!!</h3>
}
