@model List<Portal.Core.ViewModel.EmployeeClaimApplicationViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<script src="~/Scripts/paging.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table" id="tblClaimApplicationList">
            <thead>
                <tr>
                    <th>Application No</th>
                    <th>Application Date</th>
                    <th>Claim Type</th>
                    <th>Claim Reason</th>
                    <th>Claim Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.ClaimStatus == "Draft")
                            {
                               <a href='../EmployeeClaimApplication/AddEditEmployeeClaimApplication?applicationId=@item.ApplicationId&accessMode=2&essEmployeeId=@item.EmployeeId&essEmployeeName=@item.EmployeeName' id="lnkLeaveApplicationNo" target="_blank">@item.ApplicationNo</a>
                            }
                            else
                            {
                                <a href='../EmployeeClaimApplication/AddEditEmployeeClaimApplication?applicationId=@item.ApplicationId&accessMode=3&essEmployeeId=@item.EmployeeId&essEmployeeName=@item.EmployeeName' id="lnkLeaveApplicationNo" target="_blank">@item.ApplicationNo</a>
                            }
                        </td>
                        <td>
                            @item.ApplicationDate
                        </td>
                        <td>
                            @item.ClaimTypeName
                        </td>
                        <td>
                            @item.ClaimReason
                        </td>
                        <td>
                            <center><span class="label label-success">@item.ClaimStatus</span></center> 
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}

