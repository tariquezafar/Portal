@model List<Portal.Core.GateInViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
        color: #fff;
    }

    .achr {
        text-decoration: none;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table table-bordered table-hover" id="tblChallanList">
            <thead>
                <tr aling="center" style="background:rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;">
                    <th>Action</th>
                    <th>GateIn No.</th>
                    <th>GateIn Date</th>
                    <th>PO No.</th>
                    <th>PO Date</th>
                    <th>Vendor Name</th>
                    <th>Shipping City</th>
                    <th>Shipping State</th>
                    <th>Dispatch Ref. No.</th>
                    <th>Dispatch Ref. Date</th>
                    <th>GateIn Status</th>
                    <th>Created By</th>
                    <th>Created Date</th>
                    <th>Modified By</th>
                    <th>Modified Date</th>
                    <th>Company Branch</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="margin:0px auto;">
                            <a style="color:darkblue; text-decoration:none;" class="fa fa-eye" aria-hidden="true" title="View" href="~/GateIn/AddEditGateIn?gateInId=@item.GateInId&AccessMode=3"></a>
                            @if (item.ApprovalStatus.ToUpper() == "DRAFT")
                            {
                                <a style="color:darkgreen;text-decoration:none;" class="fa fa-pencil achr" title="Edit" href="~/GateIn/AddEditGateIn?gateInId=@item.GateInId&AccessMode=2"></a>
                            }
                            @*@if (item.ApprovalStatus.ToUpper() == "DRAFT" || item.ApprovalStatus.ToUpper() == "FINAL")
                            {
                                <a style="color:red" title="Cancel" class="fa fa-times" aria-hidden="true" href="~/GateIn/CancelMRN?mrnId=@item.MRNId&AccessMode=2"></a>
                            }*@

                        </td>
                        <td>@item.GateInNo</td>
                        <td>@item.GateInDate</td>
                        <td>@item.PONo</td>
                        <td>@item.PODate</td>
                        <td>@item.VendorName</td>
                        <td>@item.ShippingCity</td>
                        <td>@item.ShippingStateName</td>
                        <td>@item.DispatchRefNo</td>
                        <td>@item.DispatchRefDate</td>

                        @if (item.ApprovalStatus.ToUpper() == "DRAFT")
                        {
                            <td style="background-color:aquamarine">
                                @item.ApprovalStatus
                            </td>
                        }
                        @*else if (item.ApprovalStatus.ToUpper() == "CANCELLED")
                        {
                            <td style="background-color:red;color:white;">
                                @item.ApprovalStatus
                            </td>
                        }*@
                        else
                        {
                            <td style="background-color:green">
                                @item.ApprovalStatus
                            </td>

                        }

                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td>
                        <td>@item.CompanyBranchName</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblChallanList').paging({
            limit: 25,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>