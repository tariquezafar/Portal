@model List<Portal.Core.ViewModel.QuotationViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table {
    width: 111% !important;
    max-width: 111% !important;
    margin-bottom: 20px;
}
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblSearchQuotationList">
            <thead>
                <tr>
                    <th align="center">Select</th>
                    <th>Quotation No.</th>
                    <th>Quotation Date</th>
                    <th>Customer Name</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Ref. No.</th>
                    <th>Ref. Date</th>
                    <th>Gross Amount</th>
                    <th>Net Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="#" onclick="SelectQuotation('@item.QuotationId','@item.QuotationNo','@item.QuotationDate','@item.CustomerId','@item.CustomerCode','@item.CustomerName')"></a>
                        </td>
                        <td>@item.QuotationNo
                        <input type="hidden" id="hdnSearchQuotationNo" value="@item.QuotationNo" />
                        </td>
                        <td>@item.QuotationDate
                            <input type="hidden" id="hdnSearchQuotationDate" value="@item.QuotationNo" />
                        </td>
                        <td>@item.CustomerName</td>
                        <td>@item.City</td>
                        <td>@item.StateName</td>
                        <td>@item.RefNo</td>
                        <td>@item.RefDate</td>
                        <td>@item.BasicValue</td>
                        <td>@item.TotalValue</td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblSearchQuotationList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>