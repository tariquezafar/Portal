@model List<Portal.Core.ViewModel.ScheduleViewModel>


<script src="~/Scripts/jquery.tablesorter.js"></script>

@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table table-bordered table-hover" id="tblGLMainGroupList">
            <thead>
                <tr aling="center"  style="background:rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;text-align:center!important;color:#fff!important;">
                    <th colspan="2">Action</th>
                    <th>Schedule Name</th>     
                    <th>Schedule No</th>              
                    <th>Created By User</th>
                    <th>Created Date</th>
                    <th>Status</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/Schedule/AddEditSchedule?ScheduleId=@item.ScheduleId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a style="color:darkgreen" class="fa fa-pencil" href="~/Schedule/AddEditSchedule?ScheduleId=@item.ScheduleId&AccessMode=2"></a>
                        </td>
                        <td>@item.ScheduleName</td> 
                        <td>@item.ScheduleNo</td>                      
                        <td>@item.CreatedName</td>
                        <td>@item.CreatedDate</td>
                        <td>@(item.Schedule_Status == true ? "Active" : "Inactive")</td>
                        

                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblGLMainGroupList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>