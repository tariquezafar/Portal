@{
    ViewBag.Title = "List ProductMainGroup";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> List Product Main Group </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductMainGroup" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtProductMainGroupName" class="col-sm-4 control-label">Product Main Group Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductMainGroupName" tabindex="1" name="txtProductMainGroupName" placeholder="Search with Product Main Group Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtProductMainGroupCode" class="col-sm-4 control-label">Product Main Group Code</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductMainGroupCode" name="txtProductMainGroupCode" tabindex="2" placeholder="Search With Product Main Group Code" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select name="ddlStatus" class="form-control" tabindex="3" id="ddlStatus">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
            </div>

                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" tabindex="4" onclick="SearchProductMainGroup()" type="button" border="0">
                                <input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields()" value="Reset" /> 
                                <a class="btn btn-success" id="btnList" tabindex="6" href="@Url.Content("~/ProductMainGroup/AddEditProductMainGroup?accessMode=1")">Add More Product Main Group</a>
                            </center>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div id="divList" style="margin:50px;margin-top:10px">

                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/ProductMainGroup/ListProductMainGroup.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>