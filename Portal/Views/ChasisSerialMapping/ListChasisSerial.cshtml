@{
    ViewBag.Title = "List Product";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<style>
   .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
<link href="~/Content/lightbox.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/StoreDashboard">Production</a> >> List Product </b></p></div>
</div>
<section>
    <form action="#" id="frmListProduct" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtProductName" class="col-sm-4 control-label">Product Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductName" name="txtProductName" tabindex="1" placeholder="Search with Product Name" type="text" maxlength="100" />
                        <input id="hdnProductId" type="hidden" value="0" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" /> 
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtChasisSerialNo" class="col-sm-4 control-label">Chasis Serial No</label>
                    <div class="col-sm-8">
                        <input id="txtChasisSerialNo" name="txtChasisSerialNo" tabindex="2" type="text" placeholder="Search with Chasis Serial No" maxlength="50" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtMotorNo" class="col-sm-4 control-label">Motor No</label>
                    <div class="col-sm-8">
                        <input id="txtMotorNo" name="txtMotorNo" type="text" tabindex="3" placeholder="Search with Motor No" maxlength="100" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtControllerNo" class="col-sm-4 control-label">Controller No</label>
                    <div class="col-sm-8">
                        <input id="txtControllerNo" name="txtControllerNo" type="text" tabindex="4" placeholder="Search with Controller No" maxlength="250" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="12" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlSerialStatus" class="col-sm-4 control-label">Serial Status</label>
                    <div class="col-sm-8">
                        <select id="ddlSerialStatus" name="ddlSerialStatus" tabindex="12" class="form-control">
                            <option value="0">---Select Serial Status---</option>
                            <option value="TRANSFERRED">Transferred</option>
                            <option value="SOLD">Sold</option>
                        </select>
                    </div>
                </div>
                
            </div>

         <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="9" id="btnSearch" onclick="SearchChasisSerialMapping()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="10" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" tabindex="11" href="@Url.Content("~/ChasisSerialMapping/AddEditChasisSerialMapping?accessMode=1")">Add More Chasis Serial</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/ChasisSerialMapping/ListChasisSerialMapping.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>