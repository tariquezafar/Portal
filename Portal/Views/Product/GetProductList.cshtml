@model List<Portal.Core.ViewModel.ProductViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
   .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
 table tr:nth-child(2n+1) {
    
    background-color: #dff0d8;
    }

    table tr:nth-child(2n) {
        background-color: #dff0d8;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll;">
        <table class="table table-bordered table-hover" id="tblUserList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>Product Name</center></th>
                    <th><center>Online Product</center></th>
                    <th><center>Online Yes/No</center></th>
                    <th><center>Product Code</center></th>
                    <th><center>Local Name</center></th>
                    @*<th><center>Vendor Name</center></th>
                    <th><center>Vendor Code</center></th>*@
                    <th><center>Compatibility</center></th>
                    <th><center>Branch Name</center></th>
                    <th><center>Product Type</center></th>
                    <th><center>Product Main Group</center></th>
                    <th><center>Product Sub Group</center></th>
                    <th><center>HSN Code</center></th>
                    <th><center>Model Name</center></th>
                    <th><center>CC</center></th>
                    <th><center>Size</center></th>
                    <th><center>Length</center></th>
                    <th><center>Manufacturer</center></th>
                    <th><center>UOM</center></th>
                    <th><center>Re-Order Qty.</center></th>
                    <th><center>Product Status</center></th>
                    <th>Created By User</th>
                    <th>Created Date</th>
                    <th>Modified By User</th>
                    <th>Modified Date</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Product_Status==true)
                    {
                        <tr class="success">
                            <td class="teal text" style="width:30px; margin:0px auto;">
                                <a style="color:darkblue;text-decoration:none" title="View" class="fa fa-eye" aria-hidden="true" href="~/Product/AddEditProduct?ProductId=@item.Productid&AccessMode=3"></a>
                            </td>
                            <td class="teal text" style="width:30px; margin:0px 2px auto;">
                                <a style="color:darkgreen;text-decoration:none" title="Edit" class="fa fa-pencil" href="~/Product/AddEditProduct?ProductId=@item.Productid&AccessMode=2"></a>
                            </td>

                            <td align="center">@item.ProductName</td>
                            <td class="btn btn-success table_btn editonly" style="width:30px; margin:0px 2px auto;">
                                <a style="color:white" class="fa fa-pencil-square-o" onclick="UpdateOnlineCode(@item.Productid);" ></a>
                             
                            </td>
                            <td>@(item.OnlineProduct == true ? "Yes" : "NO")</td>
                            <td align="center">@item.ProductCode</td>
                            <td align="center">@item.LocalName</td>
                            @*<td align="center">@item.VendorName</td>
                            <td align="center">@item.VendorCode</td>*@
                            <td align="center">@item.Compatibility</td>
                            <td align="center">@item.CompanyBranchName</td>
                            <td align="center">@item.ProductTypeName</td>
                            <td align="center">@item.ProductMainGroupName</td>
                            <td align="center">@item.ProductSubGroupName</td>
                            <td align="center">@item.HSN_Code</td>
                            <td align="center">@item.ModelName</td>
                            <td align="center">@item.CC</td>
                            <td align="center">@item.SizeDesc</td>
                            <td align="center">@item.Length</td>
                            <td align="center">@item.ManufacturerName</td>
                            <td align="center">@item.UOMName</td>
                            <td align="center">@item.ReOrderQty</td>
                            <td align="center">@(item.Product_Status == true ? "Active" : "Inactive")</td>
                            <td>@item.CreatedByName</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.ModifiedByName</td>
                            <td>@item.ModifiedDate</td>

                        </tr>
                    }
                    else
                    {
                        <tr class="danger">
                            <td class="teal text" style="width:30px; margin:0px auto;">
                                <a style="color:darkblue" class="fa fa-eye" aria-hidden="true" href="~/Product/AddEditProduct?ProductId=@item.Productid&AccessMode=3"></a>
                            </td>
                            <td class="teal text" style="width:30px; margin:0px 2px auto;">
                                <a style="color:darkgreen" class="fa fa-pencil" href="~/Product/AddEditProduct?ProductId=@item.Productid&AccessMode=2"></a>
                            </td>

                            <td align="center">@item.ProductName</td>
                            <td align="center">@item.ProductCode</td>
                            <td align="center">@item.ProductTypeName</td>
                            <td align="center">@item.ProductMainGroupName</td>
                            <td align="center">@item.ProductSubGroupName</td>
                            <td align="center">@item.SizeDesc</td>
                            <td align="center">@item.Length</td>
                            <td align="center">@item.ManufacturerName</td>
                            <td align="center">@item.UOMName</td>
                            <td align="center">@item.ReOrderQty</td>
                            <td align="center">@(item.Product_Status == true ? "Active" : "Inactive")</td>
                            <td>@item.CreatedByName</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.ModifiedByName</td>
                            <td>@item.ModifiedDate</td>

                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblUserList').paging({
            limit: 25,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>