@{
    ViewBag.Title = "List Product";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<style>
    .table {
        width: 121%;
        max-width: 121%;
        margin-bottom: 20px;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> List Product Reorder Quantity </b></p></div>
</div>
<section>
    <form action="#" id="frmListProduct" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtProductName" class="col-sm-4 control-label">Product Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductName" name="txtProductName" tabindex="1" placeholder="Search with Product Name" type="text" maxlength="100" />
                        <input id="hdnPendingStatus" type="hidden" value="@ViewData["pendingStatus"]" />
                        <input id="hdnCustomerId" type="hidden" value="0" />
                        <input id="hdnCustomerBranchId" type="hidden" value="0" />
                        <input id="hdnCompanyBranch" type="hidden" value="10004" />
                        <input id="hdnIndentByUserId" type="hidden" value="@ViewData["indentByUser"]" />
                        <input id="hdnCurrentDate" type="hidden" value="@ViewData["currentDate"]" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtProductCode" class="col-sm-4 control-label">Product Code</label>
                    <div class="col-sm-8">
                        <input id="txtProductCode" name="txtProductCode" tabindex="2" type="text" placeholder="Search with Product Code" maxlength="50" class="form-control" />
                    </div>
                </div>
          
                <div class="form-group col-md-4">
                    <label for="txtProductShortDesc" class="col-sm-4 control-label">Product Short Desc</label>
                    <div class="col-sm-8">
                        <input id="txtProductShortDesc" name="txtProductShortDesc" type="text" tabindex="3" placeholder="Search with Product Short Description" maxlength="100" class="form-control" />
                    </div>
                </div>

             
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtProductFullDesc" class="col-sm-4 control-label">Product Full Desc</label>
                    <div class="col-sm-8">
                        <input id="txtProductFullDesc" name="txtProductFullDesc" type="text" tabindex="4" placeholder="Search with Product Full Description" maxlength="250" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-4 " style="display:none;">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="10"  class="form-control"></select> 
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                      
                    </div>
                </div>
            </div>
      <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="9" id="btnSearch" onclick="SearchProductReorder()" type="button" border="0">
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="10" onclick="ClearFields()" value="Reset" /> 
                        <input class="btn btn-success" value="Raise Indent" alt="Indent" id="btnSaveIndent" onclick="SaveData()" type="button" border="0"> 
                    </center>
                </div>
                <div class="col-md-3 text-right" style="display:none;">
                    <input class="btn btn-success" value="Export" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/Product/ListProduct.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>


