@{
    ViewBag.Title = "List Employee Loan Application";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }

    table tr:nth-child(2n+1) {
        background-color: #dbe5f7;
    }

    table tr:nth-child(2n) {
        background-color: #dbe5f7;
    }
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> List Employee Loan Application</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditEmployeeLoanApplication" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtApplicationNo" class="col-sm-4 control-label">Application No</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtApplicationNo" name="txtApplicationNo" tabindex="1" placeholder="Search with Application No." type="text" maxlength="100" />  
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtEmployee" class="col-sm-4 control-label">Employee</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployee" name="txtEmployee" tabindex="2"  placeholder="Search with Employee" type="text" maxlength="2" />
                        <input type="hidden" id="hdnEmployeeId" name="hdnEmployeeId" value="0" />
                    </div>
                </div>
           
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Application From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="5" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
                
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="6" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group  col-md-4">
                    <label for="ddlLoanStatus" class="col-sm-4 control-label">Loan Status</label>
                    <div class="col-sm-8">
                        <select id="ddlLoanStatus" name="ddlLoanStatus" tabindex="7" class="form-control">
                            <option value="0">--Status--</option>
                            <option value="Draft">Draft</option>
                            <option value="Final">Final</option>
                            
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlAdvanceType" class="col-sm-4 control-label">Loan Type Name</label>
                    <div class="col-sm-8">
                        <select id="ddlLoanType" name="ddlLoanType" tabindex="7" class="form-control"></select>
                    </div>
                </div>
            </div> 
           


            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="10" id="btnSearch" onclick="SearchEmployeeLoanApplication()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="11" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <input type="hidden" id="hdnEssEmployeeId" value="@ViewData["essEmployeeId"]" />
                        <input type="hidden" id="hdnEssEmployeeName" value="@ViewData["essEmployeeName"]" />
                        @*<a class="btn btn-success" id="btnList" tabindex="12" href="@Url.Content("~/EmployeeLoanApplication/AddEditEmployeeLoanApplication")">Add More Employee Loan Application</a>*@
                        @if (Convert.ToString(ViewData["essEmployeeId"]) != "0")
                        {
                            <a class="btn btn-success" id="btnList" tabindex="12" href="@Url.Action("AddEditEmployeeLoanApplication", new { essEmployeeId = ViewData["essEmployeeId"], essEmployeeName = ViewData["essEmployeeName"] })">Add More Employee Loan Application</a>
                        }
                        else
                        {
                            <a class="btn btn-success" id="btnList" tabindex="54" href=@Url.Content("~/EmployeeLoanApplication/AddEditEmployeeLoanApplication?accessMode=1")>Add More Employee Loan Application</a>
                        }
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/EmployeeLoanApplication/ListEmployeeLoanApplication.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>