@{
    ViewBag.Title = "List Lead";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/CRMDashboard">CRM </a> >> List Lead </b></p></div>
</div>
<section>
    <form action="#" id="frmListUser" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtLeadCode" class="col-sm-4 control-label">Lead Code</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtLeadCode" name="txtLeadCode" tabindex="1" placeholder="Search with Lead Code" type="text" maxlength="100" />
                        <input id="hdnLeadId" type="hidden" value="@ViewData["leadId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtContactPersoName" class="col-sm-4 control-label">Contact Person Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtContactPersoName" name="txtContactPersoName" tabindex="2" placeholder="Search with Contact Person Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtCompanyName" class="col-sm-4 control-label">Company Name </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCompanyName" name="txtCompanyName" tabindex="3" placeholder="Search with Company Name" type="text" maxlength="100" />
                    </div>
                </div>

            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtContactNo" class="col-sm-4 control-label">Contact No.</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtContactNo" name="txtContactNo" tabindex="4" placeholder="Search with Contact No" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtEmail" class="col-sm-4 control-label">Email</label>
                    <div class="col-sm-8">
                        <input class="form-control " id="txtEmail" name="txtEmail" tabindex="5" placeholder="Search with Email" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlLeadStatus" class="col-sm-4 control-label">Lead Status </label>
                    <div class="col-sm-8">
                        <select id="ddlLeadStatus" name="ddlLeadStatus" tabindex="6" class="form-control" style="width: 100%;height: 31px;"></select>
                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="txtAddress" class="col-sm-4 control-label">Address</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtAddress" name="txtAddress" tabindex="7" placeholder="Search with Company Address" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlLeadSource" class="col-sm-4 control-label">Lead Source </label>
                    <div class="col-sm-8">
                        <select id="ddlLeadSource" name="ddlLeadSource" tabindex="8" class="form-control" style="width: 100%;height: 31px;"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtCompanyCity" class="col-sm-4 control-label">Company City</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCompanyCity" name="txtCompanyCity" tabindex="9" placeholder="Search with Company City" type="text" maxlength="100" />
                    </div>
                </div>

            </div>

            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="ddlState" class="col-sm-4 control-label">Company State </label>
                    <div class="col-sm-8">
                        <select id="ddlState" name="ddlState" tabindex="10" class="form-control" style="width: 100%;height: 31px;"></select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlleadtype" class="col-sm-4 control-label">Lead Type</label>
                    <div class="col-sm-8">

                        <select name="ddlleadtype" id="ddlleadtype" onchange="HideShowTeamMember()" tabindex="11" class="form-control" style="width: 100%;height: 31px;">
                            @if (Session["IsAdmin"] != null && Convert.ToBoolean(Session["IsAdmin"]) == true)
                            {
                            <option value="0">--Select Lead Type--</option>
                            <option value="1">Self Lead(s)</option>
                            
                            }
                            <option value="2">Team Lead(s)</option>
                        </select>


                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                  
                    <div class="col-sm-8">
                        <select name="ddlStatus" id="ddlStatus" tabindex="12" class="form-control" style="width: 100%;height: 31px;">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
            </div>


            <div class="col-md-12">

                <div class="form-group col-md-4">
                    <label for="ddlleadtypeName" class="col-sm-4 control-label">Lead Type Name</label>
                    <div class="col-sm-8">

                        <select name="ddlleadtypeName" id="ddlleadtypeName" tabindex="13" class="form-control" style="width: 100%;height: 31px;">
                            
                        </select>


                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label for="ddlCompanyBranch" class="col-sm-4 control-label">Company Branch</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="46" onchange="GetBranchStateId()" class="form-control"></select>
                        <input id="hdnBillingStateId" type="hidden" value="0" />
                        <input id="hdnSessionCompanyBranchId" type="hidden" value="@ViewData["CompanyBranchId"]" />
                        <input id="hdnSessionUserID" type="hidden" value="@ViewData["UserId"]" />
                    </div>
                </div>

                <div class="form-group col-md-4">
                   
                    <div class="col-sm-8">
                        
                    </div>
                </div>
            </div>

            <div class="col-md-12" style="display:none" id="divTeamMember">
                <div class="form-group col-md-6">
                    <label for="ddlTeamUser" class="col-sm-4 control-label">Team Member</label>
                    <div class="col-sm-8">

                        <select name="ddlTeamUser" id="ddlTeamUser" tabindex="12" class="form-control" style="height: 31px;">
                        </select>


                    </div>
                </div>
                <div class="form-group col-md-6">
                    
                </div>
            </div>


            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" tabindex="14" alt="Save" id="btnSearch" onclick="SearchLead()" type="button" border="0">
                        <input class="btn btn-success" type="button" tabindex="15" id="btnReset" onclick="ClearFields()" value="Reset" />
                        <a class="btn btn-success" id="btnList" tabindex="16" href="@Url.Content("~/Lead/AddEditLead?accessMode=1")">Add More Lead</a>
                        <a class="btn btn-success" alt="Export" tabindex="17" id="btnExport" onclick="OpenPrintPopup();" border="0">Export</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">
                        
                </div>
            </div>
        </div>
        <!-- Modal -->

        <div class="modal fade" id="printModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Lead Report</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="ddlPrintOption" class="col-sm-4 control-label">Report Option</label>
                            <div class="col-sm-8">
                                <select id="ddlPrintOption" name="ddlPrintOption" onchange="ShowHidePrintOption()" tabindex="1" class="form-control">
                                    <option value="Excel">Excel</option>
                                    <option selected="selected" value="PDF">PDF</option>
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-success" target="_blank" href="#" id="btnPdf">Print</a>
                        <a class="btn btn-success" style="display:none;" target="_blank" href="#" id="btnExcel">Print</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

                    </div>
                </div>

            </div>
        </div>
        @*<div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                 Modal content
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>*@
    </form>
</section>
<script src="~/Scripts/Lead/ListLead.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>