@model List<Portal.Core.ViewModel.PurchaseQuotationViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;background-color:white;">
        <table class="table table-bordered table-hover" id="tblCountryList">
            <thead>
                <tr>
                    <th><center>Select</center></th>
                    <th><center>Quotation No.</center></th>
                    <th><center>Quotation Date</center></th>
                    <th><center>Indent No</center></th>
                    <th><center>Vendor Name</center></th>
                    <th><center>Ref. No.</center></th>
                    <th><center>Ref. Date</center></th>
                   
                   
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">

                        <td style="width:30px; margin:0px 2px auto;">
                            <a class="fa fa-pencil-square-o erp-btn" href="#" onclick="SelectQuotation('@item.QuotationId','@item.QuotationNo','@item.QuotationDate','@item.RequisitionId','@item.RequisitionNo','@item.RequisitionDate','@item.VendorName','@item.VendorId')"></a>
                        </td>
                        <td>@item.QuotationNo</td>
                        <td>@item.QuotationDate</td>
                        <td>@item.RequisitionNo</td>
                        <td>@item.VendorName</td>
                        <td>@item.RefNo</td>
                        <td>@item.RefDate</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblCountryList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>