@model List<Portal.Core.ViewModel.SaleInvoiceProductSerialDetailViewModel>
@if (Model != null && Model.Count > 0)
{
    
        <table class="table" style="width:100%!important" id="tblProductSerialDetail">
            <thead>
                <tr align="center">
                    <th>Product Name</th>
                    <th>Chasis Serial No.</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">

                        <td >
                            @item.ProductName
                            <input type="hidden" id="hdnProductId" value="@item.ProductId" />
                            <input type="hidden" id="hdnProductName" value="@item.ProductName" />

                        </td>

                        <td>
                            @item.RefSerial1
                            <input type="hidden" id="hdnRefSerial1" value="@item.RefSerial1" />
                        </td>

                        <td>
                            <a  class="fa fa-trash" onclick="RemoveProductSerialRow(this)" href="#"></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
  
}
else
{
    
        <table class="table" id="tblProductSerialDetail">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Chasis Serial No</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
 
}

