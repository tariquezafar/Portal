@model List<Portal.Core.ViewModel.DashboardContainerViewModel >
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table table-bordered table-hover" id="tblDashboardcontainerList">
            <thead>
                <tr aling="center"  style="background:rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;">
                    <th colspan="2">Action</th>
                    <th>Dashboard Container Name</th> 
                    <th>Dashboard Container Display Name</th> 
                    <th>Container No.</th> 
                    <th>Total Items in Container</th>                                          
                    <th>ModuleName</th>                                          
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="width:30px; margin:0px auto;">
                            <a style="color:darkblue;text-decoration:none" title="View" class="fa fa-eye" aria-hidden="true" href="~/DashboardContainer/AddEditDashBoardContainer?DashboardContainterID=@item.DashboardContainterID&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="width:30px; margin:0px 2px auto;">
                            <a style="color:darkgreen;text-decoration:none" title="Edit" class="fa fa-pencil" href="~/DashboardContainer/AddEditDashBoardContainer?DashboardContainterID=@item.DashboardContainterID&AccessMode=2"></a>
                        </td>                         
                        <td>@item.ContainerName</td>  
                        <td>@item.ContainerDisplayName</td> 
                        <td>@item.ContainterNo</td> 
                        <td>@item.TotalItem</td>
                        <td>@item.ModuleName</td>                          
                        
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblDashboardcontainerList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>