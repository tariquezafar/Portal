@{
    ViewBag.Title = "List Exit Interview";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> List Exit Interview</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditExitInterview" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-4">
                    <label for="txtExitInterviewNo" class="col-sm-4 control-label">Exit Interview No.</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtExitInterviewNo" name="txtExitInterviewNo" tabindex="1" placeholder="Search with Exit Interview No." type="text" maxlength="100" />  
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtEmployee" class="col-sm-4 control-label">Employee</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtEmployee" name="txtEmployee" tabindex="2" placeholder="Search with Employee" type="text" maxlength="2" />
                        <input type="hidden" id="hdnEmployeeId" name="hdnEmployeeId" value="0" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="ddlSeparationApplication" class="col-sm-4 control-label">Application</label>
                    <div class="col-sm-8">
                        <select id="ddlSeparationApplication" name="ddlSeparationApplication" tabindex="3" class="form-control"></select>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group  col-md-4">
                    <label for="txtInterviewByUser" class="col-sm-4 control-label">Interview By User</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtInterviewByUser" name="txtInterviewByUser" tabindex="4" placeholder="Enter Interview By User" type="text" maxlength="1000" />
                        <input type="hidden" id="hdnInterviewByUserId" name="hdnInterviewByUserId" value="0" />
                    </div> 
                </div>
                    <div class="form-group  col-md-4">
                        <label for="ddlInterviewStatus" class="col-sm-4 control-label">Application Status</label>
                        <div class="col-sm-8">
                            <select id="ddlInterviewStatus" name="ddlInterviewStatus" tabindex="5" class="form-control">
                                <option value="">--All--</option>
                                <option value="Final">Final</option>
                                <option value="Draft">Draft</option>
                            </select>
                        </div>
                    </div>
                <div class="form-group col-md-4">
                    <label for="txtFromDate" class="col-sm-4 control-label">Exit Interview From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="6" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
                </div>

            <div class="col-md-12">
              
                <div class="form-group col-md-4">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="7" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
            </div>
            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="8" id="btnSearch" onclick="SearchExitInterview()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="9" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" tabindex="10" href="@Url.Content("~/ExitInterview/AddEditExitInterview?accessMode=1")">Add More Exit Interview</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
 
<script src="~/Scripts/ExitInterview/ListExitInterview.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>