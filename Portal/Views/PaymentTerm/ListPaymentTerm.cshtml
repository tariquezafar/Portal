@{
    ViewBag.Title = "List PaymentTerm";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AccountDashboard">Account</a> >> List Payment Term </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditPaymentTerm" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div>
            <div class="col-md-6 ftop">
                <div class="form-group">
                    <label for="txtPaymentTermDesc" class="col-sm-4 control-label">Payment Term Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtPaymentTermDesc" name="txtPaymentTermDesc" tabindex="1" placeholder="Search with Payment Term Name" type="text" maxlength="100" />
                    </div>
                </div>
            </div>
            <div class="col-md-6 ftop">
                <div class="form-group">
                    <label for="selstatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-3">
                        <select name="ddlStatus" tabindex="2" class="form-control" id="ddlStatus">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="3" id="btnSearch" onclick="SearchPaymentTerm()" type="button" border="0">
                        
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="4" onclick="ClearFields()" value="Reset" /> 
                        <a class="btn btn-success" id="btnList" tabindex="5" href="@Url.Content("~/PaymentTerm/AddEditPaymentTerm?accessMode=1")">Add More Payment Term</a>
                        <input class="btn btn-success" value="Export" alt="Export" tabindex="6" id="btnExport" onclick="Export()" type="button" border="0">
                    </center>
                </div>
               
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList" style="margin:20px;margin-top:10px;">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/PaymentTerm/ListPaymentTerm.js"\></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>