@{
    ViewBag.Title = "Add GoalCategory";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR</a> >> Add/Edit Goal Category </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditGoalCategory" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtGoalCategoryName" class="col-sm-4 control-label">Goal Category Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtGoalCategoryName" name="txtGoalCategoryName" tabindex="1" placeholder="Enter Goal Category Name" type="text" maxlength="100" />
                        <input id="hdngoalCategoryId" type="hidden" value="@ViewData["goalCategoryId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>

                 
                <div class="form-group col-md-6">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="2" />
                    </div>
                </div>
              
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtWeight" class="col-sm-4 control-label">Weightage(%)&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtWeight" name="txtWeight" tabindex="3" placeholder="Enter the Weight" type="text" maxlength="100" onkeyup="checkDec(this)" />
                    </div>
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="4" onclick="SaveData(1)" type="button" border="0"> 
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="4" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0"> 
                        @*<input class="btn btn-success" type="button" id="btnReset" tabindex="5" onclick="ClearFields()" value="Reset" />*@            
                        <a class="btn btn-success" id="btnReset" tabindex="5" href="@Url.Content("~/PMSGoalCategory/AddEditGoalCategoryType")">Reset</a>
                          <a class="btn btn-success" id="btnList" tabindex="6" href="@Url.Content("~/PMSGoalCategory/ListGoalCategoryType")">Search Goal Category</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/PMSGoalCategory/AddGoalCategory.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>